@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu?";
}

<style>
    :root {
        --panel: #020617;
        --panel-soft: #040b1f;
        --indigo: #3b5ccc;
        --purple: #7c3aed;
        --accent: #ffd54d;
        --text: #e5e7f5;
        --muted: #9ca3c7;
        --line: rgba(148, 163, 255, .35);
    }

    /* Toast - Now positioned below button */
    .auth-toast {
        position: relative;
        margin-top: 16px;
        padding: 12px 14px;
        border-radius: 14px;
        background: #0b1227;
        border: 1px solid rgba(148,163,255,.45);
        color: var(--text);
        box-shadow: 0 14px 40px rgba(15,23,42,.8);
        display: none;
    }
    .auth-toast.show { display: block; }
    .auth-toast.auth-toast-error {
        border-color: rgba(248,113,113,.65);
        box-shadow: 0 14px 40px rgba(248,113,113,.25);
    }
    .auth-toast.auth-toast-success {
        border-color: rgba(74,222,128,.65);
        box-shadow: 0 14px 40px rgba(74,222,128,.25);
    }
    .auth-toast.auth-toast-info {
        border-color: rgba(148,163,255,.65);
    }

    .fp-shell {
        min-height: calc(100vh - 140px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 16px 60px;
    }

    .fp-card {
        width: 100%;
        max-width: 640px;
        border-radius: 28px;
        background:
            radial-gradient(circle at 0 0, rgba(59, 130, 246, .35), transparent 55%),
            radial-gradient(circle at 100% 0, rgba(162, 28, 175, .28), transparent 55%),
            linear-gradient(145deg, #020617, #020617);
        border: 1px solid rgba(148, 163, 255, .45);
        box-shadow:
            0 22px 60px rgba(15, 23, 42, .95),
            0 0 0 1px rgba(15, 23, 42, .85);
        padding: 28px 32px 26px;
        color: var(--text);
    }

    .fp-title {
        font-size: 26px;
        font-weight: 900;
        margin-bottom: 4px;
    }

    .fp-subtitle {
        font-size: 13px;
        color: var(--muted);
        margin-bottom: 22px;
    }

    .form-label {
        font-size: 13px;
        font-weight: 600;
        color: #cfd6ff;
        margin-bottom: 6px;
    }

    .cine-input {
        width: 100%;
        font-size: 14px;
        padding: 11px 14px;
        border-radius: 14px;
        border: 1px solid var(--line);
        background: radial-gradient(circle at 0 0, rgba(15, 23, 42, .9), rgba(2, 6, 23, 1));
        color: var(--text);
        outline: none;
        transition: border-color .18s ease, box-shadow .18s ease, background-color .18s ease;
    }

        .cine-input::placeholder {
            color: #6b7280;
            font-size: 13px;
        }

        .cine-input:focus {
            border-color: var(--indigo);
            box-shadow: 0 0 0 1px rgba(59, 92, 204, .7), 0 0 0 6px rgba(37, 99, 235, .35);
            background: radial-gradient(circle at 0 0, rgba(15, 23, 42, 1), rgba(2, 6, 23, 1));
        }

        .cine-input:read-only {
            opacity: 0.7;
            cursor: not-allowed;
        }

        .cine-input:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    .field-row {
        margin-bottom: 16px;
    }

    .field-row-inline {
        display: flex;
        gap: 10px;
        align-items: flex-end;
        margin-bottom: 8px;
    }

    .otp-input-wrap {
        flex: 1 1 auto;
    }

    .btn-otp {
        flex: 0 0 auto;
        min-width: 120px;
        border-radius: 14px;
        border: none;
        padding: 10px 16px;
        font-size: 13px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: .05em;
        background: linear-gradient(135deg, #facc15, #f97316);
        color: #111827;
        box-shadow: 0 10px 30px rgba(250, 204, 21, .45);
        transition: filter .18s ease, transform .1s ease, box-shadow .18s ease;
        cursor: pointer;
    }

        .btn-otp:hover:enabled {
            filter: brightness(1.06);
            transform: translateY(-1px);
            box-shadow: 0 14px 32px rgba(250, 204, 21, .55);
        }

        .btn-otp:disabled {
            opacity: .65;
            cursor: not-allowed;
            box-shadow: none;
        }

    .otp-hint {
        font-size: 12px;
        color: var(--muted);
        min-height: 18px;
        margin-bottom: 4px;
    }

    .success-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 12px;
        color: #10b981;
        margin-top: 4px;
    }

    .links-row {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 12px;
        font-size: 13px;
    }

    .links-row a {
        color: #93c5fd;
        text-decoration: none;
    }

        .links-row a:hover {
            text-decoration: underline;
        }

    .text-danger {
        font-size: 12px;
        color: #f87171;
    }

    @@media (max-width: 575.98px) {
        .fp-card {
            padding-inline: 18px;
        }

        .field-row-inline {
            flex-direction: column;
            align-items: stretch;
        }

        .btn-otp {
            min-width: unset;
        }
    }
</style>

<div class="fp-shell">
    <div class="fp-card">
        <h1 class="fp-title">Quên mật khẩu?</h1>
        <div class="fp-subtitle">Nhập email của bạn và xác nhận mã OTP để đặt lại mật khẩu.</div>

        <form id="forgotPasswordForm">
            @Html.AntiForgeryToken()
            
            <div class="field-row">
                <label for="emailInput" class="form-label">Email</label>
                <input type="email" 
                       id="emailInput" 
                       class="cine-input" 
                       placeholder="name@example.com" 
                       required />
                <span id="emailError" class="text-danger"></span>
            </div>

            <div class="field-row-inline">
                <div class="otp-input-wrap">
                    <label for="otpInput" class="form-label">Mã xác nhận</label>
                    <input type="text" 
                           id="otpInput" 
                           class="cine-input" 
                           placeholder="Nhập mã xác nhận gồm 6 chữ số" 
                           maxlength="6"
                           disabled
                           required />
                    <span id="otpError" class="text-danger"></span>
                    <div id="otpSuccess" class="success-badge" style="display: none;">
                        ✓ Mã xác nhận hợp lệ
                    </div>
                </div>

                <button type="button" 
                        id="btnSendOtp" 
                        class="btn-otp">
                    Gửi mã
                </button>
            </div>

            <div class="otp-hint">
                <span id="otpStatus"></span>
            </div>

            <!-- Toast container - Now below the Send OTP button -->
            <div id="authToast" class="auth-toast"></div>

            <div class="links-row">
                <a asp-page="./Login">Quay lại đăng nhập</a>
                <a asp-page="./Register">Tạo tài khoản mới</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const emailInput = document.getElementById('emailInput');
            const otpInput = document.getElementById('otpInput');
            const btnSendOtp = document.getElementById('btnSendOtp');
            const otpStatus = document.getElementById('otpStatus');
            const emailError = document.getElementById('emailError');
            const otpError = document.getElementById('otpError');
            const otpSuccess = document.getElementById('otpSuccess');
            const authToast = document.getElementById('authToast');
            const form = document.getElementById('forgotPasswordForm');

            let countdownSeconds = 0;
            let countdownInterval = null;
            let otpSent = false;

            // Toast helper
            function showToast(message, type) {
                authToast.textContent = message;
                authToast.className = 'auth-toast show auth-toast-' + type;
                setTimeout(function() {
                    authToast.classList.remove('show');
                }, 4000);
            }

            // Clear errors
            function clearErrors() {
                emailError.textContent = '';
                otpError.textContent = '';
            }

            // Validate email
            function isValidEmail(email) {
                return /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/.test(email);
            }

            // Start countdown
            function startCountdown(seconds) {
                countdownSeconds = seconds;
                btnSendOtp.disabled = true;
                
                clearInterval(countdownInterval);
                countdownInterval = setInterval(function() {
                    if (countdownSeconds <= 0) {
                        clearInterval(countdownInterval);
                        btnSendOtp.disabled = false;
                        btnSendOtp.textContent = 'Gửi lại mã';
                        otpStatus.textContent = 'Bạn có thể gửi lại mã.';
                        return;
                    }
                    btnSendOtp.textContent = 'Gửi lại (' + countdownSeconds + 's)';
                    countdownSeconds--;
                }, 1000);
            }

            // Send OTP
            btnSendOtp.addEventListener('click', function (e) {
                e.preventDefault();
                clearErrors();

                const email = emailInput.value.trim();
                if (!email) {
                    emailError.textContent = 'Vui lòng nhập email.';
                    showToast('Vui lòng nhập email.', 'error');
                    return;
                }

                if (!isValidEmail(email)) {
                    emailError.textContent = 'Email không hợp lệ.';
                    showToast('Email không hợp lệ.', 'error');
                    return;
                }

                btnSendOtp.disabled = true;
                btnSendOtp.textContent = 'Đang gửi...';

                $.ajax({
                    url: '?handler=SendOtp',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ email: email }),
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(result) {
                        if (result.success) {
                            otpSent = true;
                            showToast('Đã gửi mã xác nhận tới ' + email, 'success');
                            otpStatus.textContent = 'Đã gửi mã xác nhận tới ' + email;
                            startCountdown(result.countdown || 30);
                            
                            emailInput.setAttribute('readonly', 'readonly');
                            otpInput.disabled = false;
                            otpInput.focus();
                        } else {
                            btnSendOtp.disabled = false;
                            btnSendOtp.textContent = otpSent ? 'Gửi lại mã' : 'Gửi mã';
                            
                            if (result.countdown) {
                                startCountdown(result.countdown);
                            }
                            
                            showToast(result.message, 'error');
                            emailError.textContent = result.message;
                        }
                    },
                    error: function(xhr, status, error) {
                        btnSendOtp.disabled = false;
                        btnSendOtp.textContent = otpSent ? 'Gửi lại mã' : 'Gửi mã';
                        showToast('Có lỗi xảy ra khi gửi mã. Vui lòng thử lại.', 'error');
                        console.error('Send OTP error:', error);
                    }
                });
            });

            // Auto-verify and redirect when 6 digits entered
            otpInput.addEventListener('input', function() {
                otpError.textContent = '';
                otpSuccess.style.display = 'none';
                
                const otp = otpInput.value.trim();
                if (otp.length === 6 && otpSent) {
                    verifyAndRedirect();
                }
            });

            // Verify OTP and auto redirect
            function verifyAndRedirect() {
                const email = emailInput.value.trim();
                const otp = otpInput.value.trim();

                if (!email || !otp) return;

                otpInput.disabled = true;
                otpStatus.textContent = 'Đang xác thực...';

                $.ajax({
                    url: '?handler=VerifyOtp',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ 
                        email: email,
                        otpCode: otp 
                    }),
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(result) {
                        if (result.success) {
                            otpError.textContent = '';
                            otpSuccess.style.display = 'block';
                            showToast('Xác thực thành công! Đang chuyển hướng...', 'success');
                            otpStatus.textContent = 'Xác thực thành công! Đang chuyển hướng...';
                            
                            setTimeout(function() {
                                window.location.href = result.redirectUrl;
                            }, 800);
                        } else {
                            otpInput.disabled = false;
                            otpInput.value = '';
                            otpInput.focus();
                            otpError.textContent = result.message;
                            otpStatus.textContent = '';
                            showToast(result.message, 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        otpInput.disabled = false;
                        otpInput.value = '';
                        otpInput.focus();
                        otpStatus.textContent = '';
                        showToast('Có lỗi xảy ra khi xác thực. Vui lòng thử lại.', 'error');
                        console.error('Verify OTP error:', error);
                    }
                });
            }

            // Clear error on email input
            emailInput.addEventListener('input', function() { 
                emailError.textContent = ''; 
            });
        })();
    </script>
}
