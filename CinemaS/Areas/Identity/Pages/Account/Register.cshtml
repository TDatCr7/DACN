@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<style>
    :root {
        --panel: #020617;
        --panel-soft: #040b1f;
        --indigo: #3b5ccc;
        --purple: #7c3aed;
        --accent: #ffd54d;
        --text: #e5e7f5;
        --muted: #9ca3c7;
        --line: rgba(148, 163, 255, .35);
    }

    .register-shell {
        min-height: calc(100vh - 140px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 16px 60px;
    }

    .register-card {
        width: 100%;
        max-width: 720px;
        border-radius: 28px;
        background:
            radial-gradient(circle at 0 0, rgba(59, 130, 246, .35), transparent 55%),
            radial-gradient(circle at 100% 0, rgba(162, 28, 175, .28), transparent 55%),
            linear-gradient(145deg, #020617, #020617);
        border: 1px solid rgba(148, 163, 255, .45);
        box-shadow:
            0 22px 60px rgba(15, 23, 42, .95),
            0 0 0 1px rgba(15, 23, 42, .85);
        padding: 28px 32px 26px;
        color: var(--text);
    }

    .register-title {
        font-size: 26px;
        font-weight: 900;
        margin-bottom: 4px;
    }

    .register-subtitle {
        font-size: 13px;
        color: var(--muted);
        margin-bottom: 22px;
    }

    .form-label {
        font-size: 13px;
        font-weight: 600;
        color: #cfd6ff;
        margin-bottom: 6px;
    }

    .cine-input {
        width: 100%;
        font-size: 14px;
        padding: 11px 14px;
        border-radius: 14px;
        border: 1px solid var(--line);
        background: radial-gradient(circle at 0 0, rgba(15, 23, 42, .9), rgba(2, 6, 23, 1));
        color: var(--text);
        outline: none;
        transition: border-color .18s ease, box-shadow .18s ease, background-color .18s ease;
    }

        .cine-input::placeholder {
            color: #6b7280;
            font-size: 13px;
        }

        .cine-input:focus {
            border-color: var(--indigo);
            box-shadow: 0 0 0 1px rgba(59, 92, 204, .7), 0 0 0 6px rgba(37, 99, 235, .35);
            background: radial-gradient(circle at 0 0, rgba(15, 23, 42, 1), rgba(2, 6, 23, 1));
        }

    .field-row {
        margin-bottom: 16px;
    }

    .field-row-inline {
        display: flex;
        gap: 10px;
        align-items: flex-end;
        margin-bottom: 8px;
    }

    .otp-input-wrap {
        flex: 1 1 auto;
    }

    .btn-otp {
        flex: 0 0 auto;
        min-width: 120px;
        border-radius: 14px;
        border: none;
        padding: 10px 16px;
        font-size: 13px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: .05em;
        background: linear-gradient(135deg, #facc15, #f97316);
        color: #111827;
        box-shadow: 0 10px 30px rgba(250, 204, 21, .45);
        transition: filter .18s ease, transform .1s ease, box-shadow .18s ease;
    }

        .btn-otp:hover:enabled {
            filter: brightness(1.06);
            transform: translateY(-1px);
            box-shadow: 0 14px 32px rgba(250, 204, 21, .55);
        }

        .btn-otp:disabled {
            opacity: .65;
            cursor: not-allowed;
            box-shadow: none;
        }

    .otp-hint {
        font-size: 12px;
        color: var(--muted);
        min-height: 18px;
        margin-bottom: 4px;
    }

    .btn-register-main {
        width: 100%;
        margin-top: 10px;
        border-radius: 999px;
        border: none;
        padding: 11px 18px;
        font-size: 14px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: .06em;
        background: linear-gradient(120deg, var(--indigo), var(--purple));
        color: #fff;
        box-shadow: 0 14px 38px rgba(56, 189, 248, .4);
        transition: filter .18s ease, transform .1s ease, box-shadow .18s ease;
    }

        .btn-register-main:hover {
            filter: brightness(1.05);
            transform: translateY(-1px);
            box-shadow: 0 18px 40px rgba(59, 130, 246, .65);
        }

    .register-footer-text {
        font-size: 12px;
        color: var(--muted);
        margin-top: 12px;
    }

    .text-danger {
        font-size: 12px;
    }

    .footer-actions {
        margin-top: 12px;
        text-align: center;
    }

    .login-text-link {
        display: inline-block;
        color: #93c5fd;
        text-decoration: underline;
        font-size: 14px;
        font-weight: 700;
    }

        .login-text-link:hover {
            color: #bfdbfe;
        }

    @@media (max-width: 575.98px) {
        .register-card {
            padding-inline: 18px;
        }
    }
</style>

<div class="register-shell">
    <div class="register-card">
        <h1 class="register-title">Tạo tài khoản mới</h1>
        <div class="register-subtitle">
            Bước 1: Nhập họ tên, email và xác thực email bằng mã OTP.
        </div>

        <form method="post" asp-page="./Register">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="field-row">
                <label asp-for="Input.FullName" class="form-label"></label>
                <input asp-for="Input.FullName" class="cine-input" placeholder="Nhập họ và tên của bạn" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <div class="field-row">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="cine-input" autocomplete="username" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="field-row-inline">
                <div class="otp-input-wrap">
                    <label asp-for="Input.OtpCode" class="form-label"></label>
                    <input asp-for="Input.OtpCode" class="cine-input" placeholder="Mã xác nhận gồm 6 chữ số" />
                    <span asp-validation-for="Input.OtpCode" class="text-danger"></span>
                </div>

                <!-- Nút GỬI MÃ luôn render, JS sẽ ẩn/hiện -->
                <button id="btnSendOtp"
                        type="submit"
                        asp-page-handler="SendOtp"
                        formnovalidate
                        class="btn-otp">
                    GỬI MÃ
                </button>
            </div>

            <div class="otp-hint">
                <span id="otpStatus"
                      data-base="@Model.OtpStatusMessage">
                    @Model.OtpStatusMessage
                </span>
            </div>

            <input type="hidden" id="otpCountdownInit" value="@Model.OtpCountdownSeconds" />


            <!-- Nút này sẽ chạy OnPostAsync (không handler) -->
            <button type="submit" class="btn-register-main">TIẾP TỤC</button>

            <div class="footer-actions">
                Đã có tài khoản?
                <a class="login-text-link" asp-page="./Login">Đăng nhập</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btn = document.getElementById('btnSendOtp');
            const statusSpan = document.getElementById('otpStatus');
            const hidden = document.getElementById('otpCountdownInit');
            const emailInput = document.getElementById('Input_Email'); // asp-for="Input.Email"

            if (!btn || !statusSpan || !hidden) return;

            let seconds = parseInt(hidden.value || '0', 10);
            const baseMsg = statusSpan.dataset.base || '';
            const originalEmail = emailInput ? emailInput.value.trim() : '';

            function showButton() {
                btn.style.display = 'inline-block';
                btn.disabled = false;
            }

            function hideButton() {
                btn.style.display = 'none';
                btn.disabled = true;
            }

            function renderText() {
                if (seconds > 0) {
                    const extra = `Bạn có thể gửi lại mã sau ${seconds}s`;
                    statusSpan.textContent = baseMsg
                        ? `${baseMsg} ${extra}`
                        : extra;
                } else {
                    statusSpan.textContent = baseMsg || '';
                }
            }

            function tick() {
                if (seconds <= 0) {
                    showButton();
                    renderText();
                    return;
                }
                hideButton();
                renderText();
                seconds--;
                setTimeout(tick, 1000);
            }

            // chạy countdown nếu còn thời gian
            if (seconds > 0) {
                tick();
            } else {
                renderText();
            }

            // nếu đổi email khác email ban đầu → cho hiện nút lại ngay
            if (emailInput) {
                emailInput.addEventListener('input', function () {
                    const current = emailInput.value.trim();
                    if (current && current !== originalEmail) {
                        seconds = 0;
                        showButton();
                        statusSpan.textContent = 'Bạn có thể gửi mã cho email mới này.';
                    }
                });
            }
        });
    </script>
}

