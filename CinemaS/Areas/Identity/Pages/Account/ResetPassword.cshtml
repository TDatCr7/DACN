@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<style>
    :root {
        --panel: #020617;
        --panel-soft: #040b1f;
        --indigo: #3b5ccc;
        --purple: #7c3aed;
        --accent: #ffd54d;
        --text: #e5e7f5;
        --muted: #9ca3c7;
        --line: rgba(148,163,255,.35);
    }

    /* Toast */
    .auth-toast {
        position: relative;
        margin-top: 16px;
        padding: 12px 14px;
        border-radius: 14px;
        background: #0b1227;
        border: 1px solid rgba(148,163,255,.45);
        color: var(--text);
        box-shadow: 0 14px 40px rgba(15,23,42,.8);
        display: none;
    }
    .auth-toast.show { display: block; }
    .auth-toast.auth-toast-error {
        border-color: rgba(248,113,113,.65);
        box-shadow: 0 14px 40px rgba(248,113,113,.25);
    }
    .auth-toast.auth-toast-success {
        border-color: rgba(74,222,128,.65);
        box-shadow: 0 14px 40px rgba(74,222,128,.25);
    }

    .rp-shell {
        min-height: calc(100vh - 140px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 16px 60px;
    }

    .rp-card {
        width: 100%;
        max-width: 540px;
        border-radius: 28px;
        background:
            radial-gradient(circle at 0 0, rgba(59, 130, 246, .35), transparent 55%),
            radial-gradient(circle at 100% 0, rgba(162, 28, 175, .28), transparent 55%),
            linear-gradient(145deg, #020617, #020617);
        border: 1px solid rgba(148, 163, 255, .45);
        box-shadow:
            0 22px 60px rgba(15, 23, 42, .95),
            0 0 0 1px rgba(15, 23, 42, .85);
        padding: 28px 32px 26px;
        color: var(--text);
    }

    .rp-title {
        font-size: 26px;
        font-weight: 900;
        margin-bottom: 4px;
    }

    .rp-subtitle {
        font-size: 13px;
        color: var(--muted);
        margin-bottom: 22px;
    }

    .form-label {
        font-size: 13px;
        font-weight: 600;
        color: #cfd6ff;
        margin-bottom: 6px;
    }

    .cine-input {
        width: 100%;
        font-size: 14px;
        padding: 11px 14px;
        border-radius: 14px;
        border: 1px solid var(--line);
        background: radial-gradient(circle at 0 0, rgba(15, 23, 42, .9), rgba(2, 6, 23, 1));
        color: var(--text);
        outline: none;
        transition: border-color .18s ease, box-shadow .18s ease, background-color .18s ease;
    }

        .cine-input::placeholder {
            color: #6b7280;
            font-size: 13px;
        }

        .cine-input:focus {
            border-color: var(--indigo);
            box-shadow: 0 0 0 1px rgba(59, 92, 204, .7), 0 0 0 6px rgba(37, 99, 235, .35);
            background: radial-gradient(circle at 0 0, rgba(15, 23, 42, 1), rgba(2, 6, 23, 1));
        }

        .cine-input:read-only {
            opacity: 0.8;
            cursor: not-allowed;
            background: radial-gradient(circle at 0 0, rgba(15, 23, 42, .6), rgba(2, 6, 23, .8));
            border-color: rgba(148, 163, 255, .25);
        }

        .cine-input:read-only:focus {
            box-shadow: none;
            border-color: rgba(148, 163, 255, .25);
        }

    .field-row {
        margin-bottom: 16px;
    }

    .btn-main {
        width: 100%;
        margin-top: 10px;
        border-radius: 999px;
        border: none;
        padding: 11px 18px;
        font-size: 14px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: .06em;
        background: linear-gradient(120deg, var(--indigo), var(--purple));
        color: #fff;
        box-shadow: 0 14px 38px rgba(56, 189, 248, .4);
        transition: filter .18s ease, transform .1s ease, box-shadow .18s ease;
        cursor: pointer;
    }

        .btn-main:hover:enabled {
            filter: brightness(1.05);
            transform: translateY(-1px);
            box-shadow: 0 18px 40px rgba(59, 130, 246, .65);
        }

        .btn-main:disabled {
            opacity: .65;
            cursor: not-allowed;
            box-shadow: none;
        }

    .links-row {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 12px;
        font-size: 13px;
    }

    .links-row a {
        color: #93c5fd;
        text-decoration: none;
    }

        .links-row a:hover {
            text-decoration: underline;
        }

    .text-danger {
        font-size: 12px;
        color: #f87171;
    }

    @@media (max-width: 575.98px) {
        .rp-card {
            padding-inline: 18px;
        }
    }
</style>

<div class="rp-shell">
    <div class="rp-card">
        <h1 class="rp-title">Đổi mật khẩu</h1>
        <div class="rp-subtitle">Nhập mật khẩu mới của bạn.</div>

        <form id="resetPasswordForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            <input asp-for="Input.Email" type="hidden" />

            <!-- Email Display (Read-only) -->
            <div class="field-row">
                <label class="form-label">Email tài khoản</label>
                <input type="email" 
                       id="emailDisplay"
                       class="cine-input" 
                       value="@Model.Input?.Email"
                       readonly 
                       tabindex="-1" />
                <span style="font-size: 11px; color: var(--muted); margin-top: 4px; display: block;">
                    Bạn đang đổi mật khẩu cho email này
                </span>
            </div>

            <!-- Password -->
            <div class="field-row">
                <label asp-for="Input.Password" class="form-label">Mật khẩu mới</label>
                <input asp-for="Input.Password" 
                       id="passwordInput"
                       class="cine-input" 
                       autocomplete="new-password" 
                       placeholder="Nhập mật khẩu mới" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="field-row">
                <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                <input asp-for="Input.ConfirmPassword" 
                       id="confirmPasswordInput"
                       class="cine-input" 
                       autocomplete="new-password" 
                       placeholder="Nhập lại mật khẩu mới" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" id="btnSubmit" class="btn-main">
                Đổi mật khẩu
            </button>

            <!-- Toast container -->
            <div id="authToast" class="auth-toast"></div>

            <div class="links-row">
                <a asp-page="./Login">Quay lại đăng nhập</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const authToast = document.getElementById('authToast');

            // Toast helper
            function showToast(message, type) {
                authToast.textContent = message;
                authToast.className = 'auth-toast show auth-toast-' + type;
                setTimeout(function() {
                    authToast.classList.remove('show');
                }, 4000);
            }

            // Show validation errors as toast
            const validationSummary = document.querySelector('[asp-validation-summary]');
            if (validationSummary && validationSummary.textContent.trim()) {
                showToast('Vui lòng kiểm tra lại thông tin.', 'error');
            }
        })();
    </script>
}
