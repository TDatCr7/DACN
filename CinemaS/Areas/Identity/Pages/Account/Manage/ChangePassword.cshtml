@page
@using CinemaS.Areas.Identity.Pages.Account.Manage
@model ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<style>
    :root {
        --panel: #020617;
        --panel-soft: #040b1f;
        --indigo: #3b5ccc;
        --purple: #7c3aed;
        --accent: #ffd54d;
        --text: #e5e7f5;
        --muted: #9ca3c7;
        --line: rgba(148, 163, 255, .35);
    }

    .change-password-shell {
        min-height: calc(100vh - 140px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 16px 60px;
    }

    .change-password-card {
        width: 100%;
        max-width: 720px;
        border-radius: 28px;
        background:
            radial-gradient(circle at 0 0, rgba(59, 130, 246, .35), transparent 55%),
            radial-gradient(circle at 100% 0, rgba(162, 28, 175, .28), transparent 55%),
            linear-gradient(145deg, #020617, #020617);
        border: 1px solid rgba(148, 163, 255, .45);
        box-shadow:
            0 22px 60px rgba(15, 23, 42, .95),
            0 0 0 1px rgba(15, 23, 42, .85);
        padding: 28px 32px 26px;
        color: var(--text);
    }

    .change-password-title {
        font-size: 26px;
        font-weight: 900;
        margin-bottom: 4px;
    }

    .change-password-subtitle {
        font-size: 13px;
        color: var(--muted);
        margin-bottom: 20px;
    }

    .form-label {
        font-size: 13px;
        font-weight: 600;
        color: #cfd6ff;
        margin-bottom: 6px;
    }

    .cine-input {
        width: 100%;
        font-size: 14px;
        padding: 11px 14px;
        border-radius: 14px;
        border: 1px solid var(--line);
        background: radial-gradient(circle at 0 0, rgba(15, 23, 42, .9), rgba(2, 6, 23, 1));
        color: var(--text);
        outline: none;
        transition: border-color .18s ease, box-shadow .18s ease, background-color .18s ease;
    }

        .cine-input::placeholder {
            color: #6b7280;
            font-size: 13px;
        }

        .cine-input:focus {
            border-color: var(--indigo);
            box-shadow: 0 0 0 1px rgba(59, 92, 204, .7), 0 0 0 6px rgba(37, 99, 235, .35);
            background: radial-gradient(circle at 0 0, rgba(15, 23, 42, 1), rgba(2, 6, 23, 1));
        }

    .field-row {
        margin-bottom: 16px;
    }

    .btn-change-main {
        width: 100%;
        margin-top: 10px;
        border-radius: 999px;
        border: none;
        padding: 11px 18px;
        font-size: 14px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: .06em;
        background: linear-gradient(120deg, var(--indigo), var(--purple));
        color: #fff;
        box-shadow: 0 14px 38px rgba(56, 189, 248, .4);
        transition: filter .18s ease, transform .1s ease, box-shadow .18s ease;
        cursor: pointer;
    }

        .btn-change-main:hover:enabled {
            filter: brightness(1.05);
            transform: translateY(-1px);
            box-shadow: 0 18px 40px rgba(59, 130, 246, .65);
        }

        .btn-change-main:disabled {
            opacity: .65;
            cursor: not-allowed;
            box-shadow: none;
        }

    .btn-send-otp {
        width: 100%;
        margin-top: 10px;
        border-radius: 999px;
        border: 1px solid var(--line);
        padding: 11px 18px;
        font-size: 14px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: .06em;
        background: radial-gradient(circle at 0 0, rgba(15, 23, 42, .9), rgba(2, 6, 23, 1));
        color: var(--text);
        transition: border-color .18s ease, box-shadow .18s ease, background-color .18s ease;
        cursor: pointer;
    }

        .btn-send-otp:hover:enabled {
            border-color: var(--indigo);
            box-shadow: 0 0 0 1px rgba(59, 92, 204, .7), 0 0 0 6px rgba(37, 99, 235, .25);
        }

        .btn-send-otp:disabled {
            opacity: .65;
            cursor: not-allowed;
        }

    .footer-actions {
        margin-top: 14px;
        text-align: center;
    }

    .btn-back-link {
        color: #93c5fd;
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
    }

        .btn-back-link:hover {
            text-decoration: underline;
            color: #bfdbfe;
        }

    .text-danger {
        font-size: 12px;
        color: #f87171;
    }

    .alert {
        border-radius: 12px;
        padding: 12px 16px;
        margin-bottom: 18px;
        border: 1px solid rgba(148, 163, 255, .45);
    }

    .alert-success {
        background: rgba(34, 197, 94, .15);
        border-color: rgba(34, 197, 94, .5);
        color: #86efac;
    }

    .alert-danger {
        background: rgba(239, 68, 68, .15);
        border-color: rgba(239, 68, 68, .5);
        color: #fca5a5;
    }

    .otp-status-message {
        font-size: 12px;
        color: var(--muted);
        margin-top: 6px;
        display: block;
    }

    .otp-status-message.success {
        color: #86efac;
    }

    .otp-status-message.error {
        color: #fca5a5;
    }

    @@media (max-width: 575.98px) {
        .change-password-card {
            padding-inline: 18px;
        }
    }
</style>

<div class="change-password-shell">
    <div class="change-password-card">
        <h1 class="change-password-title">Đổi mật khẩu</h1>
        <div class="change-password-subtitle">
            Nhập mật khẩu hiện tại và mật khẩu mới để thay đổi.
        </div>

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success">
                @Model.StatusMessage
            </div>
        }

        <!-- Message area for AJAX responses -->
        <div id="messageArea" style="display: none;"></div>

        <form id="changePasswordForm" onsubmit="return false;">
            <div class="field-row">
                <label for="oldPassword" class="form-label">Mật khẩu hiện tại</label>
                <input type="password" 
                       id="oldPassword" 
                       name="oldPassword"
                       class="cine-input" 
                       autocomplete="current-password" 
                       placeholder="Mật khẩu hiện tại" />
                <span id="oldPasswordError" class="text-danger"></span>
            </div>

            <div class="field-row">
                <label for="newPassword" class="form-label">Mật khẩu mới</label>
                <input type="password" 
                       id="newPassword" 
                       name="newPassword"
                       class="cine-input" 
                       autocomplete="new-password" 
                       placeholder="Mật khẩu mới" />
                <span id="newPasswordError" class="text-danger"></span>
            </div>

            <div class="field-row">
                <label for="confirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                <input type="password" 
                       id="confirmPassword" 
                       name="confirmPassword"
                       class="cine-input" 
                       autocomplete="new-password" 
                       placeholder="Nhập lại mật khẩu mới" />
                <span id="confirmPasswordError" class="text-danger"></span>
            </div>

            <button type="button" id="btnSendOtp" class="btn-send-otp">
                <i class="fa-solid fa-paper-plane" style="margin-right: 6px;"></i>
                Gửi mã xác nhận
            </button>
            <span id="otpStatusMessage" class="otp-status-message"></span>

            <div class="field-row" style="margin-top: 16px;">
                <label for="otpCode" class="form-label">Mã xác nhận</label>
                <input type="text" 
                       id="otpCode" 
                       name="otpCode"
                       class="cine-input" 
                       placeholder="Nhập mã 6 chữ số" 
                       maxlength="6" />
                <span id="otpCodeError" class="text-danger"></span>
            </div>

            <div class="footer-actions">
                <a asp-page="./Index" class="btn-back-link">
                    <i class="fa-solid fa-arrow-left" style="margin-right: 4px;"></i>
                    Quay lại hồ sơ
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const btnSendOtp = document.getElementById('btnSendOtp');
            const oldPasswordInput = document.getElementById('oldPassword');
            const newPasswordInput = document.getElementById('newPassword');
            const confirmPasswordInput = document.getElementById('confirmPassword');
            const otpCodeInput = document.getElementById('otpCode');
            const otpStatusMessage = document.getElementById('otpStatusMessage');
            const messageArea = document.getElementById('messageArea');

            let countdownInterval = null;
            let otpSent = false;

            // Clear all error messages
            function clearErrors() {
                document.getElementById('oldPasswordError').textContent = '';
                document.getElementById('newPasswordError').textContent = '';
                document.getElementById('confirmPasswordError').textContent = '';
                document.getElementById('otpCodeError').textContent = '';
            }

            // Show message in message area
            function showMessage(message, type) {
                messageArea.textContent = message;
                messageArea.className = 'alert alert-' + type;
                messageArea.style.display = 'block';
                setTimeout(() => {
                    messageArea.style.display = 'none';
                }, 5000);
            }

            // Start countdown timer
            function startCountdown(seconds) {
                let remaining = seconds;
                btnSendOtp.disabled = true;
                
                countdownInterval = setInterval(() => {
                    remaining--;
                    if (remaining <= 0) {
                        clearInterval(countdownInterval);
                        btnSendOtp.disabled = false;
                        btnSendOtp.innerHTML = '<i class="fa-solid fa-paper-plane" style="margin-right: 6px;"></i>Gửi lại mã';
                        otpStatusMessage.textContent = '';
                    } else {
                        btnSendOtp.innerHTML = `<i class="fa-solid fa-clock" style="margin-right: 6px;"></i>Gửi lại sau ${remaining}s`;
                    }
                }, 1000);
            }

            // Send OTP
            btnSendOtp.addEventListener('click', async function () {
                clearErrors();
                otpStatusMessage.textContent = '';

                const oldPassword = oldPasswordInput.value.trim();
                const newPassword = newPasswordInput.value.trim();
                const confirmPassword = confirmPasswordInput.value.trim();

                if (!oldPassword) {
                    document.getElementById('oldPasswordError').textContent = 'Vui lòng nhập mật khẩu hiện tại.';
                    return;
                }

                if (!newPassword) {
                    document.getElementById('newPasswordError').textContent = 'Vui lòng nhập mật khẩu mới.';
                    return;
                }

                if (!confirmPassword) {
                    document.getElementById('confirmPasswordError').textContent = 'Vui lòng nhập xác nhận mật khẩu.';
                    return;
                }

                if (newPassword !== confirmPassword) {
                    document.getElementById('confirmPasswordError').textContent = 'Mật khẩu xác nhận không khớp.';
                    return;
                }

                try {
                    const response = await fetch('?handler=SendOtp', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({
                            oldPassword: oldPassword,
                            newPassword: newPassword,
                            confirmPassword: confirmPassword
                        })
                    });

                    const result = await response.json();

                    if (result.success) {
                        otpSent = true;
                        otpStatusMessage.textContent = result.message;
                        otpStatusMessage.className = 'otp-status-message success';
                        startCountdown(result.countdown || 30);
                    } else {
                        if (result.message.includes('Mật khẩu cũ')) {
                            document.getElementById('oldPasswordError').textContent = result.message;
                        } else {
                            otpStatusMessage.textContent = result.message;
                            otpStatusMessage.className = 'otp-status-message error';
                        }
                        
                        if (result.countdown && result.countdown > 0) {
                            startCountdown(result.countdown);
                        }
                    }
                } catch (error) {
                    otpStatusMessage.textContent = 'Có lỗi xảy ra khi gửi mã. Vui lòng thử lại.';
                    otpStatusMessage.className = 'otp-status-message error';
                    console.error('Error sending OTP:', error);
                }
            });

            // Auto verify OTP and change password when OTP is entered
            otpCodeInput.addEventListener('input', async function () {
                const otpCode = this.value.trim();
                
                // Only process when 6 digits are entered
                if (otpCode.length !== 6) {
                    return;
                }

                if (!otpSent) {
                    document.getElementById('otpCodeError').textContent = 'Vui lòng gửi mã xác nhận trước.';
                    return;
                }

                clearErrors();

                const oldPassword = oldPasswordInput.value.trim();
                const newPassword = newPasswordInput.value.trim();
                const confirmPassword = confirmPasswordInput.value.trim();

                try {
                    const response = await fetch('?handler=VerifyOtpAndChangePassword', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({
                            oldPassword: oldPassword,
                            newPassword: newPassword,
                            confirmPassword: confirmPassword,
                            otpCode: otpCode
                        })
                    });

                    const result = await response.json();

                    if (result.success) {
                        showMessage(result.message, 'success');
                        // Reload page after 1.5 seconds to show success message
                        setTimeout(() => {
                            window.location.href = '/Identity/Account/Manage';
                        }, 1500);
                    } else {
                        document.getElementById('otpCodeError').textContent = result.message;
                    }
                } catch (error) {
                    document.getElementById('otpCodeError').textContent = 'Có lỗi xảy ra. Vui lòng thử lại.';
                    console.error('Error verifying OTP:', error);
                }
            });
        })();
    </script>
}
