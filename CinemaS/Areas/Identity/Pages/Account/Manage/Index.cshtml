@page
@using CinemaS.Areas.Identity.Pages.Account.Manage
@model IndexModel

@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "/Views/Shared/_Layout.cshtml";

    var nextThreshold = Model.NextRankThreshold ?? Model.CurrentRank?.MaxPoint ?? 10000;
    var pointPercent = nextThreshold > 0
        ? Math.Min(100, (int)(Model.CurrentPoint * 100.0 / nextThreshold))
        : 0;

    string displayName = Model.Input?.FullName ?? Model.Username ?? "Khách hàng";
}

<style>
    :root {
        --side-bg-from: #4338ca;
        --side-bg-to: #ec4899;
        --page-bg: #020617;
        --card-bg: rgba(15,23,42,0.98);
        --card-border: rgba(148,163,255,0.4);
        --text-main: #f9fafb;
        --text-sub: #9ca3af;
        --accent: #facc15;
        --yellow: #fde047;
        --primary: #3b82f6;
        --danger: #ef4444;
    }

    .account-shell {
        min-height: calc(100vh - 140px);
        padding: 40px 16px 60px;
        display: flex;
        justify-content: center;
    }

    .account-layout {
        width: 100%;
        max-width: 1180px;
        display: grid;
        grid-template-columns: 260px minmax(0, 1fr);
        gap: 28px;
    }

    /* SIDEBAR */

    .account-sidebar {
        background: linear-gradient(180deg, #4c1d95, #1d4ed8);
        border-radius: 24px;
        padding: 22px 18px 18px;
        color: #fff;
        box-shadow: 0 18px 45px rgba(15,23,42,0.9);
        position: relative;
        overflow: hidden;
    }

        .account-sidebar::before {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 0% 0%, rgba(251,191,36,0.3), transparent 55%), radial-gradient(circle at 100% 0%, rgba(56,189,248,0.3), transparent 55%);
            opacity: .8;
            pointer-events: none;
        }

    .side-inner {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .side-user {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 18px;
    }

    .side-avatar-wrapper {
        position: relative;
    }

    .side-avatar {
        width: 56px;
        height: 56px;
        border-radius: 999px;
        overflow: hidden;
        border: 2px solid rgba(248,250,252,0.9);
        box-shadow: 0 0 0 3px rgba(30,64,175,0.8);
    }

        .side-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

    .side-avatar-upload {
        position: absolute;
        right: -4px;
        bottom: -4px;
        width: 22px;
        height: 22px;
        border-radius: 999px;
        background: #facc15;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 11px;
        color: #111827;
        cursor: pointer;
        box-shadow: 0 6px 16px rgba(0,0,0,0.6);
    }

        .side-avatar-upload input {
            display: none;
        }

    .side-name {
        font-weight: 800;
        font-size: 16px;
        line-height: 1.3;
    }

    .side-change-link {
        font-size: 11px;
        text-decoration: underline;
        opacity: .9;
    }
    /* thêm vào CSS (giữ nguyên class .side-badge-dot hiện có nếu muốn) */
    .side-badge-dot {
        width: 7px;
        height: 7px;
        border-radius: 999px;
    }

        .side-badge-dot.is-active {
            background: #22c55e;
        }
        /* xanh */
        .side-badge-dot.is-inactive {
            background: #ef4444;
        }
    /* đỏ */

    .side-badge {
        margin-top: 4px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 999px;
        background: rgba(15,23,42,0.35);
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: .05em;
    }

    .side-badge-dot {
        width: 7px;
        height: 7px;
        border-radius: 999px;
        background: #22c55e;
    }

    .side-point-block {
        margin: 16px 0 18px;
    }

    .side-point-label {
        font-size: 12px;
        opacity: .9;
        margin-bottom: 6px;
    }

    .side-point-bar {
        width: 100%;
        height: 8px;
        border-radius: 999px;
        background: rgba(15,23,42,0.35);
        overflow: hidden;
        position: relative;
    }

    .side-point-bar-fill {
        position: absolute;
        inset: 0;
        width: 0;
        background: linear-gradient(90deg, #f97316, #facc15);
        transition: width .4s ease-out;
    }

    .side-point-text {
        margin-top: 4px;
        font-size: 11px;
        display: flex;
        justify-content: space-between;
        opacity: .95;
    }

    .side-nav {
        margin-top: 10px;
        margin-bottom: auto;
        border-top: 1px solid rgba(248,250,252,0.35);
        padding-top: 12px;
    }

    .side-nav-title {
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: .1em;
        margin-bottom: 6px;
        opacity: .8;
    }

    .side-nav-btn {
        width: 100%;
        text-align: left;
        padding: 9px 10px;
        border-radius: 10px;
        border: none;
        background: transparent;
        color: #e5e7eb;
        font-size: 13px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        transition: all .15s ease;
    }

        .side-nav-btn span.icon {
            width: 18px;
            text-align: center;
            font-size: 12px;
        }

        .side-nav-btn.active,
        .side-nav-btn:hover {
            background: rgba(15,23,42,0.25);
            box-shadow: inset 0 0 0 1px rgba(248,250,252,0.3);
        }

    .side-logout {
        margin-top: 18px;
        border-top: 1px solid rgba(248,250,252,0.35);
        padding-top: 10px;
        font-size: 13px;
    }

        .side-logout a {
            color: #fee2e2;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            font-weight: 500;
        }

    /* MAIN CONTENT */

    .account-main {
        background: var(--card-bg);
        border-radius: 24px;
        border: 1px solid var(--card-border);
        box-shadow: 0 18px 45px rgba(15,23,42,0.9);
        padding: 22px 24px 24px;
        color: var(--text-main);
        position: relative;
        overflow: hidden;
    }

        .account-main::before {
            content: '';
            position: absolute;
            inset: -1px;
            background: radial-gradient(circle at 0% 0%, rgba(59,130,246,0.2), transparent 55%), radial-gradient(circle at 100% 100%, rgba(147,51,234,0.18), transparent 55%);
            opacity: .6;
            pointer-events: none;
        }

    .main-inner {
        position: relative;
        z-index: 1;
    }

    .main-title {
        font-size: 24px;
        font-weight: 900;
        margin-bottom: 4px;
        background: linear-gradient(120deg,#facc15,#f97316,#f97316);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .main-sub {
        font-size: 13px;
        color: var(--text-sub);
        margin-bottom: 20px;
    }

    .alert-status {
        border-radius: 12px;
        padding: 10px 12px;
        margin-bottom: 16px;
        font-size: 13px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .alert-status.success {
            background: rgba(16,185,129,0.15);
            border: 1px solid rgba(16,185,129,0.6);
            color: #bbf7d0;
        }

        .alert-status.error {
            background: rgba(239,68,68,0.15);
            border: 1px solid rgba(239,68,68,0.6);
            color: #fecaca;
        }

    .section {
        display: none;
    }

        .section.active {
            display: block;
        }

    /* INFO SECTION */

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0,1fr));
        gap: 18px 24px;
    }

    .info-field-label {
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: .08em;
        color: #9ca3af;
        margin-bottom: 6px;
        font-weight: 600;
    }

    .info-input {
        width: 100%;
        border-radius: 14px;
        border: 1px solid rgba(148,163,255,0.4);
        padding: 11px 14px;
        background: rgba(15,23,42,0.92);
        color: var(--text-main);
        font-size: 14px;
    }

        .info-input:focus {
            outline: none;
            border-color: #60a5fa;
            box-shadow: 0 0 0 1px rgba(96,165,250,0.6);
        }

        .info-input[readonly] {
            opacity: .7;
            cursor: default;
        }

    .info-actions {
        margin-top: 20px;
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .btn-primary {
        border-radius: 999px;
        border: none;
        padding: 11px 20px;
        font-size: 13px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: .1em;
        background: linear-gradient(120deg,#3b82f6,#8b5cf6);
        color: #fff;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-secondary {
        border-radius: 999px;
        border: 1px solid rgba(148,163,255,0.6);
        padding: 10px 18px;
        font-size: 13px;
        font-weight: 700;
        background: transparent;
        color: #e5e7eb;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-primary:hover,
        .btn-secondary:hover {
            filter: brightness(1.06);
            transform: translateY(-1px);
        }

    /* MEMBERSHIP SECTION */

    .member-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 18px;
        flex-wrap: wrap;
        gap: 12px;
    }

    .member-title {
        font-size: 20px;
        font-weight: 800;
    }

    .member-point {
        font-size: 13px;
        color: #fef9c3;
        font-weight: 600;
    }

    .member-progress {
        margin-bottom: 18px;
    }

    .member-progress-bar {
        height: 10px;
        border-radius: 999px;
        background: rgba(15,23,42,0.8);
        overflow: hidden;
        position: relative;
    }

    .member-progress-fill {
        position: absolute;
        inset: 0;
        width: 0;
        background: linear-gradient(90deg,#f97316,#facc15);
        transition: width .4s ease-out;
    }

    .member-cols {
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(240px,1fr));
        gap: 18px;
    }

    .member-card {
        background: rgba(15,23,42,0.9);
        border-radius: 18px;
        border: 1px solid rgba(148,163,255,0.4);
        padding: 16px 16px 18px;
        font-size: 13px;
        line-height: 1.6;
    }

    .member-card-title {
        font-size: 15px;
        font-weight: 800;
        margin-bottom: 6px;
        text-transform: uppercase;
        color: #fde68a;
    }

    .member-card ul {
        padding-left: 18px;
        margin: 6px 0 0;
    }

    .member-cta {
        margin-top: 22px;
        text-align: center;
    }

    .member-btn {
        border-radius: 999px;
        width: 100%;
        max-width: 380px;
        padding: 13px 20px;
        font-size: 14px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: .12em;
        border: none;
        cursor: default;
    }

        .member-btn.active {
            background: #facc15;
            color: #111827;
        }

        .member-btn.inactive {
            background: rgba(15,23,42,0.9);
            color: #e5e7eb;
            border: 1px dashed rgba(248,250,252,0.6);
        }

    /* HISTORY SECTION */

    .history-table-wrap {
        margin-top: 12px;
        border-radius: 18px;
        border: 1px solid rgba(148,163,255,0.4);
        overflow: hidden;
        background: rgba(15,23,42,0.96);
    }

    table.history-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 13px;
    }

    .history-table thead {
        background: #2563eb;
    }

    .history-table th,
    .history-table td {
        padding: 10px 14px;
    }

    .history-table th {
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: .06em;
        color: #e0f2fe;
        border-bottom: 1px solid rgba(148,163,255,0.6);
        text-align: left;
        white-space: nowrap;
    }

    .history-table td {
        border-bottom: 1px solid rgba(15,23,42,0.9);
        color: #e5e7eb;
    }

    .history-table tr:nth-child(even) td {
        background: rgba(15,23,42,0.85);
    }

    .history-table tr:hover td {
        background: rgba(37,99,235,0.16);
    }

    .history-action {
        color: #facc15;
        text-decoration: underline;
        cursor: pointer;
        white-space: nowrap;
        font-weight: 600;
    }

    .history-empty {
        padding: 30px 18px;
        text-align: center;
        font-size: 14px;
        color: var(--text-sub);
    }

    /* MODAL */

    #ticket-modal-backdrop {
        position: fixed;
        inset: 0;
        z-index: 1050;
        background: rgba(15,23,42,0.75);
        display: none;
    }

    @@media (max-width: 991.98px) {
        .account-layout {
            grid-template-columns: minmax(0,1fr);
            max-width: 760px;
        }

        .account-sidebar {
            order: 1;
        }

        .account-main {
            order: 2;
        }
    }

    @@media (max-width: 575.98px) {
        .account-main {
            padding: 18px 16px 20px;
        }
    }
    /* ==== Ticket modal card (giống panel Create Movie) ==== */
    .ticket-modal-wrap {
        position: absolute;
        inset: 40px 16px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .ticket-modal-card {
        width: 100%;
        max-width: 880px;
        max-height: 90vh;
        background: radial-gradient(circle at 0 0, rgba(59,130,246,.35), transparent 55%), radial-gradient(circle at 100% 0, rgba(124,58,237,.3), transparent 55%), linear-gradient(145deg, #020617, #020617);
        border-radius: 24px;
        border: 1px solid rgba(148,163,255,.55);
        box-shadow: 0 22px 60px rgba(15,23,42,.95), 0 0 0 1px rgba(15,23,42,.85);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        color: #e9ecf6;
    }

    .ticket-modal-header {
        padding: 14px 18px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: radial-gradient(circle at 0 0, rgba(37,99,235,.6), transparent 55%), rgba(15,23,42,.96);
        font-weight: 700;
        font-size: 15px;
        border-bottom: 1px solid rgba(148,163,255,.4);
    }

    .ticket-modal-body {
        padding: 18px 22px 20px;
        overflow: auto;
        font-size: 14px;
    }

    .ticket-modal-close {
        border: none;
        background: transparent;
        color: #e5e7eb;
        font-size: 18px;
        cursor: pointer;
    }

    /* inner ticket content */
    .ticket-card {
        font-size: 14px;
        line-height: 1.6;
    }

    .ticket-title-block {
        margin-bottom: 14px;
    }

    .ticket-label {
        font-size: 13px;
        font-weight: 800;
        text-transform: uppercase;
        color: #fde047;
    }

    .ticket-movie {
        font-size: 20px;
        font-weight: 900;
    }

    .ticket-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0,1fr));
        column-gap: 32px;
        row-gap: 10px;
        margin-bottom: 16px;
    }

    .ticket-grid-span {
        grid-column: 1 / span 2;
    }

    .ticket-field-label {
        font-weight: 700;
        color: #fde047;
        font-size: 13px;
    }

    .ticket-cinema-address {
        font-size: 12px;
        color: #9ca3af;
        margin-top: 2px;
    }

    .ticket-divider {
        margin: 18px 0 12px;
        border: none;
        border-top: 1px dashed rgba(148,163,255,.6);
    }

    .ticket-total-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .ticket-total-label {
        font-size: 16px;
        font-weight: 800;
        color: #fde047;
    }

    .ticket-total-value {
        font-size: 22px;
        font-weight: 900;
    }

    .ticket-download-btn {
        margin-top: 4px;
        width: 100%;
        padding: 12px;
        background: linear-gradient(90deg,#3b5ccc,#7c3aed);
        color: #f9fafb;
        font-weight: 800;
        border-radius: 999px;
        border: none;
        text-transform: uppercase;
        letter-spacing: .08em;
        cursor: pointer;
    }

        .ticket-download-btn:hover {
            filter: brightness(1.06);
            transform: translateY(-1px);
        }

</style>

<div class="account-shell">
    <div class="account-layout">
        <!-- SIDEBAR -->
        <aside class="account-sidebar">
            <div class="side-inner">
                <div class="side-user">
                    <div class="side-avatar-wrapper">
                        <div class="side-avatar">
                            <img src="@(string.IsNullOrEmpty(Model.AvatarUrl) ? "/images/no-avatar.png" : Model.AvatarUrl)"
                                 alt="Avatar" />
                        </div>
                        <form method="post" asp-page-handler="Avatar" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <label class="side-avatar-upload" title="Thay đổi ảnh đại diện">
                                <span><i class="fa-solid fa-camera"></i></span>
                                <input asp-for="AvatarFile" type="file" accept="image/*" onchange="this.form.submit();" />
                            </label>
                        </form>
                    </div>
                    <div>
                        <div class="side-name">@displayName</div>
                        
                        <div class="side-badge">
                            <span class="side-badge-dot @(Model.CurrentPoint > 0 ? "is-active" : "is-inactive")"></span>
                            <span>@(Model.CurrentRank?.Name ?? "GL Friends")</span>
                        </div>

                    </div>
                </div>

                <div class="side-point-block">
                    <div class="side-point-label">Tích điểm GL Friends</div>
                    <div class="side-point-bar">
                        <div class="side-point-bar-fill" style="width:@pointPercent%;"></div>
                    </div>
                    <div class="side-point-text">
                        <span>@Model.CurrentPoint.ToString("#,0") điểm</span>
                        <span>@(Model.NextRankThreshold?.ToString("#,0") ?? "∞")</span>
                    </div>
                </div>

                <div class="side-nav">
                    <div class="side-nav-title">C'Friends</div>
                    <button type="button" class="side-nav-btn active" data-section="info">
                        <span class="icon"><i class="fa-solid fa-id-card"></i></span>
                        <span>Thông tin khách hàng</span>
                    </button>
                    <button type="button" class="side-nav-btn" data-section="member">
                        <span class="icon"><i class="fa-solid fa-star"></i></span>
                        <span>Thành viên GL Cinema</span>
                    </button>
                    <button type="button" class="side-nav-btn" data-section="history">
                        <span class="icon"><i class="fa-solid fa-clock-rotate-left"></i></span>
                        <span>Lịch sử mua hàng</span>
                    </button>
                </div>

                <div class="side-logout">
                    <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <span>Đăng xuất</span>
                    </a>
                </div>
            </div>
        </aside>

        <!-- MAIN -->
        <section class="account-main">
            <div class="main-inner">
                <h1 class="main-title">THÔNG TIN TÀI KHOẢN</h1>
                <div class="main-sub">
                    Quản lý thông tin, điểm tích lũy và lịch sử mua vé của bạn tại GL Cinema.
                </div>

                @if (!string.IsNullOrEmpty(Model.StatusMessage))
                {
                    <div class="alert-status success">
                        <i class="fa-solid fa-circle-check"></i>
                        <span>@Model.StatusMessage</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert-status error">
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <span>@Model.ErrorMessage</span>
                    </div>
                }

                <!-- THÔNG TIN KHÁCH HÀNG -->
                <div class="section active" data-section="info">
                    <form method="post">
                        <div class="info-grid">
                            <div>
                                <label asp-for="Input.FullName" class="info-field-label">Họ và tên</label>
                                <input asp-for="Input.FullName" class="info-input" />
                            </div>
                            <div>
                                <label asp-for="Input.DateOfBirth" class="info-field-label">Ngày sinh</label>
                                <input asp-for="Input.DateOfBirth" class="info-input" type="date" />
                            </div>
                            <div>
                                <label asp-for="Input.PhoneNumber" class="info-field-label">Số điện thoại</label>
                                <input asp-for="Input.PhoneNumber" class="info-input" />
                            </div>
                            <div>
                                <label asp-for="Input.Email" class="info-field-label">Email</label>
                                <input asp-for="Input.Email" class="info-input" readonly />
                            </div>
                            <div style="grid-column: span 2;">
                                <label asp-for="Input.Address" class="info-field-label">Địa chỉ</label>
                                <input asp-for="Input.Address" class="info-input" />
                            </div>
                        </div>

                        <div class="info-actions">
                            <button type="submit" class="btn-primary">
                                <i class="fa-solid fa-floppy-disk"></i>
                                <span>Lưu thông tin</span>
                            </button>
                            <a asp-page="./ChangePassword" class="btn-secondary">
                                <i class="fa-solid fa-key"></i>
                                <span>Đổi mật khẩu</span>
                            </a>
                        </div>
                    </form>
                </div>

                <!-- THÀNH VIÊN GL CINEMA -->
                <div class="section" data-section="member">
                    <div class="member-header">
                        <div class="member-title">HẠNG THÀNH VIÊN: @(Model.CurrentRank?.Name ?? "Chưa có hạng")</div>
                        <div class="member-point">
                            Điểm hiện tại: @Model.CurrentPoint.ToString("#,0")
                        </div>
                    </div>

                    <div class="member-progress">
                        <div class="member-progress-bar">
                            <div class="member-progress-fill" style="width:@pointPercent%;"></div>
                        </div>
                    </div>

                    <div class="member-cols">
                        <div class="member-card">
                            <div class="member-card-title">QUYỀN LỢI HIỆN TẠI</div>
                            <p>@(Model.RankBenefits ?? "Không có quyền lợi đặc biệt.")</p>
                        </div>
                        @if (Model.NextRankName != null)
                        {
                            <div class="member-card">
                                <div class="member-card-title">LÊN HẠNG @Model.NextRankName</div>
                                <p>Cần @Model.NextRankThreshold?.ToString("#,0") điểm</p>
                                <p>Còn thiếu @((Model.NextRankThreshold - Model.CurrentPoint)?.ToString("#,0")) điểm</p>
                            </div>
                        }
                    </div>

                    <div class="member-cta">
                        <button type="button" class="member-btn active">
                            Hạng hiện tại: @(Model.CurrentRank?.Name ?? "Chưa có hạng")
                        </button>
                    </div>
                </div>

                <!-- LỊCH SỬ MUA HÀNG -->
                <div class="section" data-section="history">
                    <div class="member-header" style="margin-bottom:10px;">
                        <div class="member-title">LỊCH SỬ MUA HÀNG</div>
                    </div>

                    @if (Model.History == null || !Model.History.Any())
                    {
                        <div class="history-empty">
                            Chưa có giao dịch nào. Hãy đặt vé để tích lũy điểm GL Friends.
                        </div>
                    }
                    else
                    {
                        <div class="history-table-wrap">
                            <table class="history-table">
                                <thead>
                                    <tr>
                                        <th>STT</th> @* đổi từ Mã đơn -> STT *@
                                        <th>Hoạt động</th>
                                        <th>Chi nhánh</th>
                                        <th>Ngày</th>
                                        <th>Tổng cộng</th>
                                        <th>Điểm</th>
                                        <th>Xem hóa đơn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var stt = 0;
                                    }
                                   
                                    @foreach (var i in Model.History)
                                    {
                                        stt++;

                                        var isSnackInvoice = string.IsNullOrEmpty(i.MovieTitle)
                                        && i.ShowDate == null
                                        && i.StartTime == null;

                                        var activity = isSnackInvoice ? "Mua bắp nước" : "Mua vé";
                                        var branch = isSnackInvoice ? "Quầy bắp nước" : (i.Room ?? "N/A");
                                        var orderDate = i.ShowDate?.ToString("dd/MM/yyyy")
                                        ?? i.CreatedAt?.ToString("dd/MM/yyyy");

                                        var paidTotal = i.TotalPrice;                 // đã thanh toán
                                        var baseTotal = i.BaseTotalPrice;             // giá gốc
                                        var points = (int)(baseTotal / 1000m);        // điểm theo giá gốc

                                        <tr>
                                            <td>@stt</td>
                                            <td>@activity</td>
                                            <td>@branch</td>
                                            <td>@(orderDate ?? "N/A")</td>
                                            <td>@paidTotal.ToString("#,0") đ</td>
                                            <td>@points Điểm</td>
                                            <td>
                                                <a href="javascript:void(0);"
                                                   class="history-action ticket-view-link"
                                                   data-invoice-id="@i.InvoiceId">
                                                    Xem chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    }
                </div>

            </div>
        </section>
    </div>
</div>

<!-- MODAL CHI TIẾT HÓA ĐƠN -->
<div id="ticket-modal-backdrop">
    <div class="ticket-modal-wrap">
        <div id="ticket-modal" class="ticket-modal-card">
            <div class="ticket-modal-header">
                <span>Chi tiết hóa đơn</span>
                <button type="button" id="ticket-modal-close" class="ticket-modal-close">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
            <div id="ticket-modal-body" class="ticket-modal-body">
                <!-- Nội dung vé sẽ được load bằng AJAX -->
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            // ====== SWITCH SECTION (INFO / MEMBER / HISTORY) ======
            const navButtons = document.querySelectorAll('.side-nav-btn');
            const sections = document.querySelectorAll('.section');

            function showSection(key) {
                sections.forEach(s => {
                    if (s.getAttribute('data-section') === key) {
                        s.classList.add('active');
                    } else {
                        s.classList.remove('active');
                    }
                });
            }

            navButtons.forEach(btn => {
                btn.addEventListener('click', function () {
                    navButtons.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');

                    const key = this.getAttribute('data-section');
                    showSection(key);
                });
            });

            // ====== MODAL XEM HÓA ĐƠN (VÉ / SNACK) ======

            const backdrop = document.getElementById('ticket-modal-backdrop');
            const bodyEl = document.getElementById('ticket-modal-body');
            const closeBtn = document.getElementById('ticket-modal-close');

            function openModal(html) {
                bodyEl.innerHTML = html;
                backdrop.style.display = 'block';
            }

            function closeModal() {
                backdrop.style.display = 'none';
                bodyEl.innerHTML = "";
            }

            if (closeBtn) {
                closeBtn.addEventListener("click", closeModal);
            }

            if (backdrop) {
                backdrop.addEventListener("click", e => {
                    if (e.target === backdrop) closeModal();
                });
            }

            document.querySelectorAll(".ticket-view-link").forEach(link => {
                link.addEventListener("click", function () {
                    const id = this.dataset.invoiceId;
                    if (!id) return;

                    openModal("<div>Đang tải...</div>");

                    // Razor Pages handler: OnGetTicketDetailModalAsync
                    fetch(`?handler=TicketDetailModal&invoiceId=${encodeURIComponent(id)}`)
                        .then(r => r.text())
                        .then(html => openModal(html))
                        .catch(() => openModal("<div>Lỗi tải chi tiết vé</div>"));
                });
            });
        })();
    </script>
}



