@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Kiểm tra email";
}

<style>
    :root {
        --panel: #020617;
        --indigo: #3b5ccc;
        --purple: #7c3aed;
        --text: #e5e7f5;
        --muted: #9ca3c7;
    }

    .info-shell {
        min-height: calc(100vh - 140px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 16px 60px;
    }

    .info-card {
        width: 100%;
        max-width: 540px;
        border-radius: 28px;
        background:
            radial-gradient(circle at 0 0, rgba(59, 130, 246, .35), transparent 55%),
            radial-gradient(circle at 100% 0, rgba(162, 28, 175, .28), transparent 55%),
            linear-gradient(145deg, #020617, #020617);
        border: 1px solid rgba(148, 163, 255, .45);
        box-shadow:
            0 22px 60px rgba(15, 23, 42, .95),
            0 0 0 1px rgba(15, 23, 42, .85);
        padding: 40px 32px;
        color: var(--text);
        text-align: center;
    }

    .info-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 24px;
        border-radius: 50%;
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 48px;
        color: #fff;
        box-shadow: 0 14px 40px rgba(59, 130, 246, .4);
    }

    .info-title {
        font-size: 28px;
        font-weight: 900;
        margin-bottom: 12px;
        color: var(--text);
    }

    .info-message {
        font-size: 15px;
        color: var(--muted);
        margin-bottom: 28px;
        line-height: 1.6;
    }

    .btn-back {
        display: inline-block;
        padding: 12px 32px;
        border-radius: 999px;
        background: linear-gradient(120deg, var(--indigo), var(--purple));
        color: #fff;
        text-decoration: none;
        font-weight: 800;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: .06em;
        box-shadow: 0 14px 38px rgba(56, 189, 248, .4);
        transition: filter .18s ease, transform .1s ease, box-shadow .18s ease;
    }

        .btn-back:hover {
            filter: brightness(1.05);
            transform: translateY(-1px);
            box-shadow: 0 18px 40px rgba(59, 130, 246, .65);
            color: #fff;
        }

    @@media (max-width: 575.98px) {
        .info-card {
            padding-inline: 24px;
        }
    }
</style>

<div class="info-shell">
    <div class="info-card">
        <div class="info-icon">📧</div>
        <h1 class="info-title">Kiểm tra email của bạn</h1>
        <p class="info-message">
            Vui lòng kiểm tra email để nhận mã xác nhận<br />
            và hoàn tất quá trình đặt lại mật khẩu.
        </p>
        <a asp-page="./Login" class="btn-back">Quay lại đăng nhập</a>
    </div>
</div>
