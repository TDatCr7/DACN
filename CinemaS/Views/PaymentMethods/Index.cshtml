@model IEnumerable<CinemaS.Models.PaymentMethods>

@{
    ViewData["Title"] = "Quản lý Phương Thức Thanh Toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="fa-solid fa-credit-card"></i> Quản lý Phương Thức Thanh Toán</h1>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus-circle"></i> Tạo mới
            </a>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="admin-table-wrap">
        <table class="table admin-table align-middle">
            <thead>
                <tr>
                    <th><i class="fa-solid fa-code"></i>Mã</th>
                    <th><i class="fa-solid fa-tag"></i>Tên</th>
                    <th><i class="fa-solid fa-list"></i>Loại</th>
                    <th><i class="fa-solid fa-building"></i>Nhà cung cấp</th>
                    <th><i class="fa-solid fa-toggle-on"></i>Trạng thái</th>
                    <th><i class="fa-solid fa-calendar"></i>Ngày tạo</th>
                    <th><i class="fa-solid fa-calendar-check"></i>Ngày cập nhật</th>
                    <th style="text-align:right;"><i class="fa-solid fa-ellipsis-vertical"></i>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center admin-text-muted py-4">
                            Không có phương thức thanh toán nào.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Code</strong></td>
                            <td>@item.Name</td>
                            <td>@item.Type</td>
                            <td class="admin-text-muted">@(item.Provider ?? "N/A")</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge-email-ok"><i class="fas fa-check"></i> Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge-email-no"><i class="fas fa-ban"></i> Ngừng hoạt động</span>
                                }
                            </td>
                            <td>@(item.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td>@(item.UpdatedAt?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.PaymentMethodId" 
                                   class="admin-icon-btn" title="Chỉnh sửa">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PaymentMethodId" 
                                   class="admin-icon-btn admin-icon-btn-danger" title="Xóa">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
