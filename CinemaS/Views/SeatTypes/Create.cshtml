@model CinemaS.Models.SeatTypes
@{
    ViewData["Title"] = "Thêm loại ghế";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        @* ONE PANEL: header + content inside, title left, remove subnote *@
        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-couch"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="seatTypeCreateForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-circle-plus me-1"></i> Tạo
                </button>
            </div>
        </div>

        @* divider like "island" but not separated *@
        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <form asp-action="Create" method="post" id="seatTypeCreateForm" novalidate>
                @Html.AntiForgeryToken()
                <div id="validationMessage" class="text-danger mb-3" style="display:none;"></div>

                <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                    Thông tin loại ghế
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Mã loại ghế</label>
                        <input type="text" class="form-control" value="@(ViewBag.NextSeatTypeId ?? "Tự động tạo")" readonly disabled />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Tên loại ghế</label>
                        <input asp-for="Name" class="form-control" placeholder="VD: NORMAL, VIP, COUPLE..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label">Giá vé (VNĐ)</label>
                        <input asp-for="Price" type="number" min="0" class="form-control" placeholder="VD: 75000" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const form = document.getElementById('seatTypeCreateForm');
            const nameInput = document.querySelector('input[name="Name"]');
            const priceInput = document.querySelector('input[name="Price"]');
            const validationMsg = document.getElementById('validationMessage');
            let hideTimeout = null;

            function showValidationMessage(message) {
                validationMsg.textContent = message;
                validationMsg.style.display = 'block';
                
                if (hideTimeout) clearTimeout(hideTimeout);
                hideTimeout = setTimeout(() => {
                    validationMsg.style.display = 'none';
                }, 3000);
            }

            form.addEventListener('submit', e => {
                let hasEmpty = false;
                let hasInvalid = false;

                if (!nameInput.value.trim()) {
                    hasEmpty = true;
                }
                if (!priceInput.value || priceInput.value <= 0) {
                    if (!priceInput.value) hasEmpty = true;
                    else hasInvalid = true;
                }

                if (hasEmpty || hasInvalid) {
                    e.preventDefault();
                    if (hasEmpty) {
                        showValidationMessage('Vui lòng điền đủ thông tin');
                    } else {
                        showValidationMessage('Thông tin không hợp lệ');
                    }
                }
            });
        })();
    </script>
}
