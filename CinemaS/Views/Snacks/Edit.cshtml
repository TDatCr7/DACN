@model CinemaS.Models.Snacks

@{
    ViewData["Title"] = "Chỉnh sửa Đồ Ăn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-cookie"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="snackEditForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                </button>
            </div>
        </div>

        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">
            <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                Thông tin đồ ăn
            </div>

            <form asp-action="Edit" method="post" enctype="multipart/form-data" id="snackEditForm" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="SnackId" />
                <input type="hidden" asp-for="Image" id="existingImage" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="SnackTypeId" class="form-label">Loại đồ ăn</label>
                        <select asp-for="SnackTypeId" class="form-select" asp-items="ViewBag.SnackTypeId">
                            <option value="">-- Chọn loại đồ ăn --</option>
                        </select>
                        <span asp-validation-for="SnackTypeId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Tên đồ ăn</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label">Giá (VNĐ)</label>
                        <input asp-for="Price" class="form-control" type="number" min="0" step="1000" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IsActive" class="form-label">Trạng thái</label>
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">Đang bán</label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Ảnh sản phẩm</label>
                        <div class="mb-2">
                            <label for="imageFile" class="btn btn-outline-primary">
                                <i class="fa-solid fa-upload"></i> Chọn ảnh mới
                            </label>
                            <input type="file" id="imageFile" name="imageFile" accept="image/*" class="d-none" onchange="previewImage(event)" />
                        </div>

                        <div class="text-center">
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <img id="imagePreview" src="@Model.Image" alt="@Model.Name" class="rounded shadow-sm" style="max-width:200px; border:2px solid #dee2e6;" />
                            }
                            else
                            {
                                <img id="imagePreview" src="/images/snacks/default-snack.png" alt="Default" class="rounded shadow-sm" style="max-width:200px; border:2px solid #dee2e6;" />
                            }
                        </div>

                        <small class="d-block mt-2">
                            Bỏ trống nếu không muốn thay đổi ảnh (tối đa 5MB).
                        </small>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                // Giới hạn kích thước
                if (file.size > 5 * 1024 * 1024) {
                    alert('Kích thước ảnh không được vượt quá 5MB!');
                    event.target.value = '';
                    return;
                }
                // Kiểm tra định dạng
                const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                if (!allowedTypes.includes(file.type)) {
                    alert('Chỉ chấp nhận file ảnh JPG, PNG, GIF!');
                    event.target.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (e) {
                    const preview = document.getElementById('imagePreview');
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        }

        // Ẩn alert sau 5s
        setTimeout(() => document.querySelectorAll('.alert').forEach(a => a.style.display = 'none'), 5000);
    </script>
}
