@model CinemaS.Models.Snacks
@{
    ViewData["Title"] = "Thêm đồ ăn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        @* ONE PANEL: header + content inside, title left, remove subnote *@
        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-utensils"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="snackCreateForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-circle-plus me-1"></i> Tạo
                </button>
            </div>
        </div>

        @* divider like "island" but not separated *@
        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <form asp-action="Create" method="post" enctype="multipart/form-data" id="snackCreateForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                    Thông tin đồ ăn
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="SnackTypeId" class="form-label">Loại đồ ăn</label>
                        <select asp-for="SnackTypeId" class="form-select" asp-items="ViewBag.SnackTypeId">
                            <option value="">-- Chọn loại đồ ăn --</option>
                        </select>
                        <span asp-validation-for="SnackTypeId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Tên đồ ăn</label>
                        <input asp-for="Name" class="form-control" placeholder="VD: Bắp rang bơ, Coca Cola..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label">Giá (VNĐ)</label>
                        <input asp-for="Price" class="form-control" type="number" min="0" step="1000" placeholder="Nhập giá tiền" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Ảnh sản phẩm</label>
                        <div>
                            <label for="imageFile" class="btn btn-outline-primary">
                                <i class="fa-solid fa-upload"></i> Chọn ảnh
                            </label>
                            <input type="file" id="imageFile" name="imageFile" accept="image/*" class="d-none" onchange="previewImage(event)" />
                            <img id="imagePreview" class="mt-3 rounded shadow-sm" style="max-width:200px; display:none;" />
                            <small class="form-text text-white-50 d-block mt-2">Định dạng: JPG, PNG, GIF (tối đa 5MB)</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label"> Đang bán</label>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Hiển thị ảnh xem trước
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const preview = document.getElementById('imagePreview');
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        }

        // Ẩn alert sau 5s
        setTimeout(() => document.querySelectorAll('.alert').forEach(a => a.style.display = 'none'), 5000);
    </script>
}
