@model CinemaS.Models.Snacks

@{
    ViewData["Title"] = "Xóa Đồ Ăn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/delete.css" />

<div class="container mt-4">
	<div class="delete-container">
		<h1 class="mb-4 text-danger">
			<i class="fas fa-exclamation-triangle"></i> Xác Nhận Xóa Đồ Ăn
		</h1>

		<div class="warning-box">
			<h5><i class="fas fa-exclamation-triangle"></i> Cảnh báo!</h5>
			<p class="mb-0">
				Bạn có chắc chắn muốn xóa đồ ăn này? Hành động này không thể hoàn tác!
			</p>
		</div>

		<h4 class="mb-3">Thông tin đồ ăn:</h4>

		<div class="info-grid">
			<div class="info-label">Mã Đồ Ăn:</div>
			<div class="info-value"><strong>@Model.SnackId</strong></div>

			<div class="info-label">Tên:</div>
			<div class="info-value">@Model.Name</div>

			<div class="info-label">Giá:</div>
			<div class="info-value">@Model.Price VNĐ</div>

			<div class="info-label">Hình ảnh:</div>
			<div class="info-value">@Model.Image</div>

			<div class="info-label">Mô tả:</div>
			<div class="info-value">@Model.Description</div>

			<div class="info-label">Trạng thái:</div>
			<div class="info-value">@(Model.IsActive ? "Hoạt động" : "Không hoạt động")</div>
		</div>

		<div class="d-flex justify-content-between mt-4">
			<button type="button" class="btn btn-secondary" onclick="history.back()">
				<i class="fas fa-arrow-left"></i> Quay lại
			</button>

			<form asp-action="Delete" method="post" style="display: inline;" onsubmit="return confirmDelete();">
				<input type="hidden" asp-for="SnackId" />
				<button type="submit" class="btn btn-danger">
					<i class="fas fa-trash"></i> Xóa
				</button>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		function confirmDelete() {
			return confirm('Bạn có CHẮC CHẮN muốn xóa đồ ăn này không?');
		}
	</script>
}
