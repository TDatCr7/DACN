@{
    ViewData["Title"] = "Quản Lý Hệ Thống";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-5" style="font-weight:800;color:#cfd6ff;">
            <i class="fas fa-cogs me-2" style="color:#7c3aed;"></i> Quản Lý Hệ Thống
        </h1>
        <p class="lead" style="color:#9aa5c6;">Dashboard quản trị cho Admin</p>
    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center mb-4"
             data-auto-dismiss="true"
             style="max-width:720px;margin:0 auto;border-radius:999px;
                    background:rgba(22,163,74,0.12);border:1px solid rgba(22,163,74,0.6);
                    color:#bbf7d0;">
            <i class="fa-solid fa-circle-check me-2"></i>
            @TempData["Message"]
        </div>
    }


    <div class="row g-4">

        <!-- Quản lý Tài khoản -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 hover-card"
                 style="background:linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03)); border:1px solid rgba(255,255,255,.10);">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-users-cog fa-3x" style="color:#06b6d4;"></i>
                    </div>
                    <h4 class="card-title fw-bold text-white">Quản Lý Tài Khoản</h4>
                    <p class="text-muted small">Thêm, xoá, sửa và phân quyền người dùng</p>
                    <a asp-controller="AdminUsers" asp-action="Index"
                       class="btn btn-primary btn-lg w-100"
                       style="background:linear-gradient(90deg,#3b5ccc,#7c3aed);border:0;">
                        <i class="fas fa-arrow-right"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>

        <!-- Quản lý Phòng Chiếu -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 hover-card"
                 style="background:linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03)); border:1px solid rgba(255,255,255,.10);">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-door-open fa-3x" style="color:#3b5ccc;"></i>
                    </div>
                    <h4 class="card-title fw-bold text-white">Quản Lý Phòng Chiếu</h4>
                    <p class="text-muted small">Tạo và quản lý các phòng chiếu phim</p>
                    <a href="/CinemaTheaters" class="btn btn-primary btn-lg w-100"
                       style="background:linear-gradient(90deg,#3b5ccc,#7c3aed);border:0;">
                        <i class="fas fa-arrow-right"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>

        <!-- Quản lý Suất Chiếu -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 hover-card"
                 style="background:linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03)); border:1px solid rgba(255,255,255,.10);">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-calendar-alt fa-3x" style="color:#22c55e;"></i>
                    </div>
                    <h4 class="card-title fw-bold text-white">Quản Lý Suất Chiếu</h4>
                    <p class="text-muted small">Tạo lịch chiếu cho các bộ phim</p>
                    <a href="/ShowTimes" class="btn btn-primary btn-lg w-100"
                       style="background:linear-gradient(90deg,#3b5ccc,#7c3aed);border:0;">
                        <i class="fas fa-arrow-right"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>

        <!-- Quản lý Phim -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 hover-card"
                 style="background:linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03)); border:1px solid rgba(255,255,255,.10);">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-film fa-3x" style="color:#a21caf;"></i>
                    </div>
                    <h4 class="card-title fw-bold text-white">Quản Lý Phim</h4>
                    <p class="text-muted small">Thêm mới và chỉnh sửa thông tin phim</p>
                    <a href="/Movies" class="btn btn-primary btn-lg w-100"
                       style="background:linear-gradient(90deg,#3b5ccc,#7c3aed);border:0;">
                        <i class="fas fa-arrow-right"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>

        <!-- Quản lý Hóa Đơn -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 hover-card"
                 style="background:linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03)); border:1px solid rgba(255,255,255,.10);">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fa-solid fa-file-invoice-dollar fa-3x" style="color:#22c55e;"></i>
                    </div>
                    <h4 class="card-title fw-bold text-white">Quản Lý Hóa Đơn</h4>
                    <p class="text-muted small">Xem, chỉnh sửa và xóa hóa đơn / thanh toán</p>
                    <a asp-controller="Invoices" asp-action="Index"
                       class="btn btn-primary btn-lg w-100"
                       style="background:linear-gradient(90deg,#3b5ccc,#7c3aed);border:0;">
                        <i class="fas fa-arrow-right"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>

        <!-- Quản lý Vé -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 hover-card"
                 style="background:linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03)); border:1px solid rgba(255,255,255,.10);">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-ticket-alt fa-3x" style="color:#3b5ccc;"></i>
                    </div>
                    <h4 class="card-title fw-bold text-white">Quản Lý Vé</h4>
                    <p class="text-muted small">Quản lý vé và loại vé trong hệ thống</p>

                    <a href="/Tickets/Management" class="btn btn-primary btn-lg w-100"
                       style="background:linear-gradient(90deg,#3b5ccc,#7c3aed);border:0%;">
                        <i class="fas fa-arrow-right"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>

        <!-- Quản lý Snack -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 hover-card"
                 style="background:linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03)); border:1px solid rgba(255,255,255,.10);">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-utensils fa-3x" style="color:#ff9800;"></i>
                    </div>
                    <h4 class="card-title fw-bold text-white">Quản Lý Đồ Ăn</h4>
                    <p class="text-muted small">Quản lý danh sách đồ ăn và loại đồ ăn</p>
                    <a href="/Snacks/Management" class="btn btn-primary btn-lg w-100"
                       style="background:linear-gradient(90deg,#3b5ccc,#7c3aed);border:0%;">
                        <i class="fas fa-arrow-right"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform .3s ease, box-shadow .3s ease;
    }

        .hover-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 16px 32px rgba(0,0,0,.35) !important;
        }

    .text-muted {
        color: #9aa5c6 !important;
    }
</style>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const alerts = document.querySelectorAll('.alert[data-auto-dismiss="true"]');
            if (alerts.length === 0) return;

            setTimeout(function () {
                alerts.forEach(function (el) {
                    el.classList.add('d-none');
                });
            }, 5000); // 5s
        });
    </script>
}
