@section Scripts {
    <script>
        const showTimeId = '@Model.ShowTimeId';

        let selectedSeats = [];
        let selectedSnacks = [];

        let currentInvoiceId = null;
        let currentInvoiceAmount = 0;
        let currentCustomerInfo = null;

        // Promo state:
        // appliedPromo = { code, promotionId, promotionName, discountPercent, discountAmount, totalAfterDiscount, subTotalSnapshot }
        let appliedPromo = null;

        function showBookingLoading(show) {
            const overlay = document.getElementById('bookingLoadingOverlay');
            if (!overlay) return;
            if (show) overlay.classList.add('show'); else overlay.classList.remove('show');
        }

        function showBookingToast(message, type) {
            const toast = document.getElementById('bookingToast');
            if (!toast) return;
            toast.innerHTML = message;
            toast.className = 'booking-toast booking-toast-' + type + ' show';
            setTimeout(() => { toast.classList.remove('show'); }, 5000);
        }

        function formatVND(n) {
            return (n || 0).toLocaleString('vi-VN') + ' ƒë';
        }

        // GH·∫æ ƒê√îI: m·ªói gh·∫ø trong c·∫∑p ƒë∆∞·ª£c t√≠nh g·∫•p ƒë√¥i price g·ªëc
        function getSeatTotal() {
            return selectedSeats.reduce((sum, s) => {
                const base = s.price || 0;
                const finalPrice = s.isCouple ? base * 2 : base;
                return sum + finalPrice;
            }, 0);
        }

        function getSnackTotal() {
            return selectedSnacks.reduce((sum, s) => sum + ((s.price || 0) * (s.quantity || 1)), 0);
        }

        function getSubTotal() {
            return getSeatTotal() + getSnackTotal();
        }

        function resetPromoUI(message, msgClass) {
            appliedPromo = null;

            const msgEl = document.getElementById('promoMessage');
            const discountEl = document.getElementById('discountAmount');
            const nameEl = document.getElementById('promoName');
            const percentEl = document.getElementById('promoPercent');

            if (discountEl) discountEl.textContent = formatVND(0);
            if (nameEl) nameEl.textContent = '-';
            if (percentEl) percentEl.textContent = '-';

            if (msgEl) {
                msgEl.textContent = message || '';
                msgEl.className = msgClass ? ('promo-msg ' + msgClass) : 'promo-msg';
            }

            const btnRemove = document.getElementById('btnRemovePromo');
            const btnApply = document.getElementById('btnApplyPromo');
            if (btnRemove) btnRemove.style.display = 'none';
            if (btnApply) btnApply.style.display = 'inline-flex';
        }

        function updateSummary() {
            const selectedSeatsSpan = document.getElementById('selectedSeats');
            const subTotalSpan = document.getElementById('subTotalPrice');
            const totalPriceSpan = document.getElementById('totalPrice');
            const btnBook = document.getElementById('btnBook');

            const snackListEl = document.getElementById('selectedSnacksList');
            const snackTotalInline = document.getElementById('snackTotalInline');

            const labels = selectedSeats.map(s => s.label);
            labels.sort((a, b) => a.localeCompare(b, 'vi-VN', { numeric: true }));

            const seatTotal = getSeatTotal();
            const snackTotal = getSnackTotal();
            const subTotal = seatTotal + snackTotal;

            if (selectedSeatsSpan) selectedSeatsSpan.textContent = labels.length ? labels.join(', ') : 'Ch∆∞a ch·ªçn';
            if (subTotalSpan) subTotalSpan.textContent = formatVND(subTotal);
            if (snackTotalInline) snackTotalInline.textContent = formatVND(snackTotal);

            // render danh s√°ch snack (text-only)
            if (snackListEl) {
                if (!selectedSnacks.length) {
