@model IEnumerable<CinemaS.Models.MembershipRank>

@{
    ViewData["Title"] = "Quản lý Hạng Thành Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="fa-solid fa-crown"></i> Quản lý Hạng Thành Viên</h1>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus-circle"></i> Tạo mới
            </a>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="admin-table-wrap">
        <table class="table admin-table align-middle">
            <thead>
                <tr>
                    <th><i class="fa-solid fa-tag"></i>Tên hạng</th>
                    <th><i class="fa-solid fa-star"></i>Điểm yêu cầu</th>
                    <th><i class="fa-solid fa-ticket"></i>Điểm hoàn vé</th>
                    <th><i class="fa-solid fa-popcorn"></i>Điểm hoàn combo</th>
                    <th><i class="fa-solid fa-sort-numeric-up"></i>Mức ưu tiên</th>
                    <th><i class="fa-solid fa-calendar"></i>Ngày tạo</th>
                    <th><i class="fa-solid fa-calendar-check"></i>Ngày cập nhật</th>
                    <th style="text-align:right;"><i class="fa-solid fa-ellipsis-vertical"></i>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center admin-text-muted py-4">
                            Không có hạng thành viên nào.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.RequirePoint</td>
                            <td>@item.PointReturnTicket</td>
                            <td>@item.PointReturnCombo</td>
                            <td>@item.PriorityLevel</td>
                            <td>@(item.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td>@(item.UpdatedAt?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.MembershipRankId" 
                                   class="admin-icon-btn" title="Chỉnh sửa">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MembershipRankId" 
                                   class="admin-icon-btn" title="Chi tiết">
                                    <i class="fa-regular fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MembershipRankId" 
                                   class="admin-icon-btn admin-icon-btn-danger" title="Xóa">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
    </div>
</div>
