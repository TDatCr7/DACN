@using CinemaS.Models
@model CinemaS.Models.ShowTimes

@{
    ViewData["Title"] = "Chỉnh sửa suất chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var seatTypes = ViewBag.SeatTypes as IEnumerable<SeatTypes>;
}

<!-- Font Awesome & CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link rel="stylesheet" href="~/css/management.css" />
<link rel="stylesheet" href="~/css/table.css" />
<link rel="stylesheet" href="~/css/Create.css" />

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header text-white">
                    <h3><i class="fas fa-film"></i> Chỉnh sửa suất chiếu</h3>
                </div>

                <div class="card-body">
                    <!-- Thông báo -->
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> <strong>Lỗi:</strong> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["Message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" asp-controller="ShowTimes" method="post" novalidate>
                        <input type="hidden" asp-for="ShowTimeId" />
                        <input type="hidden" asp-for="TotalCinema" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="UpdatedAt" />

                        <!-- Hàng 1: Chọn phim và phòng -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label"><i class="fas fa-video"></i> Phim <span class="text-danger">*</span></label>
                                <select asp-for="MoviesId" class="form-select" asp-items="@ViewBag.Movies">
                                    <option value="">-- Chọn phim --</option>
                                </select>
                                <span asp-validation-for="MoviesId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label"><i class="fas fa-door-open"></i> Phòng chiếu <span class="text-danger">*</span></label>
                                <select asp-for="CinemaTheaterId" class="form-select" asp-items="@ViewBag.CinemaTheaters">
                                    <option value="">-- Chọn phòng chiếu --</option>
                                </select>
                                <span asp-validation-for="CinemaTheaterId" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Hàng 2: Ngày và giờ -->
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label"><i class="fas fa-calendar-days"></i> Ngày chiếu</label>
                                <input asp-for="ShowDate" type="date" class="form-control" value="@Model.ShowDate?.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="ShowDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label"><i class="fas fa-clock"></i> Giờ bắt đầu</label>
                                <input asp-for="StartTime" type="time" class="form-control" value="@Model.StartTime?.ToString("HH:mm")" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label"><i class="fas fa-hourglass-end"></i> Giờ kết thúc</label>
                                <input asp-for="EndTime" type="time" class="form-control" value="@Model.EndTime?.ToString("HH:mm")" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-sliders"></i> Điều chỉnh giá suất chiếu (%)
                                </label>
                                <div class="input-group">
                                    <input asp-for="PriceAdjustmentPercent"
                                           type="text"
                                           class="form-control"
                                           id="priceAdjustmentPercent"
                                           inputmode="numeric" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <small class="text-white-50">
                                    <i class="fas fa-circle-info"></i>
                                    VD: 10 = tăng 10% ; -20 = giảm 20%
                                </small>
                                <small class="text-danger" id="priceAdjustmentError" style="display:none;"></small>
                                <span asp-validation-for="PriceAdjustmentPercent" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header text-white d-flex justify-content-between align-items-center">
                                <strong><i class="fa-solid fa-tags"></i> Giá ghế</strong>
                                <a asp-action="Index" asp-controller="SeatTypes" class="btn btn-sm btn-info">
                                    <i class="fa-solid fa-couch"></i> Quản lý loại ghế
                                </a>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @if (seatTypes != null)
                                    {
                                        foreach (var seatType in seatTypes)
                                        {
                                            var priceInt = (int)(seatType.Price ?? 0);

                                            <div class="col-md-4 mb-3">
                                                <label class="form-label">
                                                    @seatType.Name
                                                    @if (seatType.Name == "NORMAL")
                                                    {
                                                        <span class="badge bg-secondary">Ghế thường</span>
                                                    }
                                                    else if (seatType.Name == "VIP")
                                                    {
                                                        <span class="badge bg-warning text-dark">Ghế VIP</span>
                                                    }
                                                    else if (seatType.Name == "COUPLE")
                                                    {
                                                        <span class="badge bg-danger">Ghế đôi</span>
                                                    }
                                                </label>
                                                <div class="p-3 border rounded">
                                                    <div class="mb-2" readonly>
                                                        <strong id="price-display-@seatType.SeatTypeId">@priceInt.ToString("N0")</strong> đ
                                                    </div>
                                                </div>
                                                <input type="hidden"
                                                       name="seatTypePrices[@seatType.SeatTypeId]"
                                                       class="form-control seat-base-price"
                                                       data-seat-id="@seatType.SeatTypeId"
                                                       data-price="@priceInt"
                                                       value="@priceInt" />
                                                <small style="display:block; margin-top: 5px;">
                                                    Giá gốc: <strong>@priceInt.ToString("N0") đ</strong>
                                                </small>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Nút hành động -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="button" class="btn btn-secondary" onclick="history.back()">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        // Tự ẩn thông báo sau 5s
        setTimeout(() => document.querySelectorAll('.alert').forEach(a => a.style.display = 'none'), 5000);
        
        // Price adjustment input validation and display
        const priceAdjustmentInput = document.getElementById('priceAdjustmentPercent');
        const priceAdjustmentError = document.getElementById('priceAdjustmentError');
        const seatPriceElements = document.querySelectorAll('.seat-base-price');

        // Restrict input to only -, +, and numbers (0-9)
        priceAdjustmentInput.addEventListener('input', function(e) {
            let value = this.value;
            
            // Remove all characters that are not -, +, or digits
            value = value.replace(/[^\d+\-]/g, '');
            
            // Handle multiple signs or signs not at the beginning
            if (value.length > 0) {
                const firstChar = value[0];
                const hasSign = firstChar === '+' || firstChar === '-';
                
                if (hasSign) {
                    // Keep only the first sign and remove others
                    value = firstChar + value.slice(1).replace(/[+\-]/g, '');
                } else {
                    // Remove any signs that appear later
                    value = value.replace(/[+\-]/g, '');
                }
            }
            
            this.value = value;
            updateAdjustedPrices();
            validateAdjustmentPercent();
        });

        // Validate the adjustment percentage is between -100 and 100
        function validateAdjustmentPercent() {
            let value = priceAdjustmentInput.value.trim();
            
            // Check if input is only a sign (-, +) with no digits
            if (value === '-' || value === '+' || value === '.') {
                priceAdjustmentError.textContent = 'Giá trị không hợp lệ';
                priceAdjustmentError.style.display = 'block';
                priceAdjustmentInput.classList.add('is-invalid');
                return false;
            }
            
            let numValue = parseFloat(value) || 0;
            
            if (value !== '' && (numValue < -100 || numValue > 100)) {
                priceAdjustmentError.textContent = 'Giá trị phải từ -100 đến 100';
                priceAdjustmentError.style.display = 'block';
                priceAdjustmentInput.classList.add('is-invalid');
                return false;
            } else {
                priceAdjustmentError.style.display = 'none';
                priceAdjustmentInput.classList.remove('is-invalid');
                return true;
            }
        }
                function stripFractional(value) {
            if (!value) return '';
            // Allow + or - at start
            const match = value.match(/^([+-]?)(\d+)/);
            return match ? (match[1] || '') + match[2] : '';
        }

        // On load, ensure displayed value has no decimals
        document.addEventListener('DOMContentLoaded', () => {
            if (priceAdjustmentInput) {
                priceAdjustmentInput.value = stripFractional(priceAdjustmentInput.value) || '0';
                updateAdjustedPrices();
            }
        });
        // Update adjusted prices for all seat types
        function updateAdjustedPrices() {
            let percent = parseFloat(priceAdjustmentInput.value) || 0;
            
            // Clamp the value to -100 to 100
            if (percent < -100) percent = -100;
            if (percent > 100) percent = 100;
            
            seatPriceElements.forEach(element => {
                const basePrice = parseFloat(element.getAttribute('data-price'));
                const seatId = element.getAttribute('data-seat-id');
                const adjustedPrice = Math.round(basePrice * (1 + percent / 100));
                
                const priceDisplay = document.getElementById(`price-display-${seatId}`);
                if (priceDisplay) {
                    priceDisplay.textContent = adjustedPrice.toLocaleString('vi-VN');
                }
            });
        }

        // Initialize on page load
        priceAdjustmentInput.addEventListener('blur', validateAdjustmentPercent);
        priceAdjustmentInput.addEventListener('change', validateAdjustmentPercent);
        
        // Initialize adjusted prices on page load
        updateAdjustedPrices();
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const cinemaTheaterSelect = document.querySelector('[asp-for="CinemaTheaterId"]');
            const totalCinemaInput = document.querySelector('[asp-for="TotalCinema"]');

            cinemaTheaterSelect.addEventListener('change', async function () {
                const selectedTheaterId = this.value;
                if (!selectedTheaterId) {
                    totalCinemaInput.value = '';
                    return;
                }

                try {
                    const response = await fetch(`/CinemaTheaters/GetTotalSeats?cinemaTheaterId=${selectedTheaterId}`);
                    const data = await response.json();

                    if (data.success) {
                        totalCinemaInput.value = data.totalSeats;
                    } else {
                        totalCinemaInput.value = '';
                        console.error('Error fetching total seats:', data.message);
                    }
                } catch (error) {
                    totalCinemaInput.value = '';
                    console.error('Error fetching total seats:', error);
                }
            });
        });
    </script>
}
