@using CinemaS.Models
@model CinemaS.Models.ShowTimes
@{
    ViewData["Title"] = "Thêm suất chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var seatTypes = ViewBag.SeatTypes as IEnumerable<SeatTypes>;
}

<style>
    /* Hide default validation messages and server-side validation */
    [asp-validation-for],
    [asp-validation-summary] {
        display: none !important;
    }
</style>

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        @* ONE PANEL: header + content inside, title left, remove subnote *@
        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-calendar-plus"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="showTimeCreateForm"
                        class="btn btn-primary btn-sweep px-3"
                        id="createBtn"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-circle-plus me-1"></i> Tạo
                </button>
            </div>
        </div>

        @* divider like "island" but not separated *@
        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <form asp-action="Create" method="post" id="showTimeCreateForm">
                @Html.AntiForgeryToken()

                <!-- Custom validation message container -->
                <div id="customValidationMessage" class="alert alert-danger" style="display:none; margin-bottom:16px;">
                    <i class="fa-solid fa-circle-exclamation"></i>
                    <span id="validationMessageText"></span>
                </div>

                <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                    Thông tin suất chiếu
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="MoviesId" class="form-label">Phim</label>
                        <div class="input-group">
                            <select asp-for="MoviesId" class="form-select" id="movieSelect">
                                <option value="">-- Chọn phim --</option>
                                @if (ViewBag.Movies != null)
                                {
                                    foreach (SelectListItem item in ViewBag.Movies)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                            <a href="@Url.Action("Index", "Movies")"
                               class="btn btn-outline-info" title="Xem danh sách phim">
                                <i class="fa-solid fa-video"></i>
                            </a>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CinemaTheaterId" class="form-label">Phòng chiếu</label>
                        <div class="input-group">
                            <select asp-for="CinemaTheaterId" class="form-select" id="cinemaSelect">
                                <option value="">-- Chọn phòng --</option>
                                @if (ViewBag.CinemaTheaters != null)
                                {
                                    foreach (SelectListItem item in ViewBag.CinemaTheaters)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                            <a href="@Url.Action("Index", "CinemaTheaters")"
                               class="btn btn-outline-info" title="Xem danh sách phòng">
                                <i class="fa-solid fa-building"></i>
                            </a>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ShowDate" class="form-label">Ngày chiếu</label>
                        <input asp-for="ShowDate" type="date" class="form-control" id="showDate"
                               min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Giờ bắt đầu</label>
                        <div class="input-group">
                            <input type="time" name="startTimeInput" class="form-control" id="startTime" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Giờ kết thúc</label>
                        <div class="input-group">
                            <input type="time" name="endTimeInput" class="form-control" id="endTime" />
                            <button type="button" id="clearTimeBtn" class="btn btn-outline-danger"
                                    title="Xóa giờ bắt đầu & kết thúc">
                                <i class="fa-solid fa-xmark"></i>
                            </button>
                        </div>

                        <small class="text-white-50" id="movieDurationInfo" style="display:none;">
                            <i class="fa-solid fa-circle-info"></i> Thời lượng phim:
                            <span id="movieDuration">0</span>
                        </small>
                    </div>

                    <div class="col-12">
                        <div id="overlapWarning" class="alert alert-warning" style="display:none;">
                            <i class="fa-solid fa-triangle-exclamation"></i>
                            <span id="overlapMessage"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PriceAdjustmentPercent" class="form-label">Điều chỉnh giá suất chiếu (%)</label>
                        <div class="input-group">
                            <input asp-for="PriceAdjustmentPercent"
                                   type="text"
                                   class="form-control"
                                   id="priceAdjustmentPercent"
                                   value="0"
                                   placeholder="VD: 10 (tăng 10%), -20 (giảm 20%)"
                                   inputmode="numeric" />
                            <span class="input-group-text">%</span>
                        </div>
                        <small class="text-white-50">
                            <i class="fa-solid fa-circle-info"></i>
                            VD: 10 = tăng 10% ; -20 = giảm 20%
                        </small>
                        <small class="text-danger" id="priceAdjustmentError" style="display:none;"></small>
                    </div>
                </div>

                <div style="height:1px;background:rgba(148,163,255,.14);margin:18px 0 14px;"></div>

                <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                    Giá ghế
                </div>

                <div class="admin-form-card" style="background: rgba(15,23,42,.96); border: 1px solid rgba(148,163,255,.35); border-radius: 12px; padding: 16px; margin-bottom: 16px;">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <strong><i class="fa-solid fa-tags"></i> Giá ghế</strong>
                        <a asp-action="Index" asp-controller="SeatTypes" class="btn btn-sm btn-info">
                            <i class="fa-solid fa-couch"></i> Quản lý loại ghế
                        </a>
                    </div>
                    <div class="row">
                        @if (seatTypes != null)
                        {
                            foreach (var seatType in seatTypes)
                            {
                                var priceInt = (int)(seatType.Price ?? 0);

                                <div class="col-md-4 mb-3">
                                    <label class="form-label">
                                        @seatType.Name
                                        @if (seatType.Name == "NORMAL")
                                        {
                                            <span class="badge bg-secondary">Ghế thường</span>
                                        }
                                        else if (seatType.Name == "VIP")
                                        {
                                            <span class="badge bg-warning text-dark">Ghế VIP</span>
                                        }
                                        else if (seatType.Name == "COUPLE")
                                        {
                                            <span class="badge bg-danger">Ghế đôi</span>
                                        }
                                    </label>
                                    <div class="p-3 border rounded">
                                        <div class="mb-2" readonly>
                                            <strong id="price-display-@seatType.SeatTypeId">@priceInt.ToString("N0")</strong> đ
                                        </div>
                                    </div>
                                    <input type="hidden"
                                           name="seatTypePrices[@seatType.SeatTypeId]"
                                           class="form-control seat-base-price"
                                           data-seat-id="@seatType.SeatTypeId"
                                           data-price="@priceInt"
                                           value="@priceInt" />
                                    <small style="display:block; margin-top: 5px;">
                                        Giá gốc: <strong>@priceInt.ToString("N0") đ</strong>
                                    </small>
                                </div>
                            }
                        }
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Price adjustment input validation and display
        const priceAdjustmentInput = document.getElementById('priceAdjustmentPercent');
        const priceAdjustmentError = document.getElementById('priceAdjustmentError');
        const seatPriceElements = document.querySelectorAll('.seat-base-price');

        // Restrict input to only -, +, and numbers (0-9)
        priceAdjustmentInput.addEventListener('input', function(e) {
            let value = this.value;
            
            // Remove all characters that are not -, +, or digits
            value = value.replace(/[^\d+\-]/g, '');
            
            // Handle multiple signs or signs not at the beginning
            if (value.length > 0) {
                const firstChar = value[0];
                const hasSign = firstChar === '+' || firstChar === '-';
                
                if (hasSign) {
                    // Keep only the first sign and remove others
                    value = firstChar + value.slice(1).replace(/[+\-]/g, '');
                } else {
                    // Remove any signs that appear later
                    value = value.replace(/[+\-]/g, '');
                }
            }
            
            this.value = value;
            updateAdjustedPrices();
            validateAdjustmentPercent();
            updateButtonState();
        });

        // Validate the adjustment percentage is between -100 and 100
        function validateAdjustmentPercent() {
            let value = priceAdjustmentInput.value.trim();
            
            // Check if input is only a sign (-, +) with no digits
            if (value === '-' || value === '+' || value === '.') {
                priceAdjustmentError.textContent = 'Giá trị không hợp lệ';
                priceAdjustmentError.style.display = 'block';
                priceAdjustmentInput.classList.add('is-invalid');
                return false;
            }
            
            let numValue = parseFloat(value) || 0;
            
            if (value !== '' && (numValue < -100 || numValue > 100)) {
                priceAdjustmentError.textContent = 'Giá trị phải từ -100 đến 100';
                priceAdjustmentError.style.display = 'block';
                priceAdjustmentInput.classList.add('is-invalid');
                return false;
            } else {
                priceAdjustmentError.style.display = 'none';
                priceAdjustmentInput.classList.remove('is-invalid');
                return true;
            }
        }

        // Update button state based on validations
        function updateButtonState() {
            const hasOverlap = document.getElementById('overlapWarning').style.display !== 'none';
            let priceValid = true;
            let value = priceAdjustmentInput.value.trim();
            if (value === '-' || value === '+' || value === '.') {
                priceValid = false;
            } else {
                let numValue = parseFloat(value) || 0;
                if (value !== '' && (numValue < -100 || numValue > 100)) {
                    priceValid = false;
                }
            }
            
            const createBtn = document.getElementById('createBtn');
            if (hasOverlap || !priceValid) {
                createBtn.disabled = true;
                createBtn.classList.add('btn-secondary');
                createBtn.classList.remove('btn-primary');
            } else {
                createBtn.disabled = false;
                createBtn.classList.remove('btn-secondary');
                createBtn.classList.add('btn-primary');
            }
        }

        // Update adjusted prices for all seat types
        function updateAdjustedPrices() {
            let percent = parseFloat(priceAdjustmentInput.value) || 0;
            
            // Clamp the value to -100 to 100
            if (percent < -100) percent = -100;
            if (percent > 100) percent = 100;
            
            seatPriceElements.forEach(element => {
                const basePrice = parseFloat(element.getAttribute('data-price'));
                const seatId = element.getAttribute('data-seat-id');
                const adjustedPrice = Math.round(basePrice * (1 + percent / 100));
                
                const priceDisplay = document.getElementById(`price-display-${seatId}`);
                if (priceDisplay) {
                    priceDisplay.textContent = adjustedPrice.toLocaleString('vi-VN');
                }
            });
        }

        // Initialize on page load
        priceAdjustmentInput.addEventListener('blur', () => {
            validateAdjustmentPercent();
            updateButtonState();
        });
        priceAdjustmentInput.addEventListener('change', () => {
            validateAdjustmentPercent();
            updateButtonState();
        });

        // Movie duration and time handling
        const moviesData = {
            @if (ViewBag.MoviesWithDuration is Dictionary<string, int> moviesWithDuration)
            {
                    var last = moviesWithDuration.Last();
                    foreach (var item in moviesWithDuration)
                    {
                            if (item.Key == last.Key)
                            {
                                    @: '@item.Key': @item.Value
                            }
                            else
                            {
                                    @: '@item.Key': @item.Value,
                            }
                    }
            }
        };

        const form = document.getElementById('showTimeCreateForm');
        const movieSelect = document.getElementById('movieSelect');
        const startTime = document.getElementById('startTime');
        const endTime = document.getElementById('endTime');
        const durationInfo = document.getElementById('movieDurationInfo');
        const durationSpan = document.getElementById('movieDuration');
        let userEditedEndTime = false;
        let validationTimeoutId = null;

        form.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && e.target.type !== 'submit') e.preventDefault();
        });

        movieSelect.addEventListener('change', () => {
            const movieId = movieSelect.value;
            if (movieId && moviesData[movieId]) {
                const duration = moviesData[movieId];
                const hours = Math.floor(duration / 60);
                const minutes = duration % 60;
                let displayText = `${duration} phút`;
                if (hours > 0 || minutes > 0)
                    displayText += ` (${hours > 0 ? hours + ' giờ' : ''}${minutes > 0 ? ' ' + minutes + ' phút' : ''})`;
                durationSpan.textContent = displayText;
                durationInfo.style.display = 'block';
                if (startTime.value && !userEditedEndTime) updateEndTime();
            } else {
                durationInfo.style.display = 'none';
                durationSpan.textContent = '';
                if (!userEditedEndTime) endTime.value = '';
            }
        });

        startTime.addEventListener('change', () => {
            if (!userEditedEndTime) updateEndTime();
        });

        endTime.addEventListener('input', () => userEditedEndTime = true);

        function updateEndTime() {
            const movieId = movieSelect.value;
            const start = startTime.value;
            if (!movieId || !start || !moviesData[movieId]) return;

            const duration = moviesData[movieId];
            const [h, m] = start.split(':').map(Number);
            const total = h * 60 + m + duration;
            const endH = Math.floor(total / 60) % 24;
            const endM = total % 60;

            const pad = n => n.toString().padStart(2, '0');
            endTime.value = `${pad(endH)}:${pad(endM)}`;

            const ampm = endH >= 12 ? 'CH' : 'SA';
            const h12 = endH % 12 || 12;
            endTime.title = `Giờ kết thúc: ${pad(h12)}:${pad(endM)} ${ampm}`;

            userEditedEndTime = false;
        }

        const clearBtn = document.getElementById('clearTimeBtn');
        clearBtn.addEventListener('click', () => {
            startTime.value = '';
            endTime.value = '';
            userEditedEndTime = false;
        });

        // Overlap check function
        async function checkOverlap() {
            const cinemaId = cinemaSelect.value;
            const date = showDate.value;
            const start = startTime.value;
            const end = endTime.value;

            if (!cinemaId || !date || !start || !end) {
                document.getElementById('overlapWarning').style.display = 'none';
                updateButtonState();
                return;
            }

            try {
                const response = await fetch(`/ShowTimes/CheckOverlap?cinemaTheaterId=${cinemaId}&showDate=${date}&startTime=${start}&endTime=${end}`);
                const result = await response.json();

                const warningDiv = document.getElementById('overlapWarning');
                const messageSpan = document.getElementById('overlapMessage');
                const createBtn = document.getElementById('createBtn');

                if (result.hasConflict) {
                    messageSpan.textContent = result.message;
                    warningDiv.style.display = 'block';
                } else {
                    warningDiv.style.display = 'none';
                }
                updateButtonState();
            } catch (error) {
                console.error('Error checking overlap:', error);
                updateButtonState();
            }
        }

        // Add event listeners for overlap check
        cinemaSelect.addEventListener('change', checkOverlap);
        showDate.addEventListener('change', checkOverlap);
        startTime.addEventListener('change', checkOverlap);
        endTime.addEventListener('change', checkOverlap);

        // Form validation on submit
        function validateFormOnSubmit() {
            const movieId = movieSelect.value;
            const cinemaId = cinemaSelect.value;
            const date = showDate.value;
            const start = startTime.value;
            const end = endTime.value;
            const overlapWarning = document.getElementById('overlapWarning');
            const hasOverlapConflict = overlapWarning.style.display !== 'none';

            let errors = [];

            if (!movieId) {
                errors.push('Vui lòng chọn phim');
            }
            if (!cinemaId) {
                errors.push('Vui lòng chọn phòng chiếu');
            }
            if (!date) {
                errors.push('Vui lòng chọn ngày chiếu');
            }
            if (!start) {
                errors.push('Vui lòng chọn giờ bắt đầu');
            }
            if (!end) {
                errors.push('Vui lòng chọn giờ kết thúc');
            }
            if (hasOverlapConflict) {
                errors.push('Suất chiếu bị trùng với suất chiếu khác');
            }

            if (errors.length > 0) {
                showValidationMessage(errors.join(' | '));
                return false;
            }

            return true;
        }

        function showValidationMessage(message) {
            const messageDiv = document.getElementById('customValidationMessage');
            const messageText = document.getElementById('validationMessageText');
            
            messageText.textContent = message;
            messageDiv.style.display = 'block';

            // Clear previous timeout if exists
            if (validationTimeoutId) {
                clearTimeout(validationTimeoutId);
            }

            // Hide message after 3 seconds
            validationTimeoutId = setTimeout(() => {
                messageDiv.style.display = 'none';
                validationTimeoutId = null;
            }, 3000);
        }

        // Handle form submit
        form.addEventListener('submit', (e) => {
            if (!validateFormOnSubmit()) {
                e.preventDefault();
                return false;
            }
        });
    </script>
}
