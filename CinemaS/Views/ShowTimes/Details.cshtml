@model CinemaS.Models.ShowTimes

@{
    Layout = "_Layout";
    ViewData["Title"] = "Chi tiết suất chiếu";

    // Calculate adjustment display
    var hasAdjustment = Model.PriceAdjustmentPercent.HasValue && Model.PriceAdjustmentPercent.Value != 0;
    var adjustmentText = hasAdjustment
        ? (Model.PriceAdjustmentPercent > 0 ? $"+{Model.PriceAdjustmentPercent}%" : $"{Model.PriceAdjustmentPercent}%")
        : "Không điều chỉnh (0%)";

    var movieTitle = ViewBag.MovieTitle ?? "N/A";
    var theaterName = ViewBag.TheaterName ?? "N/A";
    var showDateText = Model.ShowDate?.ToString("dd/MM/yyyy") ?? "N/A";
    var startTimeText = Model.StartTime?.ToString("HH:mm") ?? "N/A";
    var endTimeText = Model.EndTime?.ToString("HH:mm") ?? "N/A";
    var updatedAtText = Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" style="border-radius:14px;margin-bottom:12px;">
        @TempData["Error"]
    </div>
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-clapperboard"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <a asp-action="Edit" asp-route-id="@Model.ShowTimeId"
                   class="btn btn-primary btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-pen"></i> Sửa
                </a>

                <form asp-action="Delete" asp-route-id="@Model.ShowTimeId" method="post" class="m-0 d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-outline-light-rounded btn-sweep px-3"
                            style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap; border-color:rgba(248,113,113,.65)!important;"
                            onclick="return confirm('Xoá suất chiếu này?');">
                        <i class="fa-solid fa-trash-can"></i> Xoá
                    </button>
                </form>
            </div>
        </div>

        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                Thông tin suất chiếu
            </div>

            <div class="admin-user-detail-grid">
                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-hashtag"></i> Mã suất chiếu</div>
                    <div class="admin-user-detail-value">@Model.ShowTimeId</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-film"></i> Tên phim</div>
                    <div class="admin-user-detail-value">@movieTitle</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-door-open"></i> Phòng chiếu</div>
                    <div class="admin-user-detail-value">@theaterName</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-calendar"></i> Ngày chiếu</div>
                    <div class="admin-user-detail-value">@showDateText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-clock"></i> Giờ bắt đầu</div>
                    <div class="admin-user-detail-value">@startTimeText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-regular fa-hourglass-half"></i> Giờ kết thúc</div>
                    <div class="admin-user-detail-value">@endTimeText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-percent"></i> Điều chỉnh giá</div>
                    <div class="admin-user-detail-value">
                        @if (hasAdjustment)
                        {
                            <span class="badge @(Model.PriceAdjustmentPercent > 0 ? "bg-warning text-dark" : "bg-success")">
                                @adjustmentText
                            </span>
                        }
                        else
                        {
                            <span style="font-style: italic;">@adjustmentText</span>
                        }
                    </div>
                </div>

                <div class="admin-user-detail-item wide">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-calendar-check"></i> Ngày cập nhật</div>
                    <div class="admin-user-detail-value">@updatedAtText</div>
                </div>
            </div>

        </div>
    </div>
</div>