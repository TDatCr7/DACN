@model List<CinemaS.Models.ViewModels.ShowTimeVM>

@{
    ViewData["Title"] = "Quản lý Suất chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- CSS -->
<link rel="stylesheet" href="~/css/management.css" />
<link rel="stylesheet" href="~/css/table.css" />

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="fa-solid fa-clapperboard"></i> Quản lý Suất chiếu</h1>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Tạo suất chiếu
            </a>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <!-- Thông báo -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Ô tìm kiếm -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group search-box">
                            <input type="text"
                                   id="searchInput"
                                   name="searchTerm"
                                   value="@Context.Request.Query["searchTerm"]"
                                   class="form-control"
                                   placeholder="Tìm theo tên phim hoặc phòng..." />
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="fas fa-search"></i>
                            </button>
                            @if (!string.IsNullOrEmpty(Context.Request.Query["searchTerm"]))
                            {
                                <a href="@Url.Action("Index")" class="btn btn-outline-danger">
                                    <i class="fas fa-times"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Nếu chưa có dữ liệu -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle"></i> Chưa có suất chiếu nào. Hãy tạo suất chiếu mới!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    else
    {
        <!-- Bảng danh sách - sử dụng admin-table-wrap và admin-table -->
        <div class="admin-table-wrap">
            <table class="table admin-table align-middle">
                <thead>
                    <tr>
                        <th><i class="fa-solid fa-tag"></i>Mã suất</th>
                        <th style="width: 25%;"><i class="fa-solid fa-film"></i>Phim</th>
                        <th><i class="fa-solid fa-door-open"></i>Phòng</th>
                        <th><i class="fa-solid fa-calendar"></i>Ngày</th>
                        <th><i class="fa-solid fa-clock"></i>Bắt đầu</th>
                        <th><i class="fa-regular fa-hourglass-half"></i>Kết thúc</th>
                        <th style="text-align:right;"><i class="fa-solid fa-ellipsis-vertical"></i>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.ShowTimeId</strong></td>
                            <td>
                                <div class="text-truncate-cell" title="@item.MovieTitle">
                                    @item.MovieTitle
                                </div>
                            </td>
                            <td><span class="badge-role">@item.CinemaTheaterName</span></td>
                            <td>@item.ShowDate?.ToString("dd/MM/yyyy")</td>
                            <td>@item.StartTime?.ToString("HH:mm")</td>
                            <td>@item.EndTime?.ToString("HH:mm")</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.ShowTimeId"
                                   class="admin-icon-btn" title="Chi tiết" style="background: radial-gradient(circle at 30% 0, #16a34a, #020617); border-color: rgba(34,197,94,.9);">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ShowTimeId"
                                   class="admin-icon-btn" title="Chỉnh sửa">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ShowTimeId" 
                                   class="admin-icon-btn admin-icon-btn-danger" title="Xóa">
                                    <i class="fas fa-trash-can"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
    </div>
</div>

@section Scripts {
    <script>
        // Ẩn thông báo sau 5s
        setTimeout(function () {
            document.querySelectorAll('.alert').forEach(alert => {
                alert.style.transition = 'opacity 0.5s ease';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            });
        }, 5000);
    </script>
}
