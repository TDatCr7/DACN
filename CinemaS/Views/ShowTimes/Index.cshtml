@model List<CinemaS.Models.ViewModels.ShowTimeVM>

@{
    ViewData["Title"] = "Quản lý Suất chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- CSS -->
<link rel="stylesheet" href="~/css/management.css" />

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fa-solid fa-clapperboard"></i> Quản lý Suất chiếu</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Tạo suất chiếu
        </a>
    </div>

    <!-- Thông báo -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Ô tìm kiếm -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group search-box">
                            <input type="text"
                                   id="searchInput"
                                   name="searchTerm"
                                   value="@Context.Request.Query["searchTerm"]"
                                   class="form-control"
                                   placeholder="Tìm theo tên phim hoặc phòng..." />
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="fas fa-search"></i>
                            </button>
                            @if (!string.IsNullOrEmpty(Context.Request.Query["searchTerm"]))
                            {
                                <a href="@Url.Action("Index")" class="btn btn-outline-danger">
                                    <i class="fas fa-times"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Nếu chưa có dữ liệu -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle"></i> Chưa có suất chiếu nào. Hãy tạo suất chiếu mới!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    else
    {
        <!-- Bảng danh sách -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive table-container">
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="width:8%;">Mã suất</th>
                                <th style="width:18%;"><i class="fa-solid fa-film"></i> Phim</th>
                                <th style="width:18%;"><i class="fa-solid fa-couch"></i> Phòng</th>
                                <th style="width:10%;"><i class="fa-solid fa-calendar"></i> Ngày</th>
                                <th style="width:10%;"><i class="fa-solid fa-clock"></i> Bắt đầu</th>
                                <th style="width:10%;"><i class="fa-regular fa-hourglass-half"></i> Kết thúc</th>
                                <th style="width:10%;"><i class="fa-solid fa-chair"></i> Ghế trống</th>
                                <th style="width:16%;"><i class="fa-solid fa-gear"></i> Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.ShowTimeId</strong></td>
                                    <td>@item.MovieTitle</td>
                                    <td>
                                        <span class="badge bg-info text-dark">
                                            @item.CinemaTheaterName
                                        </span>
                                    </td>
                                    <td>@item.ShowDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.StartTime?.ToString("HH:mm")</td>
                                    <td>@item.EndTime?.ToString("HH:mm")</td>
                                    <td>
                                        @if (item.AvailableSeats > 0)
                                        {
                                            <span class="badge badge-status-active">
                                                @item.AvailableSeats / @item.TotalCinema
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-status-inactive">
                                                Hết chỗ
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.ShowTimeId"
                                           class="btn btn-sm btn-info" title="Chỉnh sửa">
                                            <i class="fas fa-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ShowTimeId" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Ẩn thông báo sau 5s
        setTimeout(function () {
            document.querySelectorAll('.alert').forEach(alert => {
                alert.style.transition = 'opacity 0.5s ease';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            });
        }, 5000);

        let deleteId = null;

        function showDeletePopup(id) {
            deleteId = id;
            fetch(`/ShowTimes/CheckInUse?id=${id}`)
                .then(res => res.json())
                .then(data => {
                    if (data.inUse) {
                        document.getElementById("deleteMessage").innerText = "Suất chiếu này đang được sử dụng. Không thể xóa!";
                        document.getElementById("deleteButtons").innerHTML =
                            '<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>';
                    } else {
                        document.getElementById("deleteMessage").innerText = "Bạn có chắc chắn muốn xóa suất chiếu này không?";
                        document.getElementById("deleteButtons").innerHTML = `
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <button type="button" class="btn btn-danger" onclick="confirmDelete()">Xóa</button>`;
                    }
                    const modal = new bootstrap.Modal(document.getElementById("deleteModal"));
                    modal.show();
                });
        }

        function confirmDelete() {
            window.location.href = '/ShowTimes/DeleteConfirmed/' + deleteId;
        }
    </script>
}
