@model List<CinemaS.Models.ViewModels.ShowTimeVM>

@{
    ViewData["Title"] = "Quản lý Suất chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- CSS -->
<link rel="stylesheet" href="~/css/management.css" />
<link rel="stylesheet" href="~/css/table.css" />

<style>
    /* Modal xác nhận xóa */
    #deleteModal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        z-index: 1051;
        min-width: 400px;
    }
    #deleteModal .modal-header {
        font-weight: bold;
        margin-bottom: 10px;
        color: black;
    }
    #deleteModal .modal-footer {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 20px;
    }
    #deleteModal .modal-body {
        margin-bottom: 15px;
        color: black;
    }
    .modal-backdrop-custom {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1050;
    }
</style>

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="fa-solid fa-clapperboard"></i> Quản lý Suất chiếu</h1>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary btn-sweep px-3" style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:700; white-space:nowrap;">
                <i class="fa-solid fa-plus me-1"></i> Tạo suất chiếu
            </a>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-light-rounded btn-sweep px-3" style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:700; white-space:nowrap;">
                <i class="fa-solid fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <!-- Thông báo -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Ô tìm kiếm -->
    <div class="admin-toolbar">
        <form method="get"
              class="admin-search-shell d-flex gap-2 align-items-center"
              id="adminFilterForm">

            <div class="input-group admin-search-compact">
                <input type="text"
                       id="searchInput"
                       name="searchTerm"
                       value="@Context.Request.Query["searchTerm"]"
                       class="form-control admin-search-input"
                       placeholder="Tìm theo tên phim hoặc phòng..." />
                <button class="admin-search-btn" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>

        </form>
    </div>

    <!-- Nếu chưa có dữ liệu -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle"></i> Chưa có suất chiếu nào. Hãy tạo suất chiếu mới!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    else
    {
        <!-- Bảng danh sách - sử dụng admin-table-wrap và admin-table -->
        <div class="admin-table-wrap">
            <table class="table admin-table align-middle">
                <thead>
                    <tr>
                        <th><i class="fa-solid fa-tag"></i>Mã suất</th>
                        <th style="width: 25%;"><i class="fa-solid fa-film"></i>Phim</th>
                        <th><i class="fa-solid fa-door-open"></i>Phòng</th>
                        <th><i class="fa-solid fa-calendar"></i>Ngày</th>
                        <th><i class="fa-solid fa-clock"></i>Bắt đầu</th>
                        <th><i class="fa-regular fa-hourglass-half"></i>Kết thúc</th>
                        <th style="text-align:right;"><i class="fa-solid fa-ellipsis-vertical"></i>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.ShowTimeId</strong></td>
                            <td>
                                <div class="text-truncate-cell" title="@item.MovieTitle">
                                    @item.MovieTitle
                                </div>
                            </td>
                            <td><span class="badge-role">@item.CinemaTheaterName</span></td>
                            <td>@item.ShowDate?.ToString("dd/MM/yyyy")</td>
                            <td>@item.StartTime?.ToString("HH:mm")</td>
                            <td>@item.EndTime?.ToString("HH:mm")</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.ShowTimeId"
                                   class="admin-icon-btn" title="Chi tiết" style="background: radial-gradient(circle at 30% 0, #16a34a, #020617); border-color: rgba(34,197,94,.9);">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ShowTimeId"
                                   class="admin-icon-btn" title="Chỉnh sửa">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <button type="button"
                                        class="admin-icon-btn admin-icon-btn-danger" 
                                        title="Xóa"
                                        onclick="showDeletePopup('@item.ShowTimeId', '@item.MovieTitle')">
                                    <i class="fas fa-trash-can"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>

<!-- Modal Xác nhận xóa -->
<div class="modal-backdrop-custom" id="modalBackdrop"></div>
<div id="deleteModal">
    <div class="modal-header">Xác nhận xóa</div>
    <div class="modal-body" id="deleteMessage">Bạn có chắc chắn muốn xóa suất chiếu này không?</div>
    <div class="modal-footer" id="deleteButtons">
        <button type="button" class="btn btn-secondary" onclick="closeModal()">Hủy</button>
        <form id="deleteForm" method="post" style="display:inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Xóa</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Ẩn thông báo sau 5s
        setTimeout(function () {
            document.querySelectorAll('.alert').forEach(alert => {
                alert.style.transition = 'opacity 0.5s ease';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            });
        }, 5000);

        let deleteId = null;

        function showDeletePopup(id, movieTitle) {
            deleteId = id;
            const modal = document.getElementById("deleteModal");
            const backdrop = document.getElementById("modalBackdrop");
            const deleteForm = document.getElementById("deleteForm");

            deleteForm.action = `/ShowTimes/Delete/${id}`;
            document.getElementById("deleteMessage").innerText = `Bạn có chắc chắn muốn xóa suất chiếu phim "${movieTitle}" không?`;

            modal.style.display = "block";
            backdrop.style.display = "block";
        }

        function closeModal() {
            const modal = document.getElementById("deleteModal");
            const backdrop = document.getElementById("modalBackdrop");
            modal.style.display = "none";
            backdrop.style.display = "none";
        }

        // Đóng modal khi click vào backdrop
        document.getElementById("modalBackdrop").addEventListener("click", closeModal);
    </script>
}
