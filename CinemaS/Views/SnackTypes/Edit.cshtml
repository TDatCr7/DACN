@model CinemaS.Models.SnackTypes

@{
    ViewData["Title"] = "Chỉnh sửa Loại Đồ Ăn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/management.css" />
<link rel="stylesheet" href="~/css/Create.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header text-dark">
                    <h4 class="mb-0 fw-bold">
                        <i class="fa-solid fa-pen-to-square"></i> Chỉnh sửa Loại Đồ Ăn
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" novalidate>
                        @* ID ẩn *@
                        <input type="hidden" asp-for="SnackTypeId" />

                        <!-- Hiển thị lỗi -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Tên loại -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="fa-solid fa-signature"></i> Tên Loại <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="VD: Đồ uống, Bắp rang bơ..." required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Mô tả -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">
                                <i class="fa-solid fa-file-lines"></i> Mô tả
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Nút hành động -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="button" class="btn btn-secondary" onclick="history.back()">
                                <i class="fa-solid fa-arrow-left"></i> Quay lại
                            </button>
                            <button type="submit" class="btn btn-warning text-dark fw-semibold">
                                <i class="fa-solid fa-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
