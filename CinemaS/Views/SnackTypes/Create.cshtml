@model CinemaS.Models.SnackTypes
@{
    ViewData["Title"] = "Thêm loại đồ ăn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- FontAwesome + CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link rel="stylesheet" href="~/css/management.css" />
<link rel="stylesheet" href="~/css/Create.css" />

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        @* ONE PANEL: header + content inside, title left, remove subnote *@
        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-tags"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="snackTypeCreateForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-circle-plus me-1"></i> Tạo
                </button>
            </div>
        </div>

        @* divider like "island" but not separated *@
        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <form asp-action="Create" method="post" id="snackTypeCreateForm" novalidate>
                @Html.AntiForgeryToken()
                <div id="validationMessage" class="text-danger mb-3" style="display:none;"></div>

                <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                    Thông tin loại đồ ăn
                </div>

                @if (ViewBag.NextSnackTypeId != null)
                {
                    <div class="alert alert-info mb-3" style="border-radius:10px; color:#000;">
                        <i class="fa-solid fa-info-circle"></i> Mã loại đồ ăn tự động: <strong>@ViewBag.NextSnackTypeId</strong>
                    </div>
                }

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Tên loại <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="VD: Đồ uống, Bắp rang bơ..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const form = document.getElementById('snackTypeCreateForm');
            const nameInput = document.querySelector('input[name="Name"]');
            const validationMsg = document.getElementById('validationMessage');
            let hideTimeout = null;

            function showValidationMessage(message) {
                validationMsg.textContent = message;
                validationMsg.style.display = 'block';
                
                if (hideTimeout) clearTimeout(hideTimeout);
                hideTimeout = setTimeout(() => {
                    validationMsg.style.display = 'none';
                }, 3000);
            }

            form.addEventListener('submit', e => {
                if (!nameInput.value.trim()) {
                    e.preventDefault();
                    showValidationMessage('Vui lòng điền đủ thông tin');
                }
            });
        })();
    </script>
}
