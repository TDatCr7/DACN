@model CinemaS.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
@if (TempData["Message"] != null)
{
    <div class="container mt-3">
        <div class="alert alert-success text-center mb-3"
             data-auto-dismiss="true"
             style="border-radius:999px;
                        background:rgba(22,163,74,0.12);border:1px solid rgba(22,163,74,0.6);
                        color:#bbf7d0;">
            <i class="fa-solid fa-circle-check me-2"></i>
            @TempData["Message"]
        </div>
    </div>
}


<style>
    :root {
        --bg: #0b0f27;
        --panel: #0e1333;
        --accent: #ffd54d;
        --muted: #99a2b0;
        --indigo: #3b5ccc;
        --purple: #7c3aed;
        --magenta: #a21caf;
        --text: #e9ecf6;
        --line: rgba(255,255,255,.12);
    }

    /* KHÔNG override body nữa – để body + glow dùng theo _Layout */

    .section {
        padding: 32px 0;
    }

    .section-title {
        text-align: center;
        color: #fff;
        margin-bottom: 18px;
        text-transform: uppercase;
        letter-spacing: .6px;
        font-weight: 800;
        text-shadow: 0 3px 14px rgba(0,0,0,.35);
    }

    .btn-cine {
        background: var(--accent);
        border: 0;
        color: #111;
        font-weight: 800;
        text-decoration: none;
    }

        .btn-cine:hover {
            text-decoration: none;
            filter: brightness(1.05);
        }

    .badge-cine {
        background: var(--accent);
        color: #111;
        font-weight: 800;
        font-size: 12px;
        border-radius: 6px;
        padding: 4px 8px;
        line-height: 1;
        box-shadow: 0 4px 10px rgba(0,0,0,.25);
    }

    /* ===== HERO ===== */
    .hero .swiper {
        height: 420px;
        border-radius: 12px;
        overflow: hidden;
    }

    .hero .slide-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-caption {
        position: absolute;
        left: 24px;
        bottom: 24px;
        max-width: 720px;
        background: rgba(5,6,20,.55);
        backdrop-filter: blur(6px);
        padding: 16px 18px;
        border-radius: 10px;
        color: #fff;
    }

        .hero-caption h2 {
            margin: 0 0 6px 0;
            font-weight: 900;
        }

    .hero .swiper-button-prev,
    .hero .swiper-button-next {
        color: #fff;
    }

    .swiper .swiper-pagination-bullet {
        background: #fff;
        opacity: .5;
    }

    .swiper .swiper-pagination-bullet-active {
        background: var(--accent);
        opacity: 1;
    }

    /* ===== RAIL ===== */
    .rail {
        padding: 36px 0 10px;
    }

        .rail .wrap {
            max-width: 1200px;
            margin: 0 auto;
        }

        .rail .swiper {
            overflow: hidden;
            padding-bottom: 16px;
        }

        .rail .swiper-button-prev,
        .rail .swiper-button-next {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            color: #fff;
            background: linear-gradient(145deg, #3b5ccc, #7c3aed);
            border: 2px solid rgba(255,255,255,.55);
            box-shadow: 0 0 14px rgba(0,0,0,.55);
            transition: transform .2s ease, filter .2s ease, box-shadow .2s;
        }

            .rail .swiper-button-prev:hover,
            .rail .swiper-button-next:hover {
                transform: scale(1.08);
                filter: brightness(1.08);
                box-shadow: 0 0 22px rgba(255,213,77,.55);
            }

            .rail .swiper-button-prev::after,
            .rail .swiper-button-next::after {
                font-size: 22px;
                font-weight: 700;
            }

        .rail .swiper-pagination {
            position: static;
            margin-top: 10px;
            text-align: center;
        }

        .rail .swiper-pagination-bullet {
            background: #cfd6ff;
            opacity: .4;
        }

        .rail .swiper-pagination-bullet-active {
            background: linear-gradient(90deg, var(--indigo), var(--magenta));
            opacity: 1;
        }

    /* ===== POSTER CARD ===== */
    .poster {
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: stretch;
    }

        .poster .card {
            position: relative;
            border-radius: 16px;
            overflow: hidden;
            flex: 1 1 auto;
            border: 1px solid var(--line);
            background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03));
            box-shadow: 0 8px 24px rgba(0,0,0,.45);
            transition: box-shadow .3s ease;
        }

        .poster:hover .card {
            box-shadow: 0 18px 40px rgba(0,0,0,.6), 0 0 18px rgba(124,58,237,.25);
        }

    .badge-corner {
        position: absolute;
        left: 10px;
        top: 10px;
        display: flex;
        gap: 6px;
        z-index: 2;
    }

    .badge-chip {
        font-weight: 800;
        font-size: 13px;
        line-height: 1;
        padding: 6px 8px;
        border-radius: 6px;
        color: #111;
        background: #ffca28;
    }

        .badge-chip.dark {
            background: #e57373;
        }

    .poster .img-wrap {
        position: relative;
        overflow: hidden;
        border-radius: 16px;
    }

    .poster .thumb {
        width: 100%;
        aspect-ratio: 27/40;
        object-fit: cover;
        transform: translateX(0) scale(1);
        transition: transform .6s ease;
    }

    .poster .img-wrap::after {
        content: "";
        position: absolute;
        inset: 0;
        opacity: 0;
        transition: opacity .35s ease, background-position .6s ease;
        background: linear-gradient(90deg, rgba(124,58,237,0) 0%, rgba(124,58,237,.28) 28%, rgba(162,28,175,.35) 60%, rgba(124,58,237,0) 100%);
        background-size: 200% 100%;
        background-position: 0% 50%;
    }

    .poster .img-wrap:hover .thumb {
        transform: translateX(8px) scale(1.06);
    }

    .poster .img-wrap:hover::after {
        opacity: 1;
        background-position: 100% 50%;
    }

    .poster .hover {
        position: absolute;
        inset: 0;
        padding: 16px;
        color: #e9ecf6;
        background: linear-gradient(180deg, rgba(0,0,0,.25) 0%, rgba(0,0,0,.55) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transform: translateY(12px);
        transition: opacity .35s ease, transform .35s ease;
        pointer-events: none;
    }

    .poster .img-wrap:hover + .hover {
        opacity: 1;
        transform: translateY(0);
    }

    .hover-inner {
        max-width: 85%;
        text-align: center;
    }

    .hover-title {
        font-size: 18px;
        font-weight: 900;
        margin: 0 0 12px 0;
        color: #fff;
        text-shadow: 0 3px 12px rgba(0,0,0,.45);
    }

    .hover-meta {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 10px;
        align-items: center;
    }

        .hover-meta li {
            display: flex;
            align-items: center;
            gap: 10px;
            border: 1px solid rgba(255,255,255,.18);
            border-radius: 16px;
            padding: 6px 12px;
            font-size: 13px;
            color: #dbe1ff;
            backdrop-filter: blur(2px);
        }

            .hover-meta li i {
                color: var(--purple);
            }

    .hover-desc {
        margin-top: 12px;
        font-size: 13px;
        color: #d7dcff;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .poster .caption {
        text-align: center;
        margin-top: 10px;
        color: #fff;
        min-height: 44px;
    }

        .poster .caption a {
            color: #fff;
            font-weight: 800;
            text-decoration: none !important;
            transition: color .25s ease;
        }

            .poster .caption a:hover {
                color: #ffd54d;
                text-decoration: none !important;
            }

    .poster .btns {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 8px;
    }

        .poster .btns a {
            text-decoration: none !important;
        }

    .poster .btn-ghost,
    .poster .btn-primary {
        border-radius: 8px;
        font-weight: 800;
        font-size: 13px;
        padding: 6px 14px;
        transition: all .25s ease;
    }

    .poster .btn-ghost {
        border: 1px solid rgba(255,255,255,.35);
        color: #cfd6ff;
        background: transparent;
    }

        .poster .btn-ghost:hover {
            border-color: var(--accent);
            color: #fff;
            background: rgba(255,213,77,.15);
            box-shadow: 0 0 10px rgba(255,213,77,.35);
        }

    .poster .btn-primary {
        border: none;
        color: #111;
        background: var(--accent);
    }

        .poster .btn-primary:hover {
            background: linear-gradient(90deg, var(--indigo), var(--magenta));
            color: #fff;
            box-shadow: 0 0 12px rgba(124,58,237,.5);
        }

    .btn-sweep {
        position: relative;
        overflow: hidden;
        isolation: isolate;
        text-decoration: none !important;
    }

        .btn-sweep::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(90deg, var(--indigo), var(--magenta));
            transform: translateX(-110%);
            transition: transform .45s ease;
            z-index: -1;
        }

        .btn-sweep:hover::before {
            transform: translateX(0);
        }

    .btn-cine.btn-sweep,
    .poster .btn-primary.btn-sweep,
    .btn-more.btn-sweep {
        background: var(--accent);
        color: #111;
    }

        .btn-cine.btn-sweep:hover,
        .poster .btn-primary.btn-sweep:hover,
        .btn-more.btn-sweep:hover {
            color: #fff;
            box-shadow: 0 0 12px rgba(124,58,237,.5);
        }

    .poster .btn-ghost.btn-sweep {
        background: transparent;
        border: 1px solid rgba(255,255,255,.35);
        color: #cfd6ff;
    }

        .poster .btn-ghost.btn-sweep:hover {
            color: #fff;
            border-color: var(--accent);
            box-shadow: 0 0 12px rgba(124,58,237,.45);
        }

    .rail .more-row {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        margin-top: 28px;
        margin-bottom: 90px;
        width: 100%;
    }

    .btn-more {
        position: relative;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 26px;
        border-radius: 10px;
        border: 2px solid var(--accent);
        color: #fff;
        font-weight: 900;
        letter-spacing: .5px;
        text-transform: uppercase;
        background: transparent;
        text-decoration: none;
        transition: all .25s ease;
    }

        .btn-more:hover {
            color: #fff;
            border-color: transparent;
            box-shadow: 0 0 18px rgba(124,58,237,.5);
            text-decoration: none;
        }

    @@media (max-width:575.98px) {
        .hero .swiper {
            height: 320px;
        }
    }
</style>

<!-- ===== HERO ===== -->
<div class="container hero section">
    @if (Model.Carousel.Any() || Model.ExtraBanners.Any())
    {
        <div class="swiper" id="swiper-hero">
            <div class="swiper-wrapper">
                @* Banner từ phim đang chiếu (chịu ảnh hưởng ẩn/hiện trong EditBanner) *@
                @foreach (var item in Model.Carousel)
                {
                    var img = !string.IsNullOrWhiteSpace(item.BannerImage)
                    ? item.BannerImage
                    : (string.IsNullOrWhiteSpace(item.PosterImage) ? "/images/no-poster.png" : item.PosterImage);

                    <div class="swiper-slide" style="position:relative;">
                        <img class="slide-img" src="@img" alt="@item.Title" />
                        @if (User.IsInRole("Admin"))
                        {
                            <div style="position:absolute; right:12px; top:12px; z-index:4;">
                                <a asp-controller="Home" asp-action="EditBanner"
                                   class="btn btn-sm btn-light rounded-pill px-3"
                                   style="text-decoration:none;">
                                    <i class="fa-solid fa-sliders me-1"></i> Banner Home
                                </a>
                            </div>
                        }
                        <div class="hero-caption">
                            <h2>@item.Title</h2>
                            @if (!string.IsNullOrWhiteSpace(item.Summary))
                            {
                                <div class="mb-2">@item.Summary</div>
                            }
                            <a asp-controller="Booking" asp-action="Create" asp-route-movieId="@item.MoviesId"
                               class="btn btn-cine btn-sweep">
                                <i class="fa-solid fa-ticket"></i> Đặt vé
                            </a>
                        </div>
                    </div>
                }

                @* Banner thêm ngoài (extra) *@
                @foreach (var b in Model.ExtraBanners)
                {
                    <div class="swiper-slide" style="position:relative;">
                        <img class="slide-img" src="@b.ImagePath" alt="Banner" />
                        @if (User.IsInRole("Admin"))
                        {
                            <div style="position:absolute; right:12px; top:12px; z-index:4;">
                                <a asp-controller="Home" asp-action="EditBanner"
                                   class="btn btn-sm btn-light rounded-pill px-3"
                                   style="text-decoration:none;">
                                    <i class="fa-solid fa-sliders me-1"></i> Banner Home
                                </a>
                            </div>
                        }
                    </div>
                }
            </div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
            <div class="swiper-pagination"></div>
        </div>
    }
</div>


<!-- ===== PHIM ĐANG CHIẾU ===== -->
<section class="rail">
    <h3 class="section-title">Phim đang chiếu</h3>
    @if (Model.NowShowing.Any())
    {
        <div class="wrap">
            <div class="swiper" id="rail-now">
                <div class="swiper-wrapper">
                    @foreach (var mv in Model.NowShowing)
                    {
                        var poster = string.IsNullOrWhiteSpace(mv.PosterImage) ? "/images/no-poster.png" : mv.PosterImage;
                        <div class="swiper-slide">
                            <article class="poster">
                                <a class="card" style="display:block; text-decoration:none;"
                                   asp-controller="Home" asp-action="Detail" asp-route-id="@mv.MoviesId">
                                    <div class="badge-corner">
                                        <span class="badge-chip">2D</span>
                                        <span class="badge-chip dark">@(!string.IsNullOrWhiteSpace(mv.StatusName) ? mv.StatusName : "T13")</span>
                                    </div>

                                    <div class="img-wrap">
                                        <img class="thumb" src="@poster" alt="@mv.Title" />
                                    </div>

                                    <!-- overlay giữa màn hình -->
                                    <div class="hover">
                                        <div class="hover-inner">
                                            <h4 class="hover-title">@mv.Title</h4>
                                            <ul class="hover-meta">
                                                @* Thể loại *@
                                                @if (!string.IsNullOrWhiteSpace(mv.GenreName))
                                                {
                                                    <li><i class="fa-solid fa-film"></i><span>@mv.GenreName</span></li>
                                                }

                                                @* Độ dài *@
                                                @if (mv.Duration.HasValue)
                                                {
                                                    <li><i class="fa-regular fa-clock"></i><span>@mv.Duration’</span></li>
                                                }

                                                @* Quốc gia *@
                                                @if (!string.IsNullOrWhiteSpace(mv.Country))
                                                {
                                                    <li><i class="fa-solid fa-globe"></i><span>@mv.Country</span></li>
                                                }

                                                @* Âm thanh/Phụ đề *@
                                                @if (!string.IsNullOrWhiteSpace(mv.AudioOption))
                                                {
                                                    <li><i class="fa-solid fa-language"></i><span>@mv.AudioOption</span></li>
                                                }

                                                @* Khởi chiếu *@
                                                @if (mv.ReleaseDate.HasValue)
                                                {
                                                    <li><i class="fa-regular fa-calendar-days"></i><span>@mv.ReleaseDate.Value.ToString("dd/MM/yyyy")</span></li>
                                                }
                                            </ul>

                                            @if (!string.IsNullOrWhiteSpace(mv.Summary))
                                            {
                                                <div class="hover-desc">@mv.Summary</div>
                                            }
                                        </div>
                                    </div>
                                </a>

                                <div class="caption">
                                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@mv.MoviesId">@mv.Title</a>
                                </div>
                                <div class="btns">
                                    <a class="btn-ghost btn-sweep" asp-controller="Movies" asp-action="Details" asp-route-id="@mv.MoviesId">
                                        <i class="fa-regular fa-circle-play me-1"></i>Xem trailer
                                    </a>
                                    <a class="btn-primary btn-sweep" asp-controller="Booking" asp-action="Create" asp-route-movieId="@mv.MoviesId">
                                        <i class="fa-solid fa-ticket me-1"></i>Đặt vé
                                    </a>
                                </div>
                            </article>
                        </div>

                    }
                </div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
                <div class="swiper-pagination"></div>
            </div>

            <!--  Bọc bằng .more-row để căn giữa và khoảng cách -->
            <div class="more-row">
                <!-- status đúng cho ĐANG CHIẾU là RELEASED -->
                <a class="btn-more btn-sweep" asp-controller="Home" asp-action="ListByStatus" asp-route-status="RELEASED">
                    Xem thêm
                </a>
            </div>
        </div>
    }
</section>

