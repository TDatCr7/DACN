@model CinemaS.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
@if (TempData["Message"] != null)
{
    <div id="glToast"
         class="gl-toast gl-toast--success"
         role="status"
         aria-live="polite"
         data-message="@TempData["Message"]">

        <div class="gl-toast__icon" aria-hidden="true">
            <i class="fa-solid fa-check"></i>
        </div>

        <div class="gl-toast__content">
            <div class="gl-toast__title">Thành công</div>
            <div class="gl-toast__text">@TempData["Message"]</div>
        </div>

        <button type="button" class="gl-toast__close" aria-label="Đóng">
            <i class="fa-solid fa-xmark"></i>
        </button>

        <div class="gl-toast__progress" aria-hidden="true"></div>
    </div>
}

<style>
    :root {
        --bg: #0b0f27;
        --panel: #0e1333;
        --accent: #ffd54d;
        --muted: #99a2b0;
        --indigo: #3b5ccc;
        --purple: #7c3aed;
        --magenta: #a21caf;
        --text: #e9ecf6;
        --line: rgba(255,255,255,.12);
        --toast-success: #22c55e;
        --toast-success-2: #16a34a;
    }
    /* =========================
       TOAST (login success)
       ========================= */
    .gl-toast {
        position: fixed;
        right: 16px;
        top: 92px;
        z-index: 9999;
        width: min(520px, calc(100vw - 32px));
        display: grid;
        grid-template-columns: 44px 1fr 34px;
        gap: 12px;
        align-items: center;
        padding: 14px 14px 12px;
        border-radius: 18px;
        border: 1px solid rgba(34,197,94,.45);
        background: radial-gradient(circle at 0 0, rgba(34,197,94,.28), transparent 60%), radial-gradient(circle at 100% 0, rgba(59,92,204,.22), transparent 60%), rgba(2,6,23,.92);
        backdrop-filter: blur(20px);
        box-shadow: 0 22px 60px rgba(15,23,42,.92), 0 0 0 1px rgba(15,23,42,.75), 0 0 26px rgba(34,197,94,.18);
        color: var(--text);
        transform: translateX(110%);
        opacity: 0;
        pointer-events: none;
    }

    .gl-toast--success {
        border-color: rgba(34,197,94,.55);
    }

    .gl-toast__icon {
        width: 44px;
        height: 44px;
        border-radius: 14px;
        display: grid;
        place-items: center;
        background: radial-gradient(circle at 30% 20%, rgba(255,255,255,.28), transparent 55%), linear-gradient(120deg, rgba(34,197,94,.95), rgba(22,163,74,.85));
        box-shadow: 0 12px 30px rgba(0,0,0,.35), inset 0 0 0 1px rgba(255,255,255,.25);
        color: #052e16;
        font-size: 16px;
        font-weight: 900;
    }

    .gl-toast__content {
        min-width: 0;
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .gl-toast__title {
        font-size: 12px;
        font-weight: 900;
        letter-spacing: .14em;
        text-transform: uppercase;
        color: rgba(187,247,208,.95);
        line-height: 1.15;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .gl-toast__text {
        font-size: 14px;
        font-weight: 750;
        color: #e9ecf6;
        line-height: 1.25;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .gl-toast__close {
        width: 34px;
        height: 34px;
        border-radius: 999px;
        border: 1px solid rgba(255,255,255,.18);
        background: rgba(15,23,42,.55);
        color: rgba(233,236,246,.9);
        display: grid;
        place-items: center;
        cursor: pointer;
        transition: transform .18s ease, filter .18s ease, background .18s ease;
    }

        .gl-toast__close:hover {
            transform: translateY(-1px);
            filter: brightness(1.06);
            background: rgba(15,23,42,.75);
        }

    .gl-toast__progress {
        grid-column: 1 / -1;
        height: 5px;
        border-radius: 999px;
        overflow: hidden;
        background: rgba(15,23,42,.55);
        border: 1px solid rgba(255,255,255,.10);
        position: relative;
        margin-top: 10px;
    }

        .gl-toast__progress::before {
            content: "";
            position: absolute;
            inset: 0;
            width: 100%;
            transform: translateX(-100%);
            background: linear-gradient(90deg, rgba(34,197,94,.95), rgba(59,92,204,.85), rgba(124,58,237,.75));
        }

    .gl-toast.is-show {
        transform: translateX(0);
        opacity: 1;
        pointer-events: auto;
        transition: transform .55s cubic-bezier(.2,.9,.25,1), opacity .55s ease;
    }

    .gl-toast.is-hide {
        transform: translateX(110%);
        opacity: 0;
        pointer-events: none;
        transition: transform .45s ease, opacity .45s ease;
    }

    .gl-toast.run-progress .gl-toast__progress::before {
        transform: translateX(0);
        transition: transform linear var(--toast-life, 5200ms);
    }

    @@media (max-width: 575.98px) {
        .gl-toast {
            top: 86px;
            border-radius: 16px;
            grid-template-columns: 42px 1fr 34px;
        }

        .gl-toast__icon {
            width: 42px;
            height: 42px;
            border-radius: 13px;
        }

        .gl-toast__text {
            font-size: 13px;
        }
    }

    /* ===== INTRO SPLASH ===== */
    .splash {
        position: fixed;
        inset: 0;
        z-index: 9999;
        display: grid;
        place-items: center;
        background: radial-gradient(1200px 800px at 20% 10%, rgba(59, 92, 204, 0.35), transparent 60%), radial-gradient(1000px 700px at 80% 20%, rgba(124, 58, 237, 0.30), transparent 60%), radial-gradient(900px 700px at 60% 100%, rgba(162, 28, 175, 0.22), transparent 60%), rgba(2,6,23,.92);
        backdrop-filter: blur(18px);
        opacity: 1;
        transition: opacity .6s ease, transform .6s ease;
    }

        .splash.splash-hide {
            opacity: 0;
            transform: scale(1.02);
            pointer-events: none;
        }

    .splash-inner {
        width: min(860px, 92vw);
        text-align: center;
        position: relative;
        padding: 34px 18px 26px;
        border-radius: 28px;
        border: 1px solid rgba(148,163,255,.28);
        background: radial-gradient(circle at 15% 10%, rgba(255, 213, 77, 0.14), transparent 55%), radial-gradient(circle at 85% 15%, rgba(59, 130, 246, 0.22), transparent 60%), rgba(2,6,23,.55);
        box-shadow: 0 26px 80px rgba(0,0,0,.55), 0 0 0 1px rgba(15,23,42,.75);
        overflow: hidden;
    }

    .splash-burst {
        position: absolute;
        inset: -40%;
        background: conic-gradient(from 220deg, rgba(255,213,77,0.0), rgba(255,213,77,0.95), rgba(59,92,204,0.85), rgba(124,58,237,0.85), rgba(162,28,175,0.75), rgba(255,213,77,0.0));
        filter: blur(10px);
        opacity: 0;
        transform: scale(.7);
        animation: burst 1.15s ease-out forwards;
        pointer-events: none;
        mix-blend-mode: screen;
    }

    @@keyframes burst {
        0% {
            opacity: 0;
            transform: scale(.65) rotate(-10deg);
        }

        25% {
            opacity: 1;
        }

        65% {
            opacity: 1;
            transform: scale(1.08) rotate(10deg);
        }

        100% {
            opacity: 0;
            transform: scale(1.25) rotate(18deg);
        }
    }

    .splash-logo {
        width: 98px;
        height: 98px;
        border-radius: 26px;
        background: rgba(2,6,23,.7);
        border: 1px solid rgba(148,163,255,.35);
        box-shadow: 0 18px 55px rgba(0,0,0,.55);
        display: grid;
        place-items: center;
        margin: 0 auto 12px;
        position: relative;
        overflow: hidden;
        transform: translateY(14px) scale(.92);
        opacity: 0;
        animation: popIn .75s .12s cubic-bezier(.2,.9,.25,1) forwards;
    }

        .splash-logo img {
            width: 70px;
            height: 70px;
            object-fit: contain;
            border-radius: 18px;
            filter: drop-shadow(0 0 18px rgba(255,213,77,.45));
        }

        .splash-logo::after {
            content: "";
            position: absolute;
            inset: -60%;
            background: radial-gradient(circle, rgba(255,213,77,.75), transparent 55%);
            opacity: .25;
            filter: blur(10px);
            animation: logoGlow 1.2s ease-in-out infinite alternate;
        }

    @@keyframes logoGlow {
        from {
            transform: scale(.9);
            opacity: .18;
        }

        to {
            transform: scale(1.08);
            opacity: .35;
        }
    }

    @@keyframes popIn {
        to {
            transform: translateY(0) scale(1);
            opacity: 1;
        }
    }

    .splash-title {
        margin: 0;
        font-weight: 1000;
        letter-spacing: .8px;
        text-transform: uppercase;
        font-size: clamp(26px, 4.2vw, 44px);
        background: linear-gradient(120deg, #ffffff, #ffd54d, #c7d2fe, #ffffff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 28px rgba(255,213,77,.35);
        opacity: 0;
        transform: translateY(12px);
        animation: textIn .75s .22s ease forwards;
    }

    .splash-subtitle {
        margin: 10px 0 0;
        font-weight: 800;
        font-size: clamp(13px, 2.2vw, 18px);
        color: rgba(233,236,246,.9);
        opacity: 0;
        transform: translateY(10px);
        animation: textIn .75s .34s ease forwards;
    }

    @@keyframes textIn {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .splash-floor {
        margin: 18px auto 0;
        width: min(520px, 92%);
        height: 14px;
        border-radius: 999px;
        background: linear-gradient(90deg, rgba(255,213,77,0), rgba(255,213,77,.85), rgba(124,58,237,.65), rgba(255,213,77,0));
        filter: blur(2px);
        opacity: 0;
        animation: floorIn .9s .45s ease forwards;
    }

    @@keyframes floorIn {
        0% {
            opacity: 0;
            transform: scaleX(.6);
        }

        60% {
            opacity: 1;
            transform: scaleX(1.02);
        }

        100% {
            opacity: .55;
            transform: scaleX(1);
        }
    }

    /* ===== existing Home styles (giữ nguyên) ===== */
    .section {
        padding: 32px 0;
    }

    .section-title {
        text-align: center;
        color: #fff;
        margin-bottom: 18px;
        text-transform: uppercase;
        letter-spacing: .6px;
        font-weight: 800;
        text-shadow: 0 3px 14px rgba(0,0,0,.35);
    }

    .btn-cine {
        background: var(--accent);
        border: 0;
        color: #111;
        font-weight: 800;
        text-decoration: none;
    }

        .btn-cine:hover {
            text-decoration: none;
            filter: brightness(1.05);
        }

    .badge-cine {
        background: var(--accent);
        color: #111;
        font-weight: 800;
        font-size: 12px;
        border-radius: 6px;
        padding: 4px 8px;
        line-height: 1;
        box-shadow: 0 4px 10px rgba(0,0,0,.25);
    }

    .hero .swiper {
        height: 420px;
        border-radius: 12px;
        overflow: hidden;
    }

    .hero .slide-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-caption {
        position: absolute;
        left: 24px;
        bottom: 24px;
        max-width: 720px;
        background: rgba(5,6,20,.55);
        backdrop-filter: blur(6px);
        padding: 16px 18px;
        border-radius: 10px;
        color: #fff;
    }

        .hero-caption h2 {
            margin: 0 0 6px 0;
            font-weight: 900;
        }

    .hero .swiper-button-prev, .hero .swiper-button-next {
        color: #fff;
    }

    .swiper .swiper-pagination-bullet {
        background: #fff;
        opacity: .5;
    }

    .swiper .swiper-pagination-bullet-active {
        background: var(--accent);
        opacity: 1;
    }

    .rail {
        padding: 36px 0 10px;
    }

        .rail .wrap {
            max-width: 1200px;
            margin: 0 auto;
        }

        .rail .swiper {
            overflow: hidden;
            padding-bottom: 16px;
        }

        .rail .swiper-button-prev, .rail .swiper-button-next {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            color: #fff;
            background: linear-gradient(145deg, #3b5ccc, #7c3aed);
            border: 2px solid rgba(255,255,255,.55);
            box-shadow: 0 0 14px rgba(0,0,0,.55);
            transition: transform .2s ease, filter .2s ease, box-shadow .2s;
        }

            .rail .swiper-button-prev:hover, .rail .swiper-button-next:hover {
                transform: scale(1.08);
                filter: brightness(1.08);
                box-shadow: 0 0 22px rgba(255,213,77,.55);
            }

            .rail .swiper-button-prev::after, .rail .swiper-button-next::after {
                font-size: 22px;
                font-weight: 700;
            }

        .rail .swiper-pagination {
            position: static;
            margin-top: 10px;
            text-align: center;
        }

        .rail .swiper-pagination-bullet {
            background: #cfd6ff;
            opacity: .4;
        }

        .rail .swiper-pagination-bullet-active {
            background: linear-gradient(90deg, var(--indigo), var(--magenta));
            opacity: 1;
        }

    .poster {
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: stretch;
    }

        .poster .card {
            position: relative;
            border-radius: 16px;
            overflow: hidden;
            flex: 1 1 auto;
            border: 1px solid var(--line);
            background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03));
            box-shadow: 0 8px 24px rgba(0,0,0,.45);
            transition: box-shadow .3s ease;
        }

        .poster:hover .card {
            box-shadow: 0 18px 40px rgba(0,0,0,.6), 0 0 18px rgba(124,58,237,.25);
        }

    .badge-corner {
        position: absolute;
        left: 10px;
        top: 10px;
        display: flex;
        gap: 6px;
        z-index: 2;
    }

    .badge-chip {
        font-weight: 800;
        font-size: 13px;
        line-height: 1;
        padding: 6px 8px;
        border-radius: 6px;
        color: #111;
        background: #ffca28;
    }

        .badge-chip.dark {
            background: #e57373;
        }

    .poster .img-wrap {
        position: relative;
        overflow: hidden;
        border-radius: 16px;
    }

    .poster .thumb {
        width: 100%;
        aspect-ratio: 27/40;
        object-fit: cover;
        transform: translateX(0) scale(1);
        transition: transform .6s ease;
    }

    .poster .img-wrap::after {
        content: "";
        position: absolute;
        inset: 0;
        opacity: 0;
        transition: opacity .35s ease, background-position .6s ease;
        background: linear-gradient(90deg, rgba(124,58,237,0) 0%, rgba(124,58,237,.28) 28%, rgba(162,28,175,.35) 60%, rgba(124,58,237,0) 100%);
        background-size: 200% 100%;
        background-position: 0% 50%;
    }

    .poster .img-wrap:hover .thumb {
        transform: translateX(8px) scale(1.06);
    }

    .poster .img-wrap:hover::after {
        opacity: 1;
        background-position: 100% 50%;
    }

    .poster .hover {
        position: absolute;
        inset: 0;
        padding: 16px;
        color: #e9ecf6;
        background: linear-gradient(180deg, rgba(0,0,0,.25) 0%, rgba(0,0,0,.55) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transform: translateY(12px);
        transition: opacity .35s ease, transform .35s ease;
        pointer-events: none;
    }

    .poster .img-wrap:hover + .hover {
        opacity: 1;
        transform: translateY(0);
    }

    .hover-inner {
        max-width: 85%;
        text-align: center;
    }

    .hover-title {
        font-size: 18px;
        font-weight: 900;
        margin: 0 0 12px 0;
        color: #fff;
        text-shadow: 0 3px 12px rgba(0,0,0,.45);
    }

    .hover-meta {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 10px;
        align-items: center;
    }

        .hover-meta li {
            display: flex;
            align-items: center;
            gap: 10px;
            border: 1px solid rgba(255,255,255,.18);
            border-radius: 16px;
            padding: 6px 12px;
            font-size: 13px;
            color: #dbe1ff;
            backdrop-filter: blur(2px);
        }

            .hover-meta li i {
                color: var(--purple);
            }

    .hover-desc {
        margin-top: 12px;
        font-size: 13px;
        color: #d7dcff;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .poster .caption {
        text-align: center;
        margin-top: 10px;
        color: #fff;
        min-height: 44px;
    }

        .poster .caption a {
            color: #fff;
            font-weight: 800;
            text-decoration: none !important;
            transition: color .25s ease;
        }

            .poster .caption a:hover {
                color: #ffd54d;
                text-decoration: none !important;
            }

    .poster .btns {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 8px;
    }

        .poster .btns a {
            text-decoration: none !important;
        }

    .poster .btn-ghost, .poster .btn-primary {
        border-radius: 8px;
        font-weight: 800;
        font-size: 13px;
        padding: 6px 14px;
        transition: all .25s ease;
    }

    .poster .btn-ghost {
        border: 1px solid rgba(255,255,255,.35);
        color: #cfd6ff;
        background: transparent;
    }

        .poster .btn-ghost:hover {
            border-color: var(--accent);
            color: #fff;
            background: rgba(255,213,77,.15);
            box-shadow: 0 0 10px rgba(255,213,77,.35);
        }

    .poster .btn-primary {
        border: none;
        color: #111;
        background: var(--accent);
    }

        .poster .btn-primary:hover {
            background: linear-gradient(90deg, var(--indigo), var(--magenta));
            color: #fff;
            box-shadow: 0 0 12px rgba(124,58,237,.5);
        }

    .btn-sweep {
        position: relative;
        overflow: hidden;
        isolation: isolate;
        text-decoration: none !important;
    }

        .btn-sweep::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(90deg, var(--indigo), var(--magenta));
            transform: translateX(-110%);
            transition: transform .45s ease;
            z-index: -1;
        }

        .btn-sweep:hover::before {
            transform: translateX(0);
        }

    .btn-cine.btn-sweep, .poster .btn-primary.btn-sweep, .btn-more.btn-sweep {
        background: var(--accent);
        color: #111;
    }

        .btn-cine.btn-sweep:hover, .poster .btn-primary.btn-sweep:hover, .btn-more.btn-sweep:hover {
            color: #fff;
            box-shadow: 0 0 12px rgba(124,58,237,.5);
        }

    .poster .btn-ghost.btn-sweep {
        background: transparent;
        border: 1px solid rgba(255,255,255,.35);
        color: #cfd6ff;
    }

        .poster .btn-ghost.btn-sweep:hover {
            color: #fff;
            border-color: var(--accent);
            box-shadow: 0 0 12px rgba(124,58,237,.45);
        }

    .rail .more-row {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        margin-top: 28px;
        margin-bottom: 90px;
        width: 100%;
    }

    .btn-more {
        position: relative;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 26px;
        border-radius: 10px;
        border: 2px solid var(--accent);
        color: #fff;
        font-weight: 900;
        letter-spacing: .5px;
        text-transform: uppercase;
        background: transparent;
        text-decoration: none;
        transition: all .25s ease;
    }

        .btn-more:hover {
            color: #fff;
            border-color: transparent;
            box-shadow: 0 0 18px rgba(124,58,237,.5);
            text-decoration: none;
        }

    @@media (max-width:575.98px) {
        .hero .swiper {
            height: 320px;
        }
    }
</style>

<!-- THÊM NGAY DƯỚI <style> (đầu file) -->
<div class="splash" id="introSplash" aria-hidden="true">
    <div class="splash-inner">
        <div class="splash-burst"></div>

        <div class="splash-logo">
            <img src="~/images/logo/Logo.jpg" alt="GL Cinema" />
        </div>

        <h1 class="splash-title">GL Cinema</h1>
        <div class="splash-subtitle">Nơi thượng đế xem phim</div>
        <div class="splash-floor"></div>
    </div>
</div>

<!-- ===== HERO ===== -->
<div class="container hero section">
    @if (Model.Carousel.Any() || Model.ExtraBanners.Any())
    {
        <div class="swiper" id="swiper-hero">
            <div class="swiper-wrapper">
                @foreach (var item in Model.Carousel)
                {
                    var img = !string.IsNullOrWhiteSpace(item.BannerImage)
                    ? item.BannerImage
                    : (string.IsNullOrWhiteSpace(item.PosterImage) ? "/images/no-poster.png" : item.PosterImage);

                    <div class="swiper-slide" style="position:relative;">
                        <img class="slide-img" src="@img" alt="@item.Title" />
                        @if (User.IsInRole("Admin"))
                        {
                            <div style="position:absolute; right:12px; top:12px; z-index:4;">
                                <a asp-controller="Home" asp-action="EditBanner"
                                   class="btn btn-sm btn-light rounded-pill px-3"
                                   style="text-decoration:none;">
                                    <i class="fa-solid fa-sliders me-1"></i> Banner Home
                                </a>
                            </div>
                        }
                        <div class="hero-caption">
                            <h2>@item.Title</h2>
                            @if (!string.IsNullOrWhiteSpace(item.Summary))
                            {
                                <div class="mb-2">@item.Summary</div>
                            }
                            <a asp-controller="Booking" asp-action="Create" asp-route-movieId="@item.MoviesId"
                               class="btn btn-cine btn-sweep">
                                <i class="fa-solid fa-ticket"></i> Đặt vé
                            </a>
                        </div>
                    </div>
                }

                @foreach (var b in Model.ExtraBanners)
                {
                    <div class="swiper-slide" style="position:relative;">
