@* Views/MovieTheaters/Details.cshtml *@
@using System.Text.RegularExpressions
@model CinemaS.Models.MovieTheaters

@{
    ViewData["Title"] = "Chi tiết cụm rạp";
    Layout = "_Layout";

    var nameText = string.IsNullOrWhiteSpace(Model.Name) ? "N/A" : Model.Name;
    var addressText = string.IsNullOrWhiteSpace(Model.Address) ? "N/A" : Model.Address;
    var hotlineText = string.IsNullOrWhiteSpace(Model.Hotline) ? "N/A" : Model.Hotline;
    var provinceName = ViewBag?.ProvinceName as string ?? "N/A";
    var statusText = (Model.Status ?? 1) == 1 ? "Đang hoạt động" : "Tạm ngưng";

    // YÊU CẦU: mở Google Maps theo LINK lưu trong DB (Model.IFrameCode), KHÔNG tạo theo tên/địa chỉ.
    // Nếu DB lưu iframe -> lấy src. Nếu DB lưu link -> dùng trực tiếp.
    var raw = (Model?.IFrameCode ?? "").Trim();
    string? googleLink = null;

    if (!string.IsNullOrWhiteSpace(raw))
    {
        if (raw.Contains("<iframe", StringComparison.OrdinalIgnoreCase))
        {
            var m = Regex.Match(raw, "src\\s*=\\s*\"(?<src>[^\"]+)\"", RegexOptions.IgnoreCase);
            if (m.Success) googleLink = m.Groups["src"].Value.Trim();
        }
        else
        {
            googleLink = raw;
        }
    }

    // Không đủ dữ liệu để xác minh nếu rỗng -> không có link để mở
    var hasGoogleLink = !string.IsNullOrWhiteSpace(googleLink);
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" style="border-radius:14px;margin-bottom:12px;">
        @TempData["Error"]
    </div>
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-building"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <a asp-action="Edit" asp-route-id="@Model.MovieTheaterId"
                   class="btn btn-primary btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-pen"></i> Sửa
                </a>

                <form asp-action="Delete" asp-route-id="@Model.MovieTheaterId" method="post" class="m-0 d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-outline-light-rounded btn-sweep px-3"
                            style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap; border-color:rgba(248,113,113,.65)!important;"
                            onclick="return confirm('Xoá cụm rạp này?');">
                        <i class="fa-solid fa-trash-can"></i> Xoá
                    </button>
                </form>
            </div>
        </div>

        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">
            <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                Thông tin cụm rạp
            </div>

            <div class="admin-user-detail-grid">
                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-tag"></i> Mã cụm rạp</div>
                    <div class="admin-user-detail-value">@Model.MovieTheaterId</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-building"></i> Tên cụm rạp</div>
                    <div class="admin-user-detail-value">@nameText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-location-dot"></i> Địa chỉ</div>
                    <div class="admin-user-detail-value">@addressText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-phone"></i> Hotline</div>
                    <div class="admin-user-detail-value">@hotlineText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-map"></i> Tỉnh/TP</div>
                    <div class="admin-user-detail-value">@provinceName</div>
                </div>

                <div class="admin-user-detail-item wide">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-toggle-on"></i> Trạng thái</div>
                    <div class="admin-user-detail-value">@statusText</div>
                </div>
            </div>
        </div>
    </div>
</div>
