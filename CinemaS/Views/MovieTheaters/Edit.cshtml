@model CinemaS.Models.MovieTheaters

@{
    ViewData["Title"] = "Chỉnh Sửa Rạp Chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/management.css" />
<link rel="stylesheet" href="~/css/Create.css" />

<div class="container mt-4">
    <div class="form-container">
        <h1 class="mb-4">
            <i class="fas fa-edit"></i> Chỉnh Sửa Rạp Chiếu
        </h1>

        <!-- Thông báo -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Hiển thị mã rạp -->
        <div class="id-display mb-3">
            <strong><i class="fas fa-barcode"></i> Mã Rạp:</strong> @Model.MovieTheaterId
        </div>

        <!-- Form chỉnh sửa -->
        <form asp-action="Edit" asp-controller="MovieTheaters" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="MovieTheaterId" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label required-field">
                    <i class="fas fa-film"></i> Tên Rạp
                </label>
                <input asp-for="Name" class="form-control" placeholder="VD: CGV Vincom" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProvinceId" class="form-label required-field">
                    <i class="fas fa-map-marker-alt"></i> Tỉnh/Thành phố
                </label>
                <select asp-for="ProvinceId" class="form-select" asp-items="ViewBag.ProvinceId" required>
                    <option value="">-- Chọn tỉnh/thành phố --</option>
                </select>
                <a href="@Url.Action("Index", "Provinces")" class="btn btn-outline-info" title="Xem chi tiết Tỉnh/Thành phố">
                    <i class="fa-solid fa-map-location-dot"></i>
                </a>
                <span asp-validation-for="ProvinceId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">
                    <i class="fas fa-location-arrow"></i> Địa chỉ
                </label>
                <textarea asp-for="Address" class="form-control" rows="3" placeholder="VD: Tầng 5, Vincom Center..."></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Hotline" class="form-label">
                    <i class="fas fa-phone"></i> Hotline
                </label>
                <input asp-for="Hotline" class="form-control" placeholder="VD: 1900 xxxx" />
                <span asp-validation-for="Hotline" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label">
                    <i class="fas fa-toggle-on"></i> Trạng thái
                </label>
                <select asp-for="Status" class="form-select">
                    <option value="">-- Chọn trạng thái --</option>
                    <option value="1">Hoạt động</option>
                    <option value="0">Tạm ngưng</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IFrameCode" class="form-label">
                    <i class="fas fa-map"></i> IFrame Code (Google Maps)
                </label>
                <textarea asp-for="IFrameCode" class="form-control" rows="2" placeholder="Nhập mã iframe từ Google Maps..."></textarea>
                <span asp-validation-for="IFrameCode" class="text-danger"></span>
                <small class="form-text text-muted">
					<em>Dùng để hiển thị bản đồ vị trí rạp</em>
                </small>
            </div>

            <!-- Nút hành động -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" asp-controller="MovieTheaters" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-save"></i> Cập nhật
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Ẩn thông báo sau 5s
        setTimeout(() => $('.alert').fadeOut('slow'), 5000);
    </script>
}
