@model CinemaS.Models.MovieTheaters

@{
    ViewData["Title"] = "Chỉnh Sửa Rạp Chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-building"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="movieTheaterEditForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                </button>
            </div>
        </div>

        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">
            <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                Thông tin rạp chiếu
            </div>

            <form asp-action="Edit" method="post" id="movieTheaterEditForm" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="MovieTheaterId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2" id="movieTheaterEditFormSummary"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Tên rạp</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ProvinceId" class="form-label">Tỉnh/Thành phố</label>
                        <select asp-for="ProvinceId" class="form-select" asp-items="ViewBag.ProvinceId">
                            <option value="">-- Chọn tỉnh/thành phố --</option>
                        </select>
                        <span asp-validation-for="ProvinceId" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Address" class="form-label">Địa chỉ</label>
                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Hotline" class="form-label">Hotline</label>
                        <input asp-for="Hotline" class="form-control" />
                        <span asp-validation-for="Hotline" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label">Trạng thái</label>
                        <select asp-for="Status" class="form-select">
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="1">Hoạt động</option>
                            <option value="0">Tạm ngưng</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="IFrameCode" class="form-label">IFrame Code (Google Maps)</label>
                        <textarea asp-for="IFrameCode" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="IFrameCode" class="text-danger"></span>
                        <small>
                            <em>Dùng để hiển thị bản đồ vị trí rạp</em>
                        </small>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Ẩn thông báo sau 5s
        setTimeout(() => $('.alert').fadeOut('slow'), 5000);
    </script>

    <script>
        (function () {
            var formId = '#movieTheaterEditForm';
            var summaryId = '#movieTheaterEditFormSummary';
            var $form = $(formId);
            if ($form.length === 0) return;

            // prevent native browser validation UI
            $form.attr('novalidate', 'novalidate');

            function clearFieldMessages() {
                $form.find('span[data-valmsg-for], .field-validation-error, .field-validation-valid, label.error').text('');
            }

            function anyRequiredEmpty() {
                var empty = false;
                $form.find('input,select,textarea').each(function () {
                    var $el = $(this);
                    var hasRequiredAttr = typeof $el.attr('required') !== 'undefined';
                    var dataReq = $el.data('val-required');
                    if ((hasRequiredAttr || typeof dataReq !== 'undefined')) {
                        var val = ($el.val() || '').toString().trim();
                        var type = ($el.attr('type') || '').toLowerCase();
                        if ((type === 'checkbox' || type === 'radio')) {
                            if (!$form.find('[name="' + $el.attr('name') + '"]:checked').length) {
                                empty = true;
                                return false;
                            }
                        } else {
                            if (val === '') {
                                empty = true;
                                return false;
                            }
                        }
                    }
                });
                return empty;
            }

            function showSummaryMessage(message) {
                var $summary = $form.find(summaryId);
                if ($summary.length === 0) return;
                $summary.text(message).addClass('text-danger');
                setTimeout(function () {
                    $summary.fadeOut('fast', function () { $(this).text('').show(); });
                }, 3000);
            }

            $form.on('submit.customValidation', function (e) {
                e.preventDefault();
                clearFieldMessages();

                var valid = true;
                if (typeof $form.valid === 'function') {
                    valid = $form.valid();
                    clearFieldMessages();
                } else {
                    if (anyRequiredEmpty()) valid = false;
                }

                if (!valid) {
                    if (anyRequiredEmpty()) {
                        showSummaryMessage('Vui lòng điền đủ thông tin');
                    } else {
                        showSummaryMessage('Thông tin không hợp lệ');
                    }
                    return false;
                }

                // allow submit
                $form.off('submit.customValidation');
                $form[0].submit();
            });
        })();
    </script>
}
