@model CinemaS.Models.MovieTheaters
@{
    ViewData["Title"] = "Thêm rạp chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        @* ONE PANEL: header + content inside, title left, remove subnote *@
        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-film"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="movieTheaterCreateForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-circle-plus me-1"></i> Tạo
                </button>
            </div>
        </div>

        @* divider like "island" but not separated *@
        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <form asp-action="Create" method="post" id="movieTheaterCreateForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                    Thông tin rạp chiếu
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Tên rạp</label>
                        <input asp-for="Name" class="form-control" placeholder="VD: CGV..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ProvinceId" class="form-label">Tỉnh/Thành phố</label>
                        <div class="input-group">
                            <select asp-for="ProvinceId" class="form-select" asp-items="ViewBag.ProvinceId">
                                <option value="">-- Chọn tỉnh/thành phố --</option>
                            </select>
                            <a href="@Url.Action("Index", "Provinces")" class="btn btn-outline-info" title="Xem chi tiết Tỉnh/Thành phố">
                                <i class="fa-solid fa-map-location-dot"></i>
                            </a>
                        </div>
                        <span asp-validation-for="ProvinceId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label">Địa chỉ</label>
                        <textarea asp-for="Address" class="form-control" rows="3" placeholder="VD: Tầng 5, Vincom Center..."></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Hotline" class="form-label">Hotline</label>
                        <input asp-for="Hotline" class="form-control" />
                        <span asp-validation-for="Hotline" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label">Trạng thái</label>
                        <select asp-for="Status" class="form-select">
                            <option value="">-- Chưa chọn --</option>
                            <option value="1">Hoạt động</option>
                            <option value="0">Tạm ngưng</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IFrameCode" class="form-label">IFrame Code (Google Maps)</label>
                        <textarea asp-for="IFrameCode" class="form-control" rows="2" placeholder="Copy iframe từ Google Maps..."></textarea>
                        <span asp-validation-for="IFrameCode" class="text-danger"></span>
                        <small class="form-text text-muted">
                            <em>Dùng để hiển thị bản đồ vị trí rạp</em>
                        </small>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
