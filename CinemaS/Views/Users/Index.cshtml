@model IEnumerable<CinemaS.Models.Users>

@{
    ViewData["Title"] = "Quản lý Người Dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="fa-solid fa-users"></i> Quản lý Người Dùng</h1>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus-circle"></i> Tạo mới
            </a>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="admin-table-wrap">
        <table class="table admin-table align-middle">
            <thead>
                <tr>
                    <th><i class="fa-solid fa-envelope"></i>Email</th>
                    <th><i class="fa-solid fa-user"></i>Họ tên</th>
                    <th><i class="fa-solid fa-phone"></i>Điện thoại</th>
                    <th><i class="fa-solid fa-location-dot"></i>Địa chỉ</th>
                    <th><i class="fa-solid fa-calendar"></i>Ngày sinh</th>
                    <th><i class="fa-solid fa-venus-mars"></i>Giới tính</th>
                    <th><i class="fa-solid fa-star"></i>Điểm</th>
                    <th><i class="fa-solid fa-toggle-on"></i>Trạng thái</th>
                    <th style="text-align:right;"><i class="fa-solid fa-ellipsis-vertical"></i>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="9" class="text-center admin-text-muted py-4">
                            Không có người dùng nào.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Email</td>
                            <td>@item.FullName</td>
                            <td>@item.PhoneNumber</td>
                            <td>@(string.IsNullOrEmpty(item.Address) ? "N/A" : (item.Address.Length > 30 ? item.Address.Substring(0, 30) + "..." : item.Address))</td>
                            <td>@(item.DateOfBirth?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td>@(item.Gender == 1 ? "Nam" : item.Gender == 0 ? "Nữ" : "Khác")</td>
                            <td>@item.SavePoint</td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <span class="badge-email-ok">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge-email-no">Không hoạt động</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.UserId" 
                                   class="admin-icon-btn" title="Chỉnh sửa">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.UserId" 
                                   class="admin-icon-btn" title="Chi tiết">
                                    <i class="fa-regular fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.UserId" 
                                   class="admin-icon-btn admin-icon-btn-danger" title="Xóa">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
