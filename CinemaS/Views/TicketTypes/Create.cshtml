@* Views/TicketTypes/Create.cshtml *@
@model CinemaS.Models.TicketTypes

@{
    ViewData["Title"] = "Thêm loại vé";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        @* ONE PANEL: header + content inside, title left, remove subnote *@
        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-ticket-alt"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="ticketTypeCreateForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-circle-plus me-1"></i> Tạo
                </button>
            </div>
        </div>

        @* divider like "island" but not separated *@
        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <form asp-action="Create" method="post" id="ticketTypeCreateForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                    Thông tin loại vé
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Tên loại vé</label>
                        <input asp-for="Name" class="form-control" placeholder="Ví dụ: Người lớn, Trẻ em, HSSV..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả ngắn gọn điều kiện áp dụng (nếu có)..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label">Giá vé (VNĐ)</label>
                        <input asp-for="Price" type="number" min="0" class="form-control" placeholder="Ví dụ: 75000" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const form = document.getElementById('ticketTypeCreateForm');
            const nameInput = document.querySelector('input[name="Name"]');
            const priceInput = document.querySelector('input[name="Price"]');

            form.addEventListener('submit', e => {
                const errors = [];

                if (!nameInput.value.trim())
                    errors.push("• Tên loại vé không được để trống");
                if (!priceInput.value || Number(priceInput.value) <= 0)
                    errors.push("• Giá phải lớn hơn 0");

                if (errors.length > 0) {
                    e.preventDefault();
                    alert("Vui lòng kiểm tra lại:\n\n" + errors.join("\n"));
                }
            });
        })();
    </script>
}
