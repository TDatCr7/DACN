@model CinemaS.Models.TicketTypes

@{
    Layout = "_Layout";
    ViewData["Title"] = "Chi tiết loại vé";

    var nameText = string.IsNullOrWhiteSpace(Model.Name) ? "N/A" : Model.Name;
    var descriptionText = string.IsNullOrWhiteSpace(Model.Description) ? "N/A" : Model.Description;
    var priceText = Model.Price.HasValue ? $"{Model.Price.Value:N0} VNĐ" : "N/A";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" style="border-radius:14px;margin-bottom:12px;">
        @TempData["Error"]
    </div>
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-ticket"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <a asp-action="Edit" asp-route-id="@Model.TicketTypeId"
                   class="btn btn-primary btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-pen"></i> Sửa
                </a>

                <form asp-action="Delete" asp-route-id="@Model.TicketTypeId" method="post" class="m-0 d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-outline-light-rounded btn-sweep px-3"
                            style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap; border-color:rgba(248,113,113,.65)!important;"
                            onclick="return confirm('Xoá loại vé này?');">
                        <i class="fa-solid fa-trash-can"></i> Xoá
                    </button>
                </form>
            </div>
        </div>

        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                Thông tin loại vé
            </div>

            <div class="admin-user-detail-grid">
                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-tag"></i> Mã loại vé</div>
                    <div class="admin-user-detail-value">@Model.TicketTypeId</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-ticket"></i> Tên loại vé</div>
                    <div class="admin-user-detail-value">@nameText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-money-bill"></i> Giá vé</div>
                    <div class="admin-user-detail-value">@priceText</div>
                </div>

                <div class="admin-user-detail-item wide">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-align-left"></i> Mô tả</div>
                    <div class="admin-user-detail-value">@descriptionText</div>
                </div>
            </div>

        </div>
    </div>
</div>