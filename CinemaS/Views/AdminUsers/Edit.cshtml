
@model CinemaS.ViewModels.AdminUsers.AdminUserEditVm
@{
    Layout = "_Layout";
    var isCreate = string.IsNullOrEmpty(Model.Id);
    ViewData["Title"] = isCreate ? "Thêm tài khoản" : "Chỉnh sửa tài khoản";
}

<style>
    .admin-shell {
        max-width: 1200px;
        margin: 18px auto 40px;
    }

    .admin-card {
        border-radius: 28px;
        background: radial-gradient(circle at 0 0, rgba(59,130,246,.40), transparent 55%), radial-gradient(circle at 100% 0, rgba(124,58,237,.35), transparent 55%), linear-gradient(145deg, #020617, #020617);
        border: 1px solid rgba(148,163,255,.55);
        box-shadow: 0 22px 60px rgba(15,23,42,.95), 0 0 0 1px rgba(15,23,42,.85);
        padding: 24px 26px 24px;
        color: #e5e7f5;
    }

    .admin-title {
        font-size: 24px;
        font-weight: 800;
        margin-bottom: 18px;
        letter-spacing: .03em;
    }

    .form-label {
        font-size: 13px;
        font-weight: 600;
        color: #cfd6ff;
        margin-bottom: 4px;
        text-transform: uppercase;
        letter-spacing: .08em;
    }

    .field-group {
        border-radius: 20px;
        background: radial-gradient(circle at 0 0, rgba(15,23,42,1), rgba(15,23,42,.96));
        border: 1px solid rgba(30,64,175,.7);
        padding: 12px 14px 10px;
        margin-bottom: 10px;
    }

    .admin-input {
        background: radial-gradient(circle at 0 0, rgba(15,23,42,.9), rgba(2,6,23,1));
        border-radius: 14px;
        border: 1px solid rgba(148,163,255,.35);
        color: #e5e7f5;
        font-size: 14px;
    }

        .admin-input::placeholder {
            color: #6b7280;
            font-size: 13px;
        }

        .admin-input:focus {
            background: radial-gradient(circle at 0 0, rgba(15,23,42,1), rgba(2,6,23,1));
            color: #e5e7f5;
            border-color: #3b5ccc;
            box-shadow: 0 0 0 1px rgba(59,92,204,.7), 0 0 0 6px rgba(37,99,235,.35);
        }

    /* --- DROP GIỚI TÍNH DARK MODE, DỄ NHÌN --- */
    .form-select.admin-input {
        background-color: #020617;
        background-image: none;
        color: #e5e7f5;
        border-radius: 14px;
    }

        .form-select.admin-input:focus {
            background-color: #020617;
            color: #e5e7f5;
        }

        .form-select.admin-input option {
            background-color: #020617;
            color: #e5e7f5;
        }

            .form-select.admin-input option:disabled {
                color: #6b7280;
            }
    /* ----------------------------------------- */

    .field-note {
        font-size: 12px;
        color: #9ca3c7;
        margin-top: 2px;
    }

    .role-chip {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 14px;
        border-radius: 999px;
        background: rgba(15,23,42,.95);
        border: 1px solid rgba(148,163,255,.55);
        color: #e5e7f5;
        font-size: 13px;
        margin-right: 6px;
        margin-bottom: 6px;
    }

        .role-chip input[type="checkbox"] {
            width: 14px;
            height: 14px;
            margin: 0;
            accent-color: #3b82f6;
        }

    .btn-gradient {
        background: linear-gradient(120deg, #3b5ccc, #7c3aed);
        border: none;
        color: #fff;
        font-weight: 700;
        border-radius: 999px;
        padding-inline: 22px;
    }

        .btn-gradient:hover {
            filter: brightness(1.05);
            color: #fff;
        }

    .btn-outline-light {
        border-radius: 999px;
        padding-inline: 20px;
        border-color: rgba(148,163,255,.75);
        color: #e5e7ff;
        background: rgba(15,23,42,.9);
    }

        .btn-outline-light:hover {
            background: rgba(37,99,235,.9);
            border-color: rgba(129,140,248,1);
            color: #fff;
        }

    .text-danger {
        font-size: 12px;
    }

    @@media (max-width: 767.98px) {
        .action-row {
            flex-direction: column;
            gap: 10px;
        }
    }
    /* OTP Backdrop (custom, giống Genres) */
    #roleOtpBackdrop {
        position: fixed;
        inset: 0;
        background: rgba(15,23,42,.85);
        z-index: 1050;
        display: none;
    }

    .role-otp-wrap {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 16px;
    }

    .role-otp-card {
        width: 100%;
        max-width: 520px;
        background: radial-gradient(circle at 0 0, rgba(59,130,246,.35), transparent 55%), radial-gradient(circle at 100% 0, rgba(124,58,237,.28), transparent 60%), #020617;
        border-radius: 22px;
        border: 1px solid rgba(148,163,255,.6);
        box-shadow: 0 22px 60px rgba(15,23,42,.96);
        overflow: hidden;
        color: #e5e7eb;
    }

    .role-otp-header {
        padding: 14px 18px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: radial-gradient(circle at 0 0, rgba(37,99,235,.7), transparent 60%), rgba(15,23,42,.98);
        border-bottom: 1px solid rgba(148,163,255,.5);
        font-weight: 800;
        font-size: 15px;
    }

    .role-otp-close {
        border: none;
        background: transparent;
        color: #e5e7eb;
        font-size: 18px;
        cursor: pointer;
    }

    .role-otp-body {
        padding: 18px 20px 16px;
        font-size: 14px;
    }
</style>


<div class="admin-shell">
    <div class="admin-card">
        <div class="admin-title">@ViewData["Title"]</div>
        @{
            var isAdminRole = Model.SelectedRoles != null &&
            Model.SelectedRoles.Any(r => string.Equals(r, "Admin", StringComparison.OrdinalIgnoreCase));
            var accountType = isAdminRole ? "Tài khoản siêu cấp" : "Tài khoản người thường";
        }
        <div class="mb-3" style="display:flex;gap:10px;flex-wrap:wrap;">
            <span class="role-chip" style="border-color:rgba(34,197,94,.35);">
                <i class="fa-solid fa-user-shield"></i> @accountType
            </span>
        </div>

        <form asp-action="@(isCreate ? "Create" : "Edit")" method="post">

            @Html.AntiForgeryToken()

            @if (!isCreate)
            {
                <input type="hidden" asp-for="Id" />
            }
            <!-- Age không cho sửa, chỉ còn dùng AgeFromBirth => giữ hidden để không mất dữ liệu cũ -->
            <input type="hidden" asp-for="Age" />

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="field-group">
                        <label asp-for="FullName" class="form-label">Họ tên</label>
                        <input asp-for="FullName" class="form-control admin-input" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="field-group">
                        <label asp-for="Email" class="form-label">Email / Username</label>
                        <input asp-for="Email" class="form-control admin-input" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="field-group">
                        <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                        <input asp-for="PhoneNumber" class="form-control admin-input" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="field-group">
                        <label asp-for="DateOfBirth" class="form-label">Ngày sinh</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control admin-input" />
                        <div class="field-note">
                            @(Model.AgeFromBirth.HasValue ? $"Tuổi hiện tại: {Model.AgeFromBirth} tuổi" : "Nếu chưa nhập ngày sinh, tuổi sẽ để trống.")
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="field-group">
                        <label asp-for="Address" class="form-label">Địa chỉ</label>
                        <input asp-for="Address" class="form-control admin-input" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="field-group">
                        <label asp-for="Gender" class="form-label">Giới tính</label>
                        <select asp-for="Gender" class="form-select admin-input">
                            <option value="">-- Chưa chọn --</option>
                            <option value="1">Nam</option>
                            <option value="2">Nữ</option>
                            <option value="3">Khác</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="field-group">
                        <label asp-for="SavePoint" class="form-label">Điểm thưởng</label>
                        <input asp-for="SavePoint" type="number" min="0" class="form-control admin-input" />
                        <span asp-validation-for="SavePoint" class="text-danger"></span>
                    </div>

                    @if (isCreate)
                    {
                        <div class="field-group">
                            <label asp-for="Password" class="form-label">Mật khẩu khởi tạo</label>
                            <input asp-for="Password" class="form-control admin-input" />
                            <div class="field-note">
                                Nếu để trống, hệ thống dùng mật khẩu mặc định <code>CinemaS@123</code>.
                            </div>
                        </div>
                    }
                </div>

                <div class="col-12">
                    <div class="field-group">
                        <label class="form-label">Phân quyền (Roles)</label>

                        <div id="roleGate" class="role-gate is-locked">
                            <div class="d-flex flex-wrap">
                                @foreach (var role in Model.AllRoles)
                                {
                                    var checkedRole = Model.SelectedRoles?.Contains(role) == true;
                                    <label class="role-chip">
                                        <input type="checkbox"
                                               class="js-role-box"
                                               name="SelectedRoles"
                                               value="@role"
                                               @(checkedRole ? "checked" : "") />
                                        <span>@role</span>
                                    </label>
                                }
                            </div>
                        </div>
                    </div>

                    <button type="button"
                            class="btn btn-outline-light"
                            id="btnOpenOtp"
                            data-bs-toggle="modal"
                            data-bs-target="#roleOtpModal">
                        <i class="fa-solid fa-shield-keyhole me-1"></i> Xác minh Gmail để đổi quyền
                    </button>

                    <div class="field-note mt-2" id="roleGateNote">
                        Phần phân quyền bị khóa cho tới khi xác minh OTP.
                    </div>

                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between align-items-center action-row">
                <button type="button" class="btn btn-outline-light" onclick="history.back()">
                    <i class="fa-solid fa-arrow-left-long me-1"></i> Quay lại
                </button>
                <button type="submit" class="btn btn-gradient">
                    <i class="fa-solid fa-floppy-disk me-1"></i> Lưu
                </button>
            </div>
        </form>
    </div>
</div>
<div id="roleOtpBackdrop">
    <div class="role-otp-wrap">
        <div class="role-otp-card">
            <div class="role-otp-header">
                <span><i class="fa-solid fa-shield-keyhole me-2"></i>Xác minh Gmail để đổi quyền</span>
                <button type="button" class="role-otp-close" id="btnCloseOtp">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>

            <div class="role-otp-body">
                <div class="mb-2" style="color:#9aa5c6;font-size:13px;">
                    OTP sẽ gửi về Gmail của admin đang đăng nhập.
                </div>

                <div class="d-flex gap-2 flex-wrap mb-3">
                    <button type="button" class="btn btn-gradient" id="btnSendOtp">
                        <i class="fa-solid fa-paper-plane me-1"></i> Gửi OTP
                    </button>
                    <span id="otpCooldownText" style="color:#9aa5c6;font-weight:800;"></span>
                </div>

                <div class="field-group" style="margin-bottom:10px;">
                    <label class="form-label">Nhập OTP</label>
                    <input type="text" id="otpInput" class="form-control admin-input" placeholder="6 chữ số" maxlength="6" />
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-outline-light" id="btnCancelOtp">Đóng</button>
                    <button type="button" class="btn btn-gradient" id="btnVerifyOtp">
                        <i class="fa-solid fa-circle-check me-1"></i> Xác minh
                    </button>
                </div>

                <div class="mt-2" id="otpMsg" style="font-size:13px;font-weight:800;color:#cbd5e1;"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            const btnOpenOtp = document.getElementById('btnOpenOtp');

            const backdrop = document.getElementById('roleOtpBackdrop');
            const btnCloseOtp = document.getElementById('btnCloseOtp');
            const btnCancelOtp = document.getElementById('btnCancelOtp');

            const btnSend = document.getElementById('btnSendOtp');
            const btnVerify = document.getElementById('btnVerifyOtp');
            const otpInput = document.getElementById('otpInput');
            const otpMsg = document.getElementById('otpMsg');
            const otpCooldownText = document.getElementById('otpCooldownText');

            const roleBoxes = Array.from(document.querySelectorAll('.js-role-box'));
            const roleGate = document.getElementById('roleGate');
            const roleGateNote = document.getElementById('roleGateNote');

            let roleWindowTimer = null;
            let roleWindowRemain = 0;
                    // chỉ cho phép chọn 1 role
            roleBoxes.forEach(box => {
                box.addEventListener('change', () => {
                    if (!box.checked) return;
                    roleBoxes.forEach(b => {
                        if (b !== box) b.checked = false;
                    });
                });
            });

            function openOtpPopup() {
                if (!backdrop) return;
                otpInput.value = '';
                otpCooldownText.textContent = '';
                setMsg('', true);
                backdrop.style.display = 'block';
            }

            function closeOtpPopup() {
                if (!backdrop) return;
                backdrop.style.display = 'none';
            }

            // click outside để đóng (giống Genres)
            backdrop?.addEventListener('click', function (e) {
                if (e.target === this) closeOtpPopup();
            });

            btnCloseOtp?.addEventListener('click', closeOtpPopup);
            btnCancelOtp?.addEventListener('click', closeOtpPopup);

            btnOpenOtp?.addEventListener('click', openOtpPopup);

            function setMsg(text, ok) {
                otpMsg.textContent = text || '';
                otpMsg.style.color = ok ? '#bbf7d0' : '#fecaca';
            }

            function setRolesEnabled(enabled) {
                roleBoxes.forEach(x => x.disabled = !enabled);
                if (roleGate) roleGate.classList.toggle('is-locked', !enabled);

                if (roleGateNote) {
                    roleGateNote.textContent = enabled
                        ? `Đã xác minh. Có thể đổi quyền trong ${roleWindowRemain}s.`
                        : 'Phần phân quyền bị khóa cho tới khi xác minh OTP.';
                }
            }

            // mặc định: khóa roles
            setRolesEnabled(false);

            async function postForm(url, formObj) {
                const body = new URLSearchParams(formObj).toString();

                const res = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body
                });

                const ct = res.headers.get('content-type') || '';
                if (!ct.includes('application/json')) {
                    return { ok: false, message: 'Request không trả JSON (có thể hết phiên đăng nhập hoặc lỗi server).' };
                }
                return await res.json();
            }

            function startRoleWindow(seconds) {
                roleWindowRemain = seconds;
                setRolesEnabled(true);

                if (roleWindowTimer) clearInterval(roleWindowTimer);
                roleWindowTimer = setInterval(() => {
                    roleWindowRemain--;
                    if (roleWindowRemain <= 0) {
                        clearInterval(roleWindowTimer);
                        roleWindowTimer = null;
                        setRolesEnabled(false);
                    } else {
                        setRolesEnabled(true);
                    }
                }, 1000);
            }

            btnSend?.addEventListener('click', async () => {
                setMsg('Đang gửi OTP...', true);

                const data = await postForm('@Url.Action("SendRoleOtp", "AdminUsers")', {});
                if (!data.ok) {
                    setMsg(data.message || 'Gửi OTP thất bại.', false);
                    if (data.cooldown) otpCooldownText.textContent = `Cooldown: ${data.cooldown}s`;
                    return;
                }

                setMsg(data.message || 'Đã gửi OTP.', true);

                otpCooldownText.textContent = 'Cooldown: 30s';
                let c = 30;
                const t = setInterval(() => {
                    c--;
                    otpCooldownText.textContent = c > 0 ? `Cooldown: ${c}s` : '';
                    if (c <= 0) clearInterval(t);
                }, 1000);
            });

            btnVerify?.addEventListener('click', async () => {
                const otp = (otpInput.value || '').trim();
                if (!/^\d{6}$/.test(otp)) {
                    setMsg('OTP phải là 6 chữ số.', false);
                    return;
                }

                setMsg('Đang xác minh...', true);

                const data = await postForm('@Url.Action("VerifyRoleOtp", "AdminUsers")', { otp });
                if (!data.ok) {
                    setMsg(data.message || 'Xác minh thất bại.', false);
                    return;
                }

                setMsg(data.message || 'Xác minh thành công.', true);

                const seconds = data.roleWindowSeconds || 180;
                startRoleWindow(seconds);

                setTimeout(() => closeOtpPopup(), 300);
            });
        })();
    </script>
}


