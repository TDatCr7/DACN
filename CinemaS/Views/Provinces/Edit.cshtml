@model CinemaS.Models.Provinces

@{
    ViewData["Title"] = "Chỉnh sửa Tỉnh/Thành phố";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-map"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="provinceEditForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                </button>
            </div>
        </div>

        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">
            <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                Thông tin tỉnh/thành phố
            </div>

            <form asp-action="Edit" method="post" id="provinceEditForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ProvinceId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="ProvinceId" class="form-label">Mã tỉnh / TP</label>
                        <input asp-for="ProvinceId" class="form-control" readonly />
                        <span asp-validation-for="ProvinceId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Tên Tỉnh / Thành phố</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CreatedAt" class="form-label">Ngày tạo</label>
                        <input asp-for="CreatedAt" type="date" class="form-control" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        <small class="text-muted">(*) Có thể để trống nếu không cần chỉnh.</small>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="UpdatedAt" class="form-label">Ngày cập nhật</label>
                        <input asp-for="UpdatedAt" type="date" class="form-control" />
                        <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                        <small class="text-muted">(*) Có thể bỏ trống — hệ thống sẽ cập nhật khi lưu.</small>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Tự động ẩn thông báo
        setTimeout(() => $('.alert').fadeOut('slow'), 5000);
    </script>
}
