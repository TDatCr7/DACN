@model CinemaS.Models.CinemaTheaters
@{
    ViewData["Title"] = "Thêm phòng chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        @* ONE PANEL: header + content inside, title left, remove subnote *@
        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-door-open"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="cinemaTheaterCreateForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-circle-plus me-1"></i> Tạo
                </button>
            </div>
        </div>

        @* divider like "island" but not separated *@
        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <form asp-action="Create" method="post" id="cinemaTheaterCreateForm" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                    Thông tin phòng chiếu
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Tên phòng</label>
                        <input asp-for="Name" class="form-control" placeholder="VD: Phòng 1, Phòng VIP A..." />
                        <span asp-validation-for="Name" class="text-danger">Vui lòng điền đủ thông tin</span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CinemaTypeId" class="form-label">Loại phòng</label>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <select asp-for="CinemaTypeId" class="form-select" id="cinemaTypeSelect">
                                <option value="">-- Chọn loại phòng --</option>
                                @if (ViewBag.CinemaTypes != null)
                                {
                                    @foreach (var item in ViewBag.CinemaTypes)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                            <a asp-controller="CinemaTypes" asp-action="Index" class="btn btn-outline-secondary btn-sm" title="Xem danh sách loại phòng">
                                <i class="fa-solid fa-list"></i>
                            </a>
                        </div>
                        <span asp-validation-for="CinemaTypeId" class="text-danger">Vui lòng điền đủ thông tin</span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MovieTheaterId" class="form-label">Rạp chiếu</label>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <select asp-for="MovieTheaterId" class="form-select" id="movieTheaterSelect">
                                <option value="">-- Chọn rạp --</option>
                                @if (ViewBag.MovieTheaters != null)
                                {
                                    @foreach (var item in ViewBag.MovieTheaters)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                            <a asp-controller="MovieTheaters" asp-action="Index" class="btn btn-outline-secondary btn-sm" title="Xem danh sách rạp chiếu">
                                <i class="fa-solid fa-list"></i>
                            </a>
                        </div>
                        <span asp-validation-for="MovieTheaterId" class="text-danger">Vui lòng điền đủ thông tin</span>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const form = document.getElementById('cinemaTheaterCreateForm');
            if (!form) return;

            // Ensure native browser validation UI does not appear for this form
            form.setAttribute('novalidate', 'novalidate');

            // Helper to get field and its validation span inside this form only
            const getField = (name) => form.querySelector('[name="' + name + '"]');
            const getErrorSpan = (name) => form.querySelector('span[data-valmsg-for="' + name + '"]');

            const nameInput = getField('Name');
            const cinemaTypeSelect = getField('CinemaTypeId');
            const movieTheaterSelect = getField('MovieTheaterId');

            // Hide all validation messages inside this form
            const hideMessages = () => {
                const messages = form.querySelectorAll('.text-danger');
                messages.forEach(m => { m.style.display = 'none'; });
            };

            // Initially hide validation spans
            hideMessages();

            let hideTimeout = null;

            form.addEventListener('submit', function (e) {
                // Only validate this form submission
                let isValid = true;

                // Clear previous messages
                const nameSpan = getErrorSpan('Name');
                const typeSpan = getErrorSpan('CinemaTypeId');
                const theaterSpan = getErrorSpan('MovieTheaterId');

                if (nameSpan) { nameSpan.style.display = 'none'; }
                if (typeSpan) { typeSpan.style.display = 'none'; }
                if (theaterSpan) { theaterSpan.style.display = 'none'; }

                // Validate Name
                if (!nameInput || !nameInput.value || !nameInput.value.trim()) {
                    isValid = false;
                    if (nameSpan) { nameSpan.textContent = 'Vui lòng điền đủ thông tin'; nameSpan.style.display = 'block'; }
                } else if (nameInput.value.trim().length < 3) {
                    isValid = false;
                    if (nameSpan) { nameSpan.textContent = 'Thông tin không hợp lệ'; nameSpan.style.display = 'block'; }
                }

                // Validate CinemaTypeId
                if (!cinemaTypeSelect || !cinemaTypeSelect.value) {
                    isValid = false;
                    if (typeSpan) { typeSpan.textContent = 'Vui lòng điền đủ thông tin'; typeSpan.style.display = 'block'; }
                }

                // Validate MovieTheaterId
                if (!movieTheaterSelect || !movieTheaterSelect.value) {
                    isValid = false;
                    if (theaterSpan) { theaterSpan.textContent = 'Vui lòng điền đủ thông tin'; theaterSpan.style.display = 'block'; }
                }

                if (!isValid) {
                    e.preventDefault();
                    e.stopImmediatePropagation();

                    // Clear any existing hide timeout and set a new one to hide messages after 3 seconds
                    if (hideTimeout) clearTimeout(hideTimeout);
                    hideTimeout = setTimeout(() => {
                        hideMessages();
                    }, 3000);
                }

                // If valid, allow natural submit flow (no change to existing server flow)
            });
        })();
    </script>
}
