@model CinemaS.Models.CinemaTheaters

@{
    ViewData["Title"] = "Chỉnh sửa phòng chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-video-camera"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="cinemaTheaterEditForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                </button>
            </div>
        </div>

        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">
            <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                Thông tin phòng chiếu
            </div>

            <form asp-action="Edit" method="post" id="cinemaTheaterEditForm" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CinemaTheaterId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Tên phòng</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CinemaTypeId" class="form-label">Loại phòng</label>
                        <select asp-for="CinemaTypeId" class="form-select" asp-items="ViewBag.CinemaTypes">
                            <option value="">-- Chọn loại phòng --</option>
                        </select>
                        <span asp-validation-for="CinemaTypeId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MovieTheaterId" class="form-label">Rạp chiếu</label>
                        <select asp-for="MovieTheaterId" class="form-select" asp-items="ViewBag.MovieTheaters">
                            <option value="">-- Chọn rạp chiếu --</option>
                        </select>
                        <span asp-validation-for="MovieTheaterId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label">Trạng thái</label>
                        <select asp-for="Status" class="form-select">
                            <option value="1">Hoạt động</option>
                            <option value="0">Tạm ngưng</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NumOfRows" class="form-label">Số hàng ghế</label>
                        <input asp-for="NumOfRows" class="form-control" readonly />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NumOfColumns" class="form-label">Số cột ghế</label>
                        <input asp-for="NumOfColumns" class="form-control" readonly />
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            const form = document.getElementById('cinemaTheaterEditForm');
            if (!form) return;

            // Ensure browser native validation UI does not appear for this form
            form.setAttribute('novalidate', 'novalidate');

            const getField = (name) => form.querySelector('[name="' + name + '"]');
            const getErrorSpan = (name) => form.querySelector('span[data-valmsg-for="' + name + '"]');

            const nameInput = getField('Name');
            const cinemaTypeSelect = getField('CinemaTypeId');
            const movieTheaterSelect = getField('MovieTheaterId');

            const hideMessages = () => {
                const messages = form.querySelectorAll('.text-danger');
                messages.forEach(m => { m.style.display = 'none'; });
            };

            // Initially hide validation messages in this form
            hideMessages();

            let hideTimeout = null;

            form.addEventListener('submit', function (e) {
                let isValid = true;

                // Clear previous messages inside this form
                const nameSpan = getErrorSpan('Name');
                const typeSpan = getErrorSpan('CinemaTypeId');
                const theaterSpan = getErrorSpan('MovieTheaterId');
                const summary = form.querySelector('[asp-validation-summary]') || form.querySelector('div[asp-validation-summary]') || form.querySelector('.text-danger');

                if (nameSpan) { nameSpan.style.display = 'none'; }
                if (typeSpan) { typeSpan.style.display = 'none'; }
                if (theaterSpan) { theaterSpan.style.display = 'none'; }
                if (summary) { summary.style.display = 'none'; summary.textContent = ''; }

                // Validate Name
                if (!nameInput || !nameInput.value || !nameInput.value.trim()) {
                    isValid = false;
                    if (nameSpan) { nameSpan.textContent = 'Vui lòng điền đủ thông tin'; nameSpan.style.display = 'block'; }
                } else if (nameInput.value.trim().length < 3) {
                    isValid = false;
                    if (nameSpan) { nameSpan.textContent = 'Thông tin không hợp lệ'; nameSpan.style.display = 'block'; }
                }

                // Validate CinemaTypeId
                if (!cinemaTypeSelect || !cinemaTypeSelect.value) {
                    isValid = false;
                    if (typeSpan) { typeSpan.textContent = 'Vui lòng điền đủ thông tin'; typeSpan.style.display = 'block'; }
                }

                // Validate MovieTheaterId
                if (!movieTheaterSelect || !movieTheaterSelect.value) {
                    isValid = false;
                    if (theaterSpan) { theaterSpan.textContent = 'Vui lòng điền đủ thông tin'; theaterSpan.style.display = 'block'; }
                }

                if (!isValid) {
                    e.preventDefault();
                    e.stopImmediatePropagation();

                    // Auto-hide messages after 3 seconds
                    if (hideTimeout) clearTimeout(hideTimeout);
                    hideTimeout = setTimeout(() => {
                        hideMessages();
                    }, 3000);
                }

                // If valid, allow normal submit flow
            });

            // Keep fading out generic alerts if present (non-validation)
            setTimeout(() => $('.alert').fadeOut('slow'), 5000);
        })();
    </script>
}
