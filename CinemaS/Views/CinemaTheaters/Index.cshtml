@model List<CinemaS.Models.ViewModels.CinemaTheaterVM>

@{
    ViewData["Title"] = "Quản lý Phòng Chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/management.css" />

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-door-open"></i> Quản lý Phòng Chiếu</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Tạo phòng mới
        </a>
    </div>

    <!-- Thông báo -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Ô tìm kiếm -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group search-box">
                            <input type="text"
                                   id="searchInput"
                                   name="searchString"
                                   value="@ViewData["CurrentFilter"]"
                                   class="form-control"
                                   placeholder="Tìm theo tên, mã, loại phòng hoặc rạp..." />
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="fas fa-search"></i>
                            </button>
                            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                            {
                                <a href="@Url.Action("Index")" class="btn btn-outline-danger">
                                    <i class="fas fa-times"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Nếu chưa có dữ liệu -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle"></i> Không có phòng chiếu nào. Hãy tạo phòng mới!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    else
    {
        <!-- Bảng danh sách -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive table-container">
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="width:10%;">Mã phòng</th>
                                <th style="width:20%;">Tên phòng</th>
                                <th style="width:15%;">Loại phòng</th>
                                <th style="width:20%;">Rạp</th>
                                <th style="width:10%;">Số ghế</th>
                                <th style="width:15%;">Bố cục</th>
                                <th style="width:10%;">Trạng thái</th>
                                <th style="width:10%;">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.CinemaTheaterId</strong></td>
                                    <td>@item.Name</td>
                                    <td><span class="badge badge-status-active">@item.CinemaTypeName</span></td>
                                    <td>@item.MovieTheaterName</td>
                                    <td>
                                        <span class="badge badge-status-active">
                                            @item.TotalSeats ghế
                                        </span>
                                    </td>
                                    <td class="text-muted">
                                        @item.NumOfRows hàng × @item.NumOfColumns cột
                                    </td>
                                    <td class="text-center">
                                        @if (item.Status ==1)
                                        {
                                            <span class="badge badge-status-active">
                                                <i class="fas fa-check"></i> Hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-status-inactive">
                                                <i class="fas fa-times"></i> Ngưng hoạt động
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.CinemaTheaterId"
                                           class="btn btn-sm btn-info" title="Chỉnh sửa">
                                            <i class="fas fa-pencil"></i>
                                        </a>
                                        <button class="btn btn-sm btn-danger" title="Xóa"
                                                onclick="showDeletePopup('@item.CinemaTheaterId ')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<!-- Modal Xác nhận xóa -->
<div class="modal fade modal-dark" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="deleteMessage">Bạn có chắc chắn muốn xóa mục này không?</div>
            <div class="modal-footer" id="deleteButtons">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Tự động ẩn thông báo sau 5s
        setTimeout(function () {
            document.querySelectorAll('.alert').forEach(alert => {
                alert.style.transition = 'opacity 0.5s ease';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            });
        }, 5000);

        let deleteId = null;
        function showDeletePopup(id) {
            deleteId = id;
            fetch(`/CinemaTheaters/CheckInUse?id=${id}`)
                .then(res => res.json())
                .then(data => {
                    if (data.inUse) {
                        document.getElementById("deleteMessage").innerText = "Mục này đang được sử dụng. Không thể xóa!";
                        document.getElementById("deleteButtons").innerHTML =
                            '<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>';
                    } else {
                        document.getElementById("deleteMessage").innerText = "Bạn có chắc chắn muốn xóa mục này không?";
                        document.getElementById("deleteButtons").innerHTML = `
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <button type="button" class="btn btn-danger" onclick="confirmDelete()">Xóa</button>`;
                    }
                    const modal = new bootstrap.Modal(document.getElementById("deleteModal"));
                    modal.show();
                });
        }

        function confirmDelete() {
            window.location.href = '/CinemaTheaters/DeleteConfirmed/' + deleteId;
        }
    </script>
}

<div class="d-flex justify-content-between mt-4">
    <button type="button" class="btn btn-secondary" onclick="history.back()">
        <i class="fas fa-arrow-left"></i> Quay lại
    </button>
</div>
