@model List<CinemaS.Models.ViewModels.CinemaTheaterVM>

@{
    ViewData["Title"] = "Quản lý Phòng Chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/management.css" />

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-door-open"></i> Quản lý Phòng Chiếu</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Tạo phòng mới
        </a>
    </div>

    <!-- Thông báo -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Ô tìm kiếm -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group search-box">
                            <input type="text"
                                   id="searchInput"
                                   name="searchString"
                                   value="@ViewData["CurrentFilter"]"
                                   class="form-control"
                                   placeholder="Tìm theo tên, mã, loại phòng hoặc rạp..." />
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="fas fa-search"></i>
                            </button>
                            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                            {
                                <a href="@Url.Action("Index")" class="btn btn-outline-danger">
                                    <i class="fas fa-times"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Nếu chưa có dữ liệu -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle"></i> Không có phòng chiếu nào. Hãy tạo phòng mới!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    else
    {
        <!-- Bảng danh sách -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive table-container">
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="width:8%;">Mã phòng</th>
                                <th style="width:18%;">Tên phòng</th>
                                <th style="width:12%;">Loại phòng</th>
                                <th style="width:18%;">Rạp</th>
                                <th style="width:8%;">Số ghế</th>
                                <th style="width:12%;">Bố cục</th>
                                <th style="width:8%;">Trạng thái</th>
                                <th style="width:16%;">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.CinemaTheaterId</strong></td>
                                    <td>@item.Name</td>
                                    <td><span class="badge badge-status-active">@item.CinemaTypeName</span></td>
                                    <td>@item.MovieTheaterName</td>
                                    <td>
                                        <span class="badge badge-status-active">
                                            @item.TotalSeats ghế
                                        </span>
                                    </td>
                                    <td class="text-muted">
                                        @item.NumOfRows × @item.NumOfColumns
                                    </td>
                                    <td class="text-center">
                                        @if (item.Status == 1)
                                        {
                                            <span class="badge badge-status-active">
                                                <i class="fas fa-check"></i> Hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-status-inactive">
                                                <i class="fas fa-times"></i> Ngưng hoạt động
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <!-- Nút điều chỉnh ghế -->
                                        <a asp-controller="Seats" 
                                           asp-action="Index" 
                                           asp-route-cinemaTheaterId="@item.CinemaTheaterId"
                                           class="btn btn-sm btn-warning" 
                                           title="Điều chỉnh bố cục ghế">
                                            <i class="fas fa-chair"></i>
                                        </a>
                                        
                                        <!-- Nút chỉnh sửa thông tin phòng -->
                                        <a asp-action="Edit" 
                                           asp-route-id="@item.CinemaTheaterId"
                                           class="btn btn-sm btn-info" 
                                           title="Chỉnh sửa thông tin">
                                            <i class="fas fa-pencil"></i>
                                        </a>
                                        
                                        <!-- Nút xóa -->
                                        <button class="btn btn-sm btn-danger" 
                                                title="Xóa phòng"
                                                onclick="showDeletePopup('@item.CinemaTheaterId')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<!-- Modal Xác nhận xóa -->
<div class="modal-backdrop" id="modalBackdrop"></div>
<div id="deleteModal">
    <div class="modal-header" style="color: black;">Xác nhận xóa</div>
    <div class="modal-body" id="deleteMessage" style="color: black;">Bạn có chắc chắn muốn xóa mục này không?</div>
    <div class="modal-footer" id="deleteButtons">
        <button type="button" class="btn btn-secondary" onclick="closeModal()">Hủy</button>
        <button type="button" class="btn btn-danger" onclick="confirmDelete()">Xóa</button>
    </div>
</div>

@section Scripts {
    <script>
        // Tự động ẩn thông báo sau 5s
        setTimeout(function () {
            document.querySelectorAll('.alert').forEach(alert => {
                alert.style.transition = 'opacity 0.5s ease';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            });
        }, 5000);

        let deleteId = null;
        function showDeletePopup(id) {
            deleteId = id;
            fetch(`/CinemaTheaters/CheckInUse?id=${id}`)
                .then(res => {
                    if (!res.ok) {
                        throw new Error('Không thể kiểm tra trạng thái sử dụng.');
                    }
                    return res.json();
                })
                .then(data => {
                    const modal = document.getElementById("deleteModal");
                    const backdrop = document.getElementById("modalBackdrop");
                    const deleteMessage = document.getElementById("deleteMessage");
                    const deleteButtons = document.getElementById("deleteButtons");

                    if (data.inUse) {
                        deleteMessage.innerText = "Phòng này đang được sử dụng trong suất chiếu. Không thể xóa!";
                        deleteButtons.innerHTML = '<button type="button" class="btn btn-secondary" onclick="closeModal()">Đóng</button>';
                    } else {
                        deleteMessage.innerText = "Bạn có chắc chắn muốn xóa phòng chiếu này không?";
                        deleteButtons.innerHTML = `
                            <button type="button" class="btn btn-secondary" onclick="closeModal()">Hủy</button>
                            <button type="button" class="btn btn-danger" onclick="confirmDelete()">Xóa</button>`;
                    }

                    modal.style.display = "block";
                    backdrop.style.display = "block";
                })
                .catch(error => {
                    alert(error.message);
                });
        }

        function confirmDelete() {
            // Thực hiện xóa trực tiếp bằng AJAX
            fetch(`/CinemaTheaters/DeleteAjax/${deleteId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    // Xóa thành công, reload trang
                    location.reload();
                } else {
                    alert('Lỗi: ' + data.message);
                    closeModal();
                }
            })
            .catch(error => {
                alert('Lỗi: ' + error.message);
                closeModal();
            });
        }

        function closeModal() {
            const modal = document.getElementById("deleteModal");
            const backdrop = document.getElementById("modalBackdrop");
            modal.style.display = "none";
            backdrop.style.display = "none";
        }
    </script>

    <style>
        #deleteModal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            z-index: 1051;
            min-width: 400px;
        }
        #deleteModal .modal-header {
            font-weight: bold;
            margin-bottom: 10px;
            color: black;
        }
        #deleteModal .modal-footer {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 20px;
        }
        #deleteModal .modal-body {
            margin-bottom: 15px;
            color: black;
        }
        .modal-backdrop {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1050;
        }
    </style>
}

<div class="d-flex justify-content-between mt-4">
    <button type="button" class="btn btn-secondary" onclick="history.back()">
        <i class="fas fa-arrow-left"></i> Quay lại
    </button>
</div>
