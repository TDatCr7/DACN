@model CinemaS.Models.Promotion

@{
    Layout = "_Layout";
    ViewData["Title"] = "Chi tiết khuyến mãi";

    var nameText = string.IsNullOrWhiteSpace(Model.Name) ? "N/A" : Model.Name;
    var codeText = string.IsNullOrWhiteSpace(Model.Code) ? "N/A" : Model.Code;
    var contentText = string.IsNullOrWhiteSpace(Model.Content) ? "N/A" : Model.Content;
    var startDayText = Model.StartDay.HasValue ? Model.StartDay.Value.ToString("dd/MM/yyyy") : "N/A";
    var endDayText = Model.EndDay.HasValue ? Model.EndDay.Value.ToString("dd/MM/yyyy") : "N/A";
    var discountText = Model.Discount.HasValue ? $"{Model.Discount.Value} %" : "N/A";
    var statusText = Model.Status == true ? "Đang áp dụng" : "Ngưng áp dụng";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" style="border-radius:14px;margin-bottom:12px;">
        @TempData["Error"]
    </div>
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-gift"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <a asp-action="Edit" asp-route-id="@Model.PromotionId"
                   class="btn btn-primary btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-pen"></i> Sửa
                </a>

                <form asp-action="Delete" asp-route-id="@Model.PromotionId" method="post" class="m-0 d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-outline-light-rounded btn-sweep px-3"
                            style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap; border-color:rgba(248,113,113,.65)!important;"
                            onclick="return confirm('Xoá khuyến mãi này?');">
                        <i class="fa-solid fa-trash-can"></i> Xoá
                    </button>
                </form>
            </div>
        </div>

        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                Thông tin khuyến mãi
            </div>

            <div class="admin-user-detail-grid">
                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-tag"></i> Mã CTKM</div>
                    <div class="admin-user-detail-value">@Model.PromotionId</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-gift"></i> Tên chương trình</div>
                    <div class="admin-user-detail-value">@nameText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-hashtag"></i> Mã code</div>
                    <div class="admin-user-detail-value">@codeText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-percent"></i> Giảm (%)</div>
                    <div class="admin-user-detail-value">@discountText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-calendar"></i> Ngày bắt đầu</div>
                    <div class="admin-user-detail-value">@startDayText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-calendar"></i> Ngày kết thúc</div>
                    <div class="admin-user-detail-value">@endDayText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-toggle-on"></i> Trạng thái</div>
                    <div class="admin-user-detail-value">@statusText</div>
                </div>

                <div class="admin-user-detail-item wide">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-align-left"></i> Nội dung</div>
                    <div class="admin-user-detail-value">@contentText</div>
                </div>
            </div>

        </div>
    </div>
</div>
