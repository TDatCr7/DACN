@using Microsoft.AspNetCore.Mvc.Rendering
@model CinemaS.Models.Promotion

@{
    ViewData["Title"] = "Chỉnh sửa khuyến mãi";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var adminUsers = ViewBag.AdminUsers as List<SelectListItem> ?? new();
}

<div class="container page-create-form">
    <div class="row g-4 justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="create-card">
                <div class="mb-3">
                    <h3><i class="fa-solid fa-pen-to-square me-2"></i>Chỉnh sửa khuyến mãi</h3>
                    <small>Cập nhật thông tin chương trình và mã giảm giá.</small>
                </div>

                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <input type="hidden" asp-for="PromotionId" />

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Mã CTKM</label>
                            <input class="form-control" value="@Model.PromotionId" disabled />
                        </div>
                        <div class="col-md-8 mb-3">
                            <label asp-for="Name" class="form-label">Tên chương trình</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Code" class="form-label">Mã code</label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Discount" class="form-label">Giảm (%)</label>
                            <input asp-for="Discount" type="number" min="0" max="100" step="0.1" class="form-control" />
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StartDay" class="form-label">Ngày bắt đầu</label>
                            <input asp-for="StartDay" type="date" class="form-control" />
                            <span asp-validation-for="StartDay" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EndDay" class="form-label">Ngày kết thúc</label>
                            <input asp-for="EndDay" type="date" class="form-control" />
                            <span asp-validation-for="EndDay" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label">Nội dung chi tiết</label>
                        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Trạng thái</label>
                        <select asp-for="Status" class="form-select">
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="true">Đang áp dụng</option>
                            <option value="false">Đang không áp dụng</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserId" class="form-label">Nhân viên tạo / quản lý (Admin)</label>
                        <select asp-for="UserId"
                                asp-items="adminUsers"
                                class="form-select">
                            <option value="">-- Chọn tài khoản Admin --</option>
                        </select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-light-rounded">
                            <i class="fa-solid fa-arrow-left-long me-1"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary rounded-pill">
                            <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
