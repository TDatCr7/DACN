@using Microsoft.AspNetCore.Mvc.Rendering
@model CinemaS.Models.Promotion

@{
    ViewData["Title"] = "Chỉnh sửa khuyến mãi";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var adminUsers = ViewBag.AdminUsers as List<SelectListItem> ?? new();
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-gift"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="promotionEditForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                </button>
            </div>
        </div>

        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">
            <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                Thông tin khuyến mãi
            </div>

            <form asp-action="Edit" method="post" id="promotionEditForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="PromotionId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Mã CTKM</label>
                        <input class="form-control" value="@Model.PromotionId" disabled />
                    </div>
                    <div class="col-md-8">
                        <label asp-for="Name" class="form-label">Tên chương trình</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Code" class="form-label">Mã code</label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Discount" class="form-label">Giảm (%)</label>
                        <input asp-for="Discount" type="number" min="0" max="100" step="0.1" class="form-control" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="StartDay" class="form-label">Ngày bắt đầu</label>
                        <input asp-for="StartDay" type="date" class="form-control" />
                        <span asp-validation-for="StartDay" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EndDay" class="form-label">Ngày kết thúc</label>
                        <input asp-for="EndDay" type="date" class="form-control" />
                        <span asp-validation-for="EndDay" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Content" class="form-label">Nội dung chi tiết</label>
                        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label">Trạng thái</label>
                        <select asp-for="Status" class="form-select">
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="true">Đang áp dụng</option>
                            <option value="false">Đang không áp dụng</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="UserId" class="form-label">Nhân viên tạo / quản lý (Admin)</label>
                        <select asp-for="UserId"
                                asp-items="adminUsers"
                                class="form-select">
                            <option value="">-- Chọn tài khoản Admin --</option>
                        </select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
