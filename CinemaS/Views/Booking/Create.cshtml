@model List<CinemaS.Models.ViewModels.ShowTimeVM>
@{
    ViewData["Title"] = "Chọn suất chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
        }

    .progress-bar {
        transition: width 0.6s ease;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3 mb-4">
            @if (ViewBag.Movie != null)
            {
                <div class="card shadow-sm sticky-top" style="top: 80px;">
                    <img src="@ViewBag.Movie.PosterImage" alt="@ViewBag.Movie.Title" class="card-img-top" style="height: 300px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@ViewBag.Movie.Title</h5>
                        <p class="text-muted small">
                            <i class="fas fa-clock"></i> @ViewBag.Movie.Duration phút<br>
                            <i class="fas fa-star text-warning"></i> @ViewBag.Movie.Rating/10
                        </p>
                        <a href="@Url.Action("Details", "Movies", new { id = ViewBag.Movie.MoviesId })" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-info-circle"></i> Chi tiết
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-9">
            <div class="d-flex align-items-center mb-4">
                <h2 class="mb-0"><i class="fas fa-calendar-alt"></i> Chọn suất chiếu</h2>
                <span class="badge bg-primary ms-3">@Model.Count suất</span>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle"></i> Phim này hiện không có suất chiếu nào!
                </div>
            }
            else
            {
                var groupedByDate = Model.GroupBy(s => s.ShowDate?.Date).OrderBy(g => g.Key);

                @foreach (var dateGroup in groupedByDate)
                {
                    <div class="mb-4">

                        <div class="row g-3">
                            @foreach (var showTime in dateGroup.OrderBy(s => s.StartTime))
                            {
                                var availability = showTime.AvailableSeats > 0 ? "available" : "full";
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm border-0 @(availability == "full" ? "opacity-50" : "")">
                                        <div class="card-body d-flex flex-column">

                                            <div class="mb-3">
                                                <h6 class="card-title mb-1">
                                                    <i class="fas fa-calendar-day"></i>
                                                    @dateGroup.Key?.ToString("dddd, dd/MM/yyyy", new System.Globalization.CultureInfo("vi-VN"))
                                                </h6>

                                                <h5 class="mb-2">
                                                    <i class="fas fa-film text-primary"></i>
                                                    <strong>@showTime.StartTime?.ToString("HH:mm")</strong>
                                                    <span class="text-muted small"> - @showTime.EndTime?.ToString("HH:mm")</span>
                                                </h5>

                                                <p class="text-muted small mb-2">
                                                    <i class="fas fa-door-open"></i> @showTime.CinemaName
                                                </p>
                                            </div>
                                            <div class="mb-3 p-2 bg-light rounded">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <span class="small">
                                                        <i class="fas fa-chair"></i> Ghế trống:
                                                    </span>
                                                    <strong class="@(showTime.AvailableSeats > 0 ? "text-success" : "text-danger")">
                                                        @showTime.AvailableSeats / @showTime.TotalSeats
                                                    </strong>
                                                </div>

                                                <div class="progress mt-2" style="height: 6px;">
                                                    @{
                                                        var percentage = showTime.TotalSeats > 0 ? (showTime.AvailableSeats * 100) / showTime.TotalSeats : 0;
                                                        var barColor = percentage > 50 ? "bg-success" : (percentage > 20 ? "bg-warning" : "bg-danger");
                                                    }
                                                    <div class="progress-bar @barColor" style="width: @percentage%"></div>
                                                </div>
                                            </div>

                                            <div class="mt-auto">
                                                @if (showTime.AvailableSeats > 0)
                                                {
                                                    @if (User.IsInRole("Admin"))
                                                    {
                                                        <a href="@Url.Action("AdminBooking", "Admin", new { showTimeId = showTime.ShowTimeId })"
                                                           class="btn btn-primary w-100 mb-2">
                                                            <i class="fas fa-user-tie"></i> Đặt vé cho khách
                                                        </a>

                                                    }
                                                    else if (User.IsInRole("User"))
                                                    {
                                                        <a href="@Url.Action("SeatSelection", "Booking", new { id = showTime.ShowTimeId })"
                                                           class="btn btn-primary w-100">
                                                            <i class="fas fa-ticket-alt"></i> Chọn ghế
                                                        </a>
                                                    }
                                                }
                                                else
                                                {
                                                    <button class="btn btn-secondary w-100" disabled>
                                                        <i class="fas fa-ban"></i> Hết vé
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            }

            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>