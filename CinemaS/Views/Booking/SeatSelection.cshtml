<link rel="stylesheet" href="~/css/booking-modal.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/toast-notification.css" asp-append-version="true" />

<div class="seat-selection-container">
    <input type="hidden" id="showTimeId" value="@Model.ShowTimeId" />

    <!-- Th√¥ng tin phim -->
    <div class="movie-info">
        <div class="movie-poster">
            <img src="@Model.MoviePoster" alt="@Model.MovieTitle" />
        </div>
        <div class="movie-details">
            <h2>@Model.MovieTitle</h2>
            <p><i class="fas fa-door-open"></i> <strong>Ph√≤ng:</strong> @Model.CinemaTheaterName</p>
            <p><i class="fas fa-calendar"></i> <strong>Ng√†y:</strong> @Model.ShowDate?.ToString("dd/MM/yyyy")</p>
            <p><i class="fas fa-clock"></i> <strong>Gi·ªù:</strong> @Model.StartTime?.ToString("HH:mm")</p>
        </div>
    </div>

    <!-- M√†n h√¨nh -->
    <div class="screen-container">
        <div class="screen">M√ÄN H√åNH</div>
    </div>

    <!-- S∆° ƒë·ªì gh·∫ø -->
    <div class="seat-layout-scroll-wrapper">
        <div class="seats-grid-container">
            <!-- S·ªë c·ªôt -->
            <div class="column-numbers">
                @for (int col = 1; col <= Model.NumOfColumns; col++)
                {
                    <div class="column-number">@col</div>
                }
            </div>

            <!-- C√°c h√†ng gh·∫ø -->
            @{
                var rows = Model.Seats.GroupBy(s => s.RowIndex).OrderBy(g => g.Key);
            }

            @foreach (var row in rows)
            {
                <div class="seat-row">
                    <div class="row-label">@row.Key</div>

                    <div class="seats-in-row">
                        @{
                            var seatsInRow = row.OrderBy(s => s.ColumnIndex).ToList();
                            var processedSeats = new HashSet<string>();
                        }

                        @foreach (var seat in seatsInRow)
                        {
                            if (processedSeats.Contains(seat.SeatId))
                            {
                                continue; // Skip if already processed as part of a couple
                            }

                            if (!string.IsNullOrEmpty(seat.PairId))
                            {
                                // This is a couple seat, find its pair
                                var pairSeat = seatsInRow.FirstOrDefault(s => s.PairId == seat.PairId && s.SeatId != seat.SeatId);
                                if (pairSeat != null)
                                {
                                    // Mark both as processed
                                    processedSeats.Add(seat.SeatId);
                                    processedSeats.Add(pairSeat.SeatId);

                                    // Determine if booked or inactive
                                    var isBookedOrInactive = seat.Status == "Booked" || pairSeat.Status == "Booked" || !seat.IsActive || !pairSeat.IsActive;
                                    var cssClass = isBookedOrInactive ? "booked" : "";

                                    <div class="couple-seat-wrapper @cssClass"
                                         data-seat-ids="@seat.SeatId,@pairSeat.SeatId"
                                         data-seat-labels="@seat.Label,@pairSeat.Label"
                                         data-seat-prices="@(seat.SeatTypePrice ?? 0),@(pairSeat.SeatTypePrice ?? 0)"
                                         data-is-active="@(seat.IsActive && pairSeat.IsActive)"
                                         onclick="toggleSeat(this, true)">
                                        <div class="couple-seat">
                                            @if (seat.Status == "Booked" || pairSeat.Status == "Booked")
                                            {
                                                <i class="fas fa-check" style="color: white; font-size: 20px;"></i>
                                            }
                                            else if (!seat.IsActive || !pairSeat.IsActive)
                                            {
                                                <span class="broken-icon" style="color: black;">‚úó</span>
                                            }
                                            else
                                            {
                                                <div class="user-icons" style="display:none;">
                                                    <img src="~/images/user.png" alt="user" class="user-icon" />
                                                    <img src="~/images/user.png" alt="user" class="user-icon" />
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    // Pair not found, treat as single (shouldn't happen but handle gracefully)
                                    processedSeats.Add(seat.SeatId);
                                    var seatClass = seat.Status == "Booked" || !seat.IsActive ? "booked" : "";
                                    seatClass += seat.IsVIP ? " vip" : " normal";

                                    <div class="seat @seatClass"
                                         data-seat-id="@seat.SeatId"
                                         data-seat-price="@(seat.SeatTypePrice ?? 0)"
                                         data-seat-label="@seat.Label"
                                         data-is-active="@seat.IsActive"
                                         onclick="toggleSeat(this, false)">
                                        @if (seat.Status == "Booked")
                                        {
                                            <i class="fas fa-check" style="color: white; font-size: 16px;"></i>
                                        }
                                        else if (seat.IsVIP)
                                        {
                                            <span class="seat-badge">V</span>
                                        }
                                        @if (!seat.IsActive && seat.Status != "Booked")
                                        {
                                            <span class="broken-icon" style="color: white;">‚úó</span>
                                        }
                                        @if (seat.Status != "Booked")
                                        {
                                            <div class="user-icon-wrapper" style="display:none;">
                                                <img src="~/images/user.png" alt="user" class="user-icon" />
                                            </div>
                                        }
                                    </div>
                                }
                            }
                            else
                            {
                                // Single seat
                                processedSeats.Add(seat.SeatId);
                                var seatClass = seat.Status == "Booked" || !seat.IsActive ? "booked" : "";
                                seatClass += seat.IsVIP ? " vip" : " normal";

                                <div class="seat @seatClass"
                                     data-seat-id="@seat.SeatId"
                                     data-seat-price="@(seat.SeatTypePrice ?? 0)"
                                     data-seat-label="@seat.Label"
                                     data-is-active="@seat.IsActive"
                                     onclick="toggleSeat(this, false)">
                                    @if (seat.Status == "Booked")
                                    {
                                        <i class="fas fa-check" style="color: white; font-size: 16px;"></i>
                                    }
                                    else if (seat.IsVIP)
                                    {
                                        <span class="seat-badge">V</span>
                                    }
                                    @if (!seat.IsActive && seat.Status != "Booked")
                                    {
                                        <span class="broken-icon" style="color: white;">‚úó</span>
                                    }
                                    @if (seat.Status != "Booked")
                                    {
                                        <div class="user-icon-wrapper" style="display:none;">
                                            <img src="~/images/user.png" alt="user" class="user-icon" />
                                        </div>
                                    }
                                </div>
                            }
                        }
                    </div>

                    <div class="row-label">@row.Key</div>
                </div>
            }
        </div>
    </div>

    <!-- Ch√∫ th√≠ch -->
    <div class="legend">
        <div class="legend-title">
            <i class="fas fa-info-circle"></i> Ch√∫ Th√≠ch
        </div>
        <div class="legend-items">
            <div class="legend-item">
                <div class="seat normal"></div>
                <span>Gh·∫ø Tr·ªëng</span>
            </div>
            <div class="legend-item">
                <div class="seat normal selected">
                    <img src="~/images/user.png" alt="user" class="user-icon" />
                </div>
                <span>ƒêang Ch·ªçn</span>
            </div>
            <div class="legend-item">
                <div class="seat booked">
                    <i class="fas fa-check" style="color: white; font-size: 16px;"></i>
                </div>
                <span>ƒê√£ ƒê·∫∑t</span>
            </div>
            <div class="legend-item">
                <div class="seat normal broken">
                    <span class="broken-icon">‚úó</span>
                </div>
                <span>Gh·∫ø H·ªèng</span>
            </div>
            <div class="legend-item">
                <div class="seat vip"><span class="seat-badge">V</span></div>
                <span>Gh·∫ø VIP</span>
            </div>
            <div class="legend-item">
                <div class="couple-seat-wrapper">
                    <div class="couple-seat"></div>
                </div>
                <span>Gh·∫ø ƒê√¥i</span>
            </div>
        </div>
    </div>

    <!-- Ch·ªçn ƒë·ªì ƒÉn k√®m -->
    <div class="snack-selection">
        <div class="snack-header" onclick="toggleSnackSection()">
            <h5 class="fw-bold mb-0">
                <i class="fas fa-utensils"></i> Ch·ªçn ƒë·ªì ƒÉn k√®m <span id="snackCount" class="snack-badge-count"></span>
            </h5>
            <button type="button" class="btn-collapse" id="snackToggleBtn">
                <i class="fas fa-chevron-down"></i>
            </button>
        </div>

        <div class="snack-content" id="snackContent">
            <div class="row g-3 mt-2">
                @if (ViewBag.Snacks != null)
                {
                    @foreach (var snack in ViewBag.Snacks)
                    {
                        <div class="col-6 col-md-3 col-lg-2">
                            <div class="snack-card">
                                <div class="snack-image">
                                    @if (!string.IsNullOrEmpty(snack.Image))
                                    {
                                        <img src="@snack.Image" alt="@snack.Name" onerror="this.src='/images/snacks/SnackCinema.jpg'">
                                    }
                                    else
                                    {
                                        <img src="/images/snacks/SnackCinema.jpg" alt="@snack.Name">
                                    }
                                </div>
                                <div class="snack-info">
                                    <h6 class="snack-name">@snack.Name</h6>
                                    <p class="snack-price">@snack.Price?.ToString("N0") ƒë</p>
                                    <label class="snack-checkbox-wrapper">
                                        <input class="snack-checkbox"
                                               type="checkbox"
                                               value="@snack.SnackId"
                                               data-price="@snack.Price"
                                               id="snack-@snack.SnackId">
                                        <span class="checkmark">Ch·ªçn</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Th√¥ng tin ƒë·∫∑t v√© -->
    <div class="booking-summary">
        <div class="summary-content">
            <div class="selected-info">
                <strong>Gh·∫ø ƒë√£ ch·ªçn:</strong> <span id="selectedSeats">Ch∆∞a ch·ªçn</span>
            </div>
            <div class="total-price">
                <strong>T·ªïng ti·ªÅn:</strong> <span id="totalPrice">0 ƒë</span>
            </div>
        </div>
        <button id="btnBook" class="btn-book" onclick="openBookingModal()" disabled>
            <i class="fas fa-ticket-alt"></i> ƒê·∫∑t v√©
        </button>
    </div>
</div>

<!-- ===== BOOKING MODAL ===== -->
