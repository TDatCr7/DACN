@model CinemaS.Models.ViewModels.SeatSelectionVM
@{
    ViewData["Title"] = "Đặt vé và thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="~/css/seat-selection.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/booking-modal.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/toast-notification.css" asp-append-version="true" />

<div class="seat-selection-container">
    <input type="hidden" id="showTimeId" value="@Model.ShowTimeId" />

    <!-- Thông tin phim -->
    <div class="movie-info">
        <div class="movie-poster">
            <img src="@Model.MoviePoster" alt="@Model.MovieTitle" />
        </div>
        <div class="movie-details">
            <h2>@Model.MovieTitle</h2>
            <p><i class="fas fa-door-open"></i> <strong>Phòng:</strong> @Model.CinemaTheaterName</p>
            <p><i class="fas fa-calendar"></i> <strong>Ngày:</strong> @Model.ShowDate?.ToString("dd/MM/yyyy")</p>
            <p><i class="fas fa-clock"></i> <strong>Giờ:</strong> @Model.StartTime?.ToString("HH:mm")</p>
        </div>
    </div>

    <!-- Màn hình -->
    <div class="screen-container">
        <div class="screen">MÀN HÌNH</div>
    </div>

    <!-- Sơ đồ ghế -->
    <div class="seat-layout-scroll-wrapper">
        <div class="seats-grid-container">
            @{
                var rows = Model.Seats.GroupBy(s => s.RowIndex).OrderBy(g => g.Key);
            }

            @foreach (var row in rows)
            {
                <div class="seat-row">
                    <div class="row-label">@row.Key</div>

                    <div class="seats-in-row">
                        @{
                            var seatsInRow = row.OrderBy(s => s.ColumnIndex).ToList();
                            var processedColumns = new HashSet<int>();
                        }

                        @for (int col = 1; col <= Model.NumOfColumns; col++)
                        {
                            var seat = seatsInRow.FirstOrDefault(s => s.ColumnIndex == col);

                            if (seat == null)
                            {
                                <div class="seat seat-placeholder" style="visibility: hidden; pointer-events: none;"></div>
                                continue;
                            }

                            if (processedColumns.Contains(col))
                            {
                                continue;
                            }

                            if (!string.IsNullOrEmpty(seat.PairId))
                            {
                                var pairSeat = seatsInRow.FirstOrDefault(s => s.PairId == seat.PairId && s.SeatId != seat.SeatId);
                                if (pairSeat != null)
                                {
                                    processedColumns.Add(seat.ColumnIndex ?? 0);
                                    processedColumns.Add(pairSeat.ColumnIndex ?? 0);

                                    // If either seat is aisle, render visible aisle visuals for both
                                    if (seat.IsAisle || pairSeat.IsAisle)
                                    {
                                        <div class="seat seat-placeholder" style="visibility: hidden; pointer-events: none;" title="Lối đi"></div>
                                        <div class="seat seat-placeholder" style="visibility: hidden; pointer-events: none;" title="Lối đi"></div>
                                        continue;
                                    }

                                    var isBookedOrInactive = seat.Status == "Booked" || pairSeat.Status == "Booked" || !seat.IsActive || !pairSeat.IsActive;
                                    var cssClass = isBookedOrInactive ? "booked" : "";

                                    <div class="couple-seat-wrapper @cssClass"
                                         data-seat-ids="@seat.SeatId,@pairSeat.SeatId"
                                         data-seat-labels="@seat.Label,@pairSeat.Label"
                                         data-seat-prices="@(seat.SeatTypePrice ?? 0),@(pairSeat.SeatTypePrice ?? 0)"
                                         data-is-active="@(seat.IsActive && pairSeat.IsActive)"
                                         onclick="toggleSeat(this, true)">
                                        <div class="couple-seat">
                                            @if (seat.Status == "Booked" || pairSeat.Status == "Booked")
                                            {
                                                <i class="fas fa-check" style="color: white; font-size: 20px;"></i>
                                            }
                                            else if (!seat.IsActive || !pairSeat.IsActive)
                                            {
                                                <span class="broken-icon" style="color: black;">✗</span>
                                            }
                                            else
                                            {
                                                <div class="user-icons" style="display:none;">
                                                    <img src="~/images/user.png" alt="user" class="user-icon" />
                                                    <img src="~/images/user.png" alt="user" class="user-icon" />
                                                </div>
                                            }
                                            @if (seat.Status != "Booked" && !seat.Status.Contains("selected"))
                                            {
                                                <div class="seat-label-small">@seat.Label-@pairSeat.Label</div>
                                            }
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    processedColumns.Add(col);

                                    // If seat is aisle, render visible aisle visual
                                    if (seat.IsAisle)
                                    {
                                        <div class="seat seat-placeholder" style="visibility: hidden; pointer-events: none;" title="Lối đi"></div>
                                        continue;
                                    }

                                    var seatClass = seat.Status == "Booked" || !seat.IsActive ? "booked" : "";
                                    seatClass += seat.IsVIP ? " vip" : " normal";

                                    <div class="seat @seatClass"
                                         data-seat-id="@seat.SeatId"
                                         data-seat-price="@(seat.SeatTypePrice ?? 0)"
                                         data-seat-label="@seat.Label"
                                         data-is-active="@seat.IsActive"
                                         onclick="toggleSeat(this, false)">
                                        @if (seat.Status == "Booked")
                                        {
                                            <i class="fas fa-check" style="color: white; font-size: 16px;"></i>
                                        }
                                        else if (seat.IsVIP)
                                        {
                                            <span class="seat-badge">V</span>
                                        }
                                        @if (!seat.IsActive && seat.Status != "Booked")
                                        {
                                            <span class="broken-icon" style="color: white;">✗</span>
                                        }
                                        <div class="user-icon-wrapper">
                                            <img src="~/images/user.png" alt="user" class="user-icon" />
                                        </div>
                                        @if (seat.Status != "Booked" && !seat.Status.Contains("selected"))
                                        {
                                            <div class="seat-label-small">@seat.Label</div>
                                        }
                                    </div>
                                }
                            }
                            else
                            {
                                processedColumns.Add(col);

                                // If seat is aisle, render visible aisle visual
                                if (seat.IsAisle)
                                {
                                    <div class="seat seat-placeholder" style="visibility: hidden; pointer-events: none;" title="Lối đi"></div>
                                    continue;
                                }

                                var seatClass = seat.Status == "Booked" || !seat.IsActive ? "booked" : "";
                                seatClass += seat.IsVIP ? " vip" : " normal";

                                <div class="seat @seatClass"
                                     data-seat-id="@seat.SeatId"
                                     data-seat-price="@(seat.SeatTypePrice ?? 0)"
                                     data-seat-label="@seat.Label"
                                     data-is-active="@seat.IsActive"
                                     onclick="toggleSeat(this, false)">
                                    @if (seat.Status == "Booked")
                                    {
                                        <i class="fas fa-check" style="color: white; font-size: 16px;"></i>
                                    }
                                    else if (seat.IsVIP)
                                    {
                                        <span class="seat-badge">V</span>
                                    }
                                    @if (!seat.IsActive && seat.Status != "Booked")
                                    {
                                        <span class="broken-icon" style="color: white;">✗</span>
                                    }
                                    <div class="user-icon-wrapper">
                                        <img src="~/images/user.png" alt="user" class="user-icon" />
                                    </div>
                                    @if (seat.Status != "Booked" && !seat.Status.Contains("selected"))
                                    {
                                        <div class="seat-label-small">@seat.Label</div>
                                    }
                                </div>
                            }
                        }
                    </div>

                    <div class="row-label">@row.Key</div>
                </div>
            }
        </div>
    </div>

    <!-- Chú thích -->
    <div class="legend">
        <div class="legend-title">
            <i class="fas fa-info-circle"></i> Chú Thích
        </div>
        <div class="legend-items">
            <div class="legend-item">
                <div class="seat normal"></div>
                <span>Ghế Trống</span>
            </div>
            <div class="legend-item">
                <div class="seat normal selected">
                    <img src="~/images/user.png" alt="user" class="user-icon" />
                </div>
                <span>Đang Chọn</span>
            </div>
            <div class="legend-item">
                <div class="seat booked">
                    <i class="fas fa-check" style="color: white; font-size: 16px;"></i>
                </div>
                <span>Đã Đặt</span>
            </div>
            <div class="legend-item">
                <div class="seat normal broken">
                    <span class="broken-icon">✗</span>
                </div>
                <span>Ghế Hỏng</span>
            </div>
            <div class="legend-item">
                <div class="seat vip"><span class="seat-badge">V</span></div>
                <span>Ghế VIP</span>
            </div>
            <div class="legend-item">
                <div class="couple-seat-wrapper">
                    <div class="couple-seat"></div>
                </div>
                <span>Ghế Đôi</span>
            </div>
        </div>
    </div>

    <!-- Chọn đồ ăn kèm -->
    <div class="snack-selection">
        <div class="snack-header" onclick="toggleSnackSection()">
            <h5 class="fw-bold mb-0">
                <i class="fas fa-utensils"></i> Chọn đồ ăn kèm <span id="snackCount" class="snack-badge-count"></span>
            </h5>
            <button type="button" class="btn-collapse" id="snackToggleBtn">
                <i class="fas fa-chevron-down"></i>
            </button>
        </div>

        <div class="snack-content" id="snackContent">
            <div class="row g-3 mt-2">
                @if (ViewBag.Snacks != null)
                {
                    @foreach (var snack in ViewBag.Snacks)
                    {
                        <div class="col-6 col-md-3 col-lg-2">
                            <div class="snack-card">
                                <div class="snack-image">
                                    @if (!string.IsNullOrEmpty(snack.Image))
                                    {
                                        <img src="@snack.Image" alt="@snack.Name" onerror="this.src='/images/snacks/SnackCinema.jpg'">
                                    }
                                    else
                                    {
                                        <img src="/images/snacks/SnackCinema.jpg" alt="@snack.Name">
                                    }
                                </div>
                                <div class="snack-info">
                                    <h6 class="snack-name">@snack.Name</h6>
                                    <p class="snack-price">@snack.Price?.ToString("N0") đ</p>
                                    <div class="snack-control"
                                         data-snack-id="@snack.SnackId"
                                         data-price="@snack.Price"
                                         data-name="@snack.Name">
                                        <button type="button" class="btn-choose-snack" onclick="handleChooseSnack(this)">Chọn</button>
                                        <div class="quantity-control" style="display: none;">
                                            <button type="button" class="quantity-btn-snack" onclick="updateSnackCardQuantity(this, -1)">-</button>
                                            <input type="number" class="quantity-input-snack" value="1" readonly>
                                            <button type="button" class="quantity-btn-snack" onclick="updateSnackCardQuantity(this, 1)">+</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- PAYMENT SUMMARY (USER) -->
    <div class="booking-summary booking-summary--promo">
        <div class="booking-summary-grid booking-summary-grid-3">
            <!-- LEFT -->
            <div class="summary-left">
                <div class="selected-info">
                    <strong>Ghế đã chọn:</strong>
                    <span id="selectedSeats">Chưa chọn</span>
                </div>

                <div class="snack-summary">
                    <div class="snack-summary-title">
                        <strong>Bắp nước đã chọn:</strong>
                        <span id="snackTotalInline">0 đ</span>
                    </div>
                    <div class="snack-summary-list" id="snackSummaryList">
                        <div class="snack-empty">Chưa chọn</div>
                    </div>
                </div>

                <div class="total-price">
                    <strong>Tạm tính:</strong>
                    <span id="subTotalPrice">0 đ</span>
                </div>
            </div>

            <!-- MIDDLE: PROMO FIXED HEIGHT -->
            <div class="promo-box">
                <div class="promo-row">
                    <div class="promo-left">
                        <strong>Mã giảm giá</strong>
                        <div class="promo-hint">Áp dụng trước khi tạo hóa đơn</div>
                    </div>
                    <div class="promo-right">
                        <input id="promoCodeInput" type="text" class="promo-input" placeholder="Nhập mã (VD: SALE10)" />
                        <button type="button" class="promo-btn" onclick="applyPromoBeforeInvoice()">Áp</button>
                        <button type="button" class="promo-btn promo-btn-danger" onclick="clearPromoBeforeInvoice()">Gỡ mã</button>
                    </div>
                </div>

                <div class="promo-meta">
                    <div class="promo-line">
                        <span>Chương trình:</span>
                        <span id="promoNameText">-</span>
                    </div>
                    <div class="promo-line">
                        <span>Giảm (%):</span>
                        <span id="promoPercentText">-</span>
                    </div>
                    <div class="promo-line">
                        <span>Giảm:</span>
                        <span id="promoDiscountText">0 đ</span>
                    </div>
                </div>

                <div class="promo-msg" id="promoMsg"></div>
            </div>

            <!-- RIGHT -->
            <div class="booking-action-col">
                <div class="payable-card">
                    <div class="payable-row">
                        <strong>Phải trả:</strong>
                        <span id="totalPrice">0 đ</span>
                    </div>
                </div>

                <button id="btnBook" class="btn-book" onclick="openBookingModal()" disabled>
                    <i class="fas fa-ticket-alt"></i> Đặt vé
                </button>
            </div>
        </div>
    </div>
</div>

<!-- ===== BOOKING MODAL ===== -->
<div class="booking-modal-overlay" id="bookingModalOverlay">
    <div class="booking-modal">
        <div class="booking-modal-header">
            <h3>Xác nhận đặt vé</h3>
        </div>
        <div class="booking-modal-body">
            <div class="booking-info-item">
                <span class="booking-info-label">Số ghế:</span>
                <span class="booking-info-value" id="modalSeatCount">0</span>
            </div>
            <div class="booking-info-item">
                <span class="booking-info-label">Ghế đã chọn:</span>
                <span class="booking-info-value" id="modalSeatLabels">-</span>
            </div>
            <div class="booking-info-item">
                <span class="booking-info-label">Tiền ghế:</span>
                <span class="booking-info-value" id="modalSeatTotal">0 đ</span>
            </div>

            <div id="modalSnacksList" style="margin-top: 20px;"></div>

            <div class="booking-info-item" style="margin-top: 10px;">
                <span class="booking-info-label">Tiền đồ ăn:</span>
                <span class="booking-info-value" id="modalSnackTotal">0 đ</span>
            </div>

            <div class="booking-info-item" style="margin-top: 10px;">
                <span class="booking-info-label">Giảm:</span>
                <span class="booking-info-value" id="modalDiscountTotal">0 đ</span>
            </div>

            <div class="booking-total">
                <div class="booking-info-item">
                    <span class="booking-info-label">TỔNG CỘNG:</span>
                    <span class="booking-info-value" id="modalGrandTotal">0 đ</span>
                </div>
                <div class="booking-info-item" style="margin-top:10px;">
                    <span class="booking-info-label">PHẢI TRẢ:</span>
                    <span class="booking-info-value" id="modalPayableTotal">0 đ</span>
                </div>
            </div>
        </div>
        <div class="booking-modal-footer">
            <button class="booking-modal-btn booking-modal-btn-cancel" onclick="closeBookingModal()">
                <i class="fas fa-times"></i> Hủy
            </button>
            <button class="booking-modal-btn booking-modal-btn-confirm" onclick="confirmBooking()">
                <i class="fas fa-check"></i> Xác nhận
            </button>
        </div>
    </div>
</div>

<!-- ===== LOADING OVERLAY ===== -->
<div class="booking-loading-overlay" id="bookingLoadingOverlay">
    <div class="booking-loading-content">
        <div class="booking-loading-spinner"></div>
        <div class="booking-loading-text">Đang xử lý đặt vé...</div>
    </div>
</div>

<!-- ===== TOAST NOTIFICATION ===== -->
<div class="booking-toast" id="bookingToast"></div>

@section Scripts {
    <style>
        .snack-control {
            margin-top: 8px;
        }

        .btn-choose-snack {
            background-color: #3b82f6;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: bold;
            width: 100%;
            transition: background-color 0.2s;
        }

            .btn-choose-snack:hover {
                background-color: #2563eb;
            }

        .quantity-control {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 5px;
        }

        .quantity-btn-snack {
            background-color: #facc15;
            color: #1f2937;
            border: none;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .quantity-input-snack {
            width: 40px;
            height: 32px;
            text-align: center;
            border: 1px solid #4b5563;
            background-color: #374151;
            color: white;
            border-radius: 6px;
            -moz-appearance: textfield;
        }

            .quantity-input-snack::-webkit-outer-spin-button,
            .quantity-input-snack::-webkit-inner-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

        .booking-summary.booking-summary--promo {
            margin-top: 16px;
            padding: 16px;
            border-radius: 16px;
            border: 1px solid #1f2a44;
            background: #0b1220;
            box-shadow: 0 16px 28px rgba(0,0,0,.35);
            color: #e5e7eb;
            display: flex;
            flex-direction: column;
            gap: 14px;
        }

        .booking-summary-grid {
            display: grid;
            grid-template-columns: 1fr 380px;
            gap: 14px;
            align-items: start;
        }

            .booking-summary-grid.booking-summary-grid-3 {
                grid-template-columns: 1fr 460px 320px;
                gap: 14px;
                align-items: start;
            }

        .summary-left,
        .booking-action-col {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .booking-summary .selected-info,
        .booking-summary .total-price {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            gap: 12px;
            padding: 12px 14px;
            border-radius: 12px;
            background: #111a2c;
            border: 1px solid #1f2a44;
        }

            .booking-summary .selected-info strong,
            .booking-summary .total-price strong {
                color: #cbd5e1;
                font-weight: 800;
                font-size: 13px;
            }

        .booking-summary #selectedSeats {
            color: #e5e7eb;
            font-weight: 800;
            text-align: right;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            max-width: 65%;
        }

        .booking-summary #subTotalPrice {
            color: #fbbf24;
            font-weight: 900;
            font-size: 16px;
        }

        .snack-summary {
            padding: 12px 14px;
            border-radius: 12px;
            background: #111a2c;
            border: 1px solid #1f2a44;
            max-height: 220px;
            display: flex;
            flex-direction: column;
        }

        .snack-summary-title {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            gap: 12px;
            margin-bottom: 10px;
            flex-shrink: 0;
        }

        #snackTotalInline {
            font-weight: 900;
            color: #22c55e;
        }

        .snack-summary-list {
            display: flex;
            flex-direction: column;
            gap: 8px;
            flex: 1;
            max-height: 150px;
            overflow-y: auto;
            padding-right: 6px;
        }

            .snack-summary-list::-webkit-scrollbar {
                width: 6px;
            }

            .snack-summary-list::-webkit-scrollbar-thumb {
                background: rgba(148,163,255,.35);
                border-radius: 999px;
            }

            .snack-summary-list::-webkit-scrollbar-track {
                background: rgba(255,255,255,.06);
                border-radius: 999px;
            }

        .snack-empty {
            color: #9ca3af;
            font-size: 13px;
        }

        .snack-line {
            display: grid;
            grid-template-columns: 1fr 34px 110px;
            gap: 10px;
            align-items: center;
            padding: 10px 12px;
            border-radius: 10px;
            background: #0e1728;
            border: 1px solid #1f2a44;
            min-height: 44px;
        }

        .snack-line-name {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            font-weight: 700;
            color: #e5e7eb;
        }

        .snack-line-meta {
            color: #9ca3af;
            font-weight: 700;
            font-size: 13px;
            text-align: center;
        }

        .snack-line-price {
            color: #e5e7eb;
            font-weight: 800;
            font-size: 13px;
            text-align: right;
        }

        .promo-box {
            padding: 14px;
            border-radius: 12px;
            border: 1px solid #1f2a44;
            background: #111a2c;
            color: #e5e7f5;
            min-height: 220px;
        }

        .promo-row {
            display: flex;
            gap: 12px;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .promo-left strong {
            color: #e5e7eb;
        }

        .promo-hint {
            color: #9ca3af;
            font-size: 12px;
            margin-top: 2px;
        }

        .promo-right {
            display: flex;
            gap: 10px;
            align-items: center;
            flex-wrap: wrap;
            justify-content: flex-end;
            width: 100%;
        }

        .promo-input {
            height: 40px;
            padding: 0 12px;
            border-radius: 10px;
            border: 1px solid rgba(148,163,255,.22);
            background: #0b1220;
            color: #e5e7eb;
            outline: none;
            flex: 1;
            min-width: 200px;
        }

            .promo-input:focus {
                border-color: rgba(102,126,234,.9);
                box-shadow: 0 0 0 3px rgba(102,126,234,.15);
            }

        .promo-btn {
            height: 40px;
            padding: 0 14px;
            border-radius: 10px;
            border: 1px solid rgba(148,163,255,.22);
            background: rgba(59,130,246,.18);
            color: #cfe3ff;
            font-weight: 900;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .promo-btn:hover {
                filter: brightness(1.1);
            }

        .promo-btn-danger {
            background: rgba(239,68,68,.16);
            color: #fecaca;
            border-color: rgba(239,68,68,.35);
        }

        .promo-meta {
            margin-top: 12px;
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

