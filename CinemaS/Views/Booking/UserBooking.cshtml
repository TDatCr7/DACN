    <script>
        const showTimeId = '@Model.ShowTimeId';

        let selectedSeats = [];
        let selectedSnacks = [];

        let currentInvoiceId = null;
        let currentInvoiceAmount = 0;

        let currentBaseTotal = 0;
        let currentPayableTotal = 0;

        let promoDraftCode = '';
        let promoApplied = false;
        let promoName = '';
        let promoPercent = null;
        let promoDiscountAmount = 0;

        const PROMO_VALIDATE_URL = '/Booking/ValidatePromotion';

        async function readJsonSafe(res) {
            const ct = (res.headers.get('content-type') || '').toLowerCase();
            const text = await res.text();

            if (!text || !text.trim()) {
                return { success: false, message: `Empty response (HTTP ${res.status})` };
            }

            if (!ct.includes('application/json')) {
                return { success: false, message: `Non-JSON response (HTTP ${res.status})`, raw: text.slice(0, 300) };
            }

            try {
                return JSON.parse(text);
            } catch {
                return { success: false, message: `Invalid JSON (HTTP ${res.status})`, raw: text.slice(0, 300) };
            }
        }

        function showBookingLoading(show) {
            const overlay = document.getElementById('bookingLoadingOverlay');
            if (!overlay) return;
            if (show) overlay.classList.add('show'); else overlay.classList.remove('show');
        }

        function showBookingToast(message, type) {
            const toast = document.getElementById('bookingToast');
            if (!toast) return;
            toast.innerHTML = message;
            toast.className = 'booking-toast booking-toast-' + type + ' show';
            setTimeout(() => { toast.classList.remove('show'); }, 5000);
        }

        function formatVND(n) {
            return (n || 0).toLocaleString('vi-VN') + ' đ';
        }

        function setPromoMsg(text, kind) {
            const el = document.getElementById('promoMsg');
            if (!el) return;
            el.textContent = text || '';
            el.className = 'promo-msg' + (kind ? (' promo-msg-' + kind) : '');
        }

        function setPromoUI(nameText, percentText, discountText) {
            const nameEl = document.getElementById('promoNameText');
            const percentEl = document.getElementById('promoPercentText');
            const discountEl = document.getElementById('promoDiscountText');

            if (nameEl) nameEl.textContent = nameText;
            if (percentEl) percentEl.textContent = percentText;
            if (discountEl) discountEl.textContent = discountText;
        }

        function resetPromoState() {
            promoDraftCode = '';
            promoApplied = false;
            promoName = '';
            promoPercent = null;
            promoDiscountAmount = 0;

            const input = document.getElementById('promoCodeInput');
            if (input) input.value = '';

            setPromoUI('-', '-', formatVND(0));
            setPromoMsg('', '');

            currentPayableTotal = currentBaseTotal;
            syncTotalsToUI();
        }

        function getSeatTotal() {
            return selectedSeats.reduce((sum, s) => {
                const base = s.price || 0;
                const finalPrice = s.isCouple ? base * 2 : base;
                return sum + finalPrice;
            }, 0);
        }

        function renderSnackSummaryList() {
            const list = document.getElementById('snackSummaryList');
            if (!list) return;

            if (!selectedSnacks.length) {
                list.innerHTML = '<div class="snack-empty">Chưa chọn</div>';
                return;
            }

            const lines = selectedSnacks
                .map(s => {
                    const qty = s.quantity || 1;
                    const lineTotal = (s.price || 0) * qty;
                    return `
                        <div class="snack-line">
                            <div class="snack-line-name">${(s.name || 'Snack')}</div>
                            <div class="snack-line-meta">x${qty}</div>
                            <div class="snack-line-price">${formatVND(lineTotal)}</div>
                        </div>
                    `;
                })
                .join('');

            list.innerHTML = lines;
        }

        function syncTotalsToUI() {
            const subEl = document.getElementById('subTotalPrice');
            const seatEl = document.getElementById('selectedSeats');
            const totalEl = document.getElementById('totalPrice');
            const snackInline = document.getElementById('snackTotalInline');

            if (subEl) subEl.textContent = formatVND(currentBaseTotal);
            if (totalEl) totalEl.textContent = formatVND(currentPayableTotal);

            const seatLabels = selectedSeats
                .map(s => s.label)
                .sort((a, b) => a.localeCompare(b, 'vi-VN', { numeric: true }));

            if (seatEl) seatEl.textContent = seatLabels.length ? seatLabels.join(', ') : 'Chưa chọn';

            const snackTotal = selectedSnacks.reduce((sum, s) => sum + (s.price * (s.quantity || 1)), 0);
            if (snackInline) snackInline.textContent = formatVND(snackTotal);
        }

        function updateSummary() {
            const btnBook = document.getElementById('btnBook');

            const seatTotal = getSeatTotal();
            const snackTotal = selectedSnacks.reduce((sum, s) => sum + (s.price * (s.quantity || 1)), 0);
            const base = seatTotal + snackTotal;

            currentBaseTotal = base;
            currentPayableTotal = base;

            renderSnackSummaryList();
            syncTotalsToUI();

            if (btnBook) btnBook.disabled = selectedSeats.length === 0;

            updateSnackCounter();

            if (promoApplied && promoDraftCode) {
                revalidatePromoAfterAmountChanged();
            } else {
                setPromoUI('-', '-', formatVND(0));
                setPromoMsg('', '');
            }
        }

        window.handleChooseSnack = function (button) {
            const control = button.closest('.snack-control');
            if (!control) return;

            const snackId = control.dataset.snackId;
            const price = parseFloat(control.dataset.price) || 0;
            const name = control.dataset.name;

            selectedSnacks.push({ id: snackId, name, price, quantity: 1 });

            button.style.display = 'none';
            const qc = control.querySelector('.quantity-control');
            if (qc) qc.style.display = 'flex';

            const input = control.querySelector('.quantity-input-snack');
            if (input) input.value = 1;

            updateSummary();
        }

        window.updateSnackCardQuantity = function (button, change) {
            const control = button.closest('.snack-control');
            if (!control) return;

            const snackId = control.dataset.snackId;
            const input = control.querySelector('.quantity-input-snack');
            const currentQuantity = parseInt(input?.value || '1', 10);
            const newQuantity = currentQuantity + change;

            const snack = selectedSnacks.find(s => s.id === snackId);

            if (newQuantity <= 0) {
                selectedSnacks = selectedSnacks.filter(s => s.id !== snackId);

                const qc = control.querySelector('.quantity-control');
                if (qc) qc.style.display = 'none';

                const chooseBtn = control.querySelector('.btn-choose-snack');
                if (chooseBtn) chooseBtn.style.display = 'block';
            } else {
                if (snack) snack.quantity = newQuantity;
                if (input) input.value = newQuantity;
            }

            updateSummary();
        }

        window.toggleSeat = function (element, isCouple) {
            if (element.classList.contains('booked') || element.getAttribute('data-is-active') === 'false') {
                return;
            }

            if (isCouple) {
                const ids = (element.getAttribute('data-seat-ids') || '').split(',').filter(Boolean);
                const labels = (element.getAttribute('data-seat-labels') || '').split(',').filter(Boolean);
                const prices = (element.getAttribute('data-seat-prices') || '').split(',').map(x => parseFloat(x) || 0);

                if (!ids.length) return;

                if (element.classList.contains('selected')) {
                    element.classList.remove('selected');
                    const userIcons = element.querySelector('.user-icons');
                    if (userIcons) userIcons.style.display = 'none';
                    ids.forEach(id => { selectedSeats = selectedSeats.filter(s => s.id !== id); });
                } else {
                    element.classList.add('selected');
                    const userIcons = element.querySelector('.user-icons');
                    if (userIcons) userIcons.style.display = 'flex';

                    for (let i = 0; i < ids.length; i++) {
                        selectedSeats.push({
                            id: ids[i],
                            label: labels[i] || ids[i],
                            price: prices[i] ?? 0,
                            isCouple: true
                        });
                    }
                }
            } else {
                const id = element.getAttribute('data-seat-id');
                const price = parseFloat(element.getAttribute('data-seat-price')) || 0;
                const label = element.getAttribute('data-seat-label');

                if (element.classList.contains('selected')) {
                    element.classList.remove('selected');
                    const userIcon = element.querySelector('.user-icon-wrapper');
                    if (userIcon) userIcon.style.display = 'none';
                    selectedSeats = selectedSeats.filter(s => s.id !== id);
                } else {
                    element.classList.add('selected');
                    const userIcon = element.querySelector('.user-icon-wrapper');
                    if (userIcon) userIcon.style.display = 'flex';
                    selectedSeats.push({ id, label, price });
                }
            }

            const uniq = [];
            const seen = new Set();
            for (const s of selectedSeats) {
                if (!seen.has(s.id)) { uniq.push(s); seen.add(s.id); }
            }
            selectedSeats = uniq;

            updateSummary();
        };

        window.toggleSnackSection = function () {
            const content = document.getElementById('snackContent');
            const btn = document.getElementById('snackToggleBtn');
            const icon = btn?.querySelector('i');
            if (!content || !icon) return;

            if (content.style.display === 'none') {
                content.style.display = 'block';
                icon.classList.remove('fa-chevron-down');
                icon.classList.add('fa-chevron-up');
            } else {
                content.style.display = 'none';
                icon.classList.remove('fa-chevron-up');
                icon.classList.add('fa-chevron-down');
            }
        };

        window.updateSnackCounter = function () {
            const totalQuantity = selectedSnacks.reduce((sum, s) => sum + (s.quantity || 1), 0);
            const countElement = document.getElementById('snackCount');
            if (!countElement) return;

            if (totalQuantity > 0) {
                countElement.textContent = `(${totalQuantity} món đã chọn)`;
                countElement.style.backgroundColor = '#364747';
                countElement.style.color = '#fff';
                countElement.style.marginLeft = '8px';
                countElement.style.fontSize = '13px';
                countElement.style.padding = '2px 8px';
                countElement.style.borderRadius = '12px';
            } else {
                countElement.textContent = '';
            }
        };

        async function applyPromoBeforeInvoice() {
            if (currentBaseTotal <= 0) {
                showBookingToast('⚠️ Vui lòng chọn ghế trước.', 'error');
                return;
            }

            const code = (document.getElementById('promoCodeInput')?.value || '').trim();
            if (!code) {
                showBookingToast('⚠️ Vui lòng nhập mã giảm giá.', 'error');
                return;
            }

            showBookingLoading(true);
            try {
                const vRes = await fetch(PROMO_VALIDATE_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ code: code, amount: currentBaseTotal })
                });

                const vData = await readJsonSafe(vRes);

                if (!vRes.ok) {
                    promoApplied = false;
                    promoDraftCode = '';
                    promoName = '';
                    promoPercent = null;
                    promoDiscountAmount = 0;

                    currentPayableTotal = currentBaseTotal;
                    syncTotalsToUI();

                    setPromoUI('-', '-', formatVND(0));
                    setPromoMsg(vData?.message || 'Lỗi kiểm tra mã', 'err');
                    showBookingToast('❌ ' + (vData?.message || 'Lỗi kiểm tra mã'), 'error');
                    return;
                }

                if (!vData?.success) {
                    promoApplied = false;
                    promoDraftCode = '';
                    promoName = '';
                    promoPercent = null;
                    promoDiscountAmount = 0;

                    currentPayableTotal = currentBaseTotal;
                    syncTotalsToUI();

                    setPromoUI('-', '-', formatVND(0));
                    setPromoMsg(vData?.message || 'Mã không hợp lệ', 'err');
                    showBookingToast('❌ ' + (vData?.message || 'Mã không hợp lệ'), 'error');
                    return;
                }

                promoDraftCode = code;
                promoApplied = true;

                promoName = vData.promotionName || '-';
                promoPercent = (typeof vData.discountPercent === 'number') ? vData.discountPercent : null;
                promoDiscountAmount = vData.discountAmount || 0;

                currentPayableTotal = vData.totalAfterDiscount ?? currentBaseTotal;
                syncTotalsToUI();

                const percentText = (promoPercent === null) ? '-' : (promoPercent.toLocaleString('vi-VN') + '%');
                setPromoUI(promoName, percentText, formatVND(promoDiscountAmount));
                setPromoMsg(vData?.message || 'Đã áp mã', 'ok');

                showBookingToast('✅ ' + (vData?.message || 'Đã áp mã'), 'success');
            } catch (e) {
                currentPayableTotal = currentBaseTotal;
                syncTotalsToUI();
                setPromoMsg('Lỗi kiểm tra mã', 'err');
                showBookingToast('❌ Lỗi: ' + (e?.message || e), 'error');
            } finally {
                showBookingLoading(false);
            }
        }

        async function revalidatePromoAfterAmountChanged() {
            const code = promoDraftCode;
            if (!code || currentBaseTotal <= 0) return;

            try {
                const vRes = await fetch(PROMO_VALIDATE_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ code: code, amount: currentBaseTotal })
                });

                const vData = await readJsonSafe(vRes);

                if (!vRes.ok || !vData?.success) {
                    resetPromoState();
                    setPromoMsg('Mã không còn hợp lệ cho tổng mới', 'warn');
                    return;
                }

                promoName = vData.promotionName || '-';
                promoPercent = (typeof vData.discountPercent === 'number') ? vData.discountPercent : null;
                promoDiscountAmount = vData.discountAmount || 0;

                currentPayableTotal = vData.totalAfterDiscount ?? currentBaseTotal;
                syncTotalsToUI();

                const percentText = (promoPercent === null) ? '-' : (promoPercent.toLocaleString('vi-VN') + '%');
                setPromoUI(promoName, percentText, formatVND(promoDiscountAmount));
            } catch (_) { }
        }

        function clearPromoBeforeInvoice() {
            resetPromoState();
            showBookingToast('✅ Đã gỡ mã.', 'success');
        }

        window.applyPromoBeforeInvoice = applyPromoBeforeInvoice;
        window.clearPromoBeforeInvoice = clearPromoBeforeInvoice;

        window.openBookingModal = function () {
            if (selectedSeats.length === 0) {
                showBookingToast('⚠️ Vui lòng chọn ít nhất 1 ghế!', 'error');
                return;
            }

            const seatTotal = getSeatTotal();
            const snackTotal = selectedSnacks.reduce((sum, s) => sum + (s.price * (s.quantity || 1)), 0);
            const base = seatTotal + snackTotal;

            const seatLabels = selectedSeats
                .map(s => s.label)
                .sort((a, b) => a.localeCompare(b, 'vi-VN', { numeric: true }))
                .join(', ');

            document.getElementById('modalSeatCount').textContent = selectedSeats.length + ' ghế';
            document.getElementById('modalSeatLabels').textContent = seatLabels;
            document.getElementById('modalSeatTotal').textContent = formatVND(seatTotal);

            const snacksList = document.getElementById('modalSnacksList');
            snacksList.innerHTML = '';

            if (selectedSnacks.length > 0) {
                selectedSnacks.forEach((snack, index) => {
                    const snackDiv = document.createElement('div');
                    snackDiv.className = 'snack-quantity-item';
                    snackDiv.innerHTML = `
                        <div style="display:flex;justify-content:space-between;align-items:center;padding:10px 0;border-bottom:1px solid rgba(255,255,255,0.1);">
                          <span style="color:#fff;flex:1;">${snack.name || 'Snack'}</span>
                          <div style="display:flex;align-items:center;gap:10px;">
                            <button type="button" class="quantity-btn" onclick="updateSnackQuantity(${index}, -1)"><i class="fas fa-minus"></i></button>
                            <input type="number" class="quantity-input" value="${snack.quantity}" min="1" max="10" readonly
                                   style="width:50px;text-align:center;background:rgba(255,255,255,0.1);border:1px solid rgba(255,255,255,0.2);color:#fff;padding:5px;border-radius:5px;">
                            <button type="button" class="quantity-btn" onclick="updateSnackQuantity(${index}, 1)"><i class="fas fa-plus"></i></button>
                            <span style="color:#22c55e;font-weight:bold;min-width:100px;text-align:right;">${formatVND(snack.price * (snack.quantity || 1))}</span>
                          </div>
                        </div>`;
                    snacksList.appendChild(snackDiv);
                });
            } else {
                snacksList.innerHTML = '<p style="color:#9ca3af;text-align:center;padding:10px 0;">Chưa chọn đồ ăn</p>';
            }

            document.getElementById('modalSnackTotal').textContent = formatVND(snackTotal);
            document.getElementById('modalDiscountTotal').textContent = '-' + formatVND(promoDiscountAmount || 0);
            document.getElementById('modalGrandTotal').textContent = formatVND(base);
            document.getElementById('modalPayableTotal').textContent = formatVND(currentPayableTotal || base);

            document.getElementById('bookingModalOverlay').classList.add('show');
        };

        window.updateSnackQuantity = function (index, change) {
            if (index < 0 || index >= selectedSnacks.length) return;
            const snack = selectedSnacks[index];
            const newQuantity = (snack.quantity || 1) + change;

            if (newQuantity < 1 || newQuantity > 10) {
                showBookingToast('⚠️ Số lượng từ 1-10!', 'error');
                return;
            }

            snack.quantity = newQuantity;

            const controls = document.querySelectorAll('.snack-control');
            controls.forEach(control => {
                if (control.dataset.snackId === snack.id) {
                    const input = control.querySelector('.quantity-input-snack');
                    if (input) input.value = newQuantity;
                }
            });

            updateSummary();
            openBookingModal();
        };

        window.closeBookingModal = function () {
            document.getElementById('bookingModalOverlay').classList.remove('show');
        };

        window.confirmBooking = async function () {
            closeBookingModal();
            showBookingLoading(true);

            try {
                const allSeatIds = Array.from(new Set(selectedSeats.map(s => s.id)));

                const snacksData = selectedSnacks.map(snack => ({
                    snackId: snack.id,
                    quantity: snack.quantity || 1
                }));

                const bookRes = await fetch('/Booking/BookSeats', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        showTimeId: '@Model.ShowTimeId',
                        seatIds: allSeatIds,
                        snacks: snacksData,
                        loyaltyKey: null,
                        promoCode: (promoApplied && promoDraftCode) ? promoDraftCode : null
                    })
                });

                const bookData = await readJsonSafe(bookRes);

                if (!bookRes.ok || !bookData?.success) {
                    showBookingToast('❌ ' + (bookData?.message || 'Đặt vé thất bại'), 'error');
                    return;
                }

                currentInvoiceId = bookData.invoiceId;
                currentInvoiceAmount = bookData.totalPrice || 0;

                const payRes = await fetch('/Payment/Create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        orderId: currentInvoiceId,
                        amount: currentInvoiceAmount,
                        orderInfo: `Dat ve ${'@Model.ShowTimeId'}`
                    })
                });

                const payData = await readJsonSafe(payRes);

                if (!payRes.ok) {
                    showBookingToast('❌ ' + (payData?.message || 'Không tạo được URL thanh toán.'), 'error');
                    return;
                }

                if (payData?.success && payData?.paymentUrl) {
                    window.location.href = payData.paymentUrl;
                    return;
                }

                showBookingToast('❌ Không tạo được URL thanh toán.', 'error');
            } catch (error) {
                showBookingToast('❌ Lỗi: ' + (error?.message || error), 'error');
            } finally {
                showBookingLoading(false);
            }
        };

        async function refreshSeatsStatus() {
            const showTimeId = '@Model.ShowTimeId';
            try {
                const res = await fetch(`/Booking/GetSeatsStatus?showTimeId=${encodeURIComponent(showTimeId)}`);
                const data = await readJsonSafe(res);
                if (!res.ok || !data?.success) return;

                const booked = new Set(data.bookedSeats || []);
                document.querySelectorAll('.seat:not(.booked)').forEach(el => {
                    const id = el.getAttribute('data-seat-id');
                    if (booked.has(id)) {
                        el.classList.remove('selected');
                        el.classList.add('booked');
                        const existingIcon = el.querySelector('.fa-check');
                        if (!existingIcon) {
                            el.innerHTML = '<i class="fas fa-check" style="color: white; font-size: 16px;"></i>';
                        }
                        selectedSeats = selectedSeats.filter(s => s.id !== id);
                    }
                });

                document.querySelectorAll('.couple-seat-wrapper:not(.booked)').forEach(el => {
                    const ids = (el.getAttribute('data-seat-ids') || '').split(',').filter(Boolean);
                    if (ids.some(id => booked.has(id))) {
                        el.classList.remove('selected');
                        el.classList.add('booked');
                        const coupleSeat = el.querySelector('.couple-seat');
                        if (coupleSeat) {
                            const existingIcon = coupleSeat.querySelector('.fa-check');
                            if (!existingIcon) {
                                coupleSeat.innerHTML = '<i class="fas fa-check" style="color: white; font-size: 20px;"></i>';
                            }
                        }
                        const userIcons = el.querySelector('.user-icons');
                        if (userIcons) userIcons.style.display = 'none';
                        ids.forEach(id => selectedSeats = selectedSeats.filter(s => s.id !== id));
                    }
                });

                updateSummary();
            } catch { }
        }

        document.addEventListener('DOMContentLoaded', () => {
            resetPromoState();
            updateSummary();
            setInterval(refreshSeatsStatus, 10000);
        });

        document.addEventListener('DOMContentLoaded', function () {
            const wrapper = document.querySelector('.seat-layout-scroll-wrapper');
            const inner = document.querySelector('.seats-grid-container');
            function syncOverflowClass() {
                if (!wrapper || !inner) return;
                const isOverflowing = inner.scrollWidth > wrapper.clientWidth;
                wrapper.classList.toggle('overflowing', isOverflowing);
            }
            syncOverflowClass();
            window.addEventListener('resize', syncOverflowClass);
            setTimeout(syncOverflowClass, 400);
        });
    </script>
