@model IEnumerable<CinemaS.Models.Participants>

@{
    ViewData["Title"] = "Quản lý Diễn Viên/Đạo Diễn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="fa-solid fa-user-tie"></i> Quản lý Diễn Viên/Đạo Diễn</h1>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus-circle"></i> Tạo mới
            </a>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="admin-table-wrap">
        <table class="table admin-table align-middle">
            <thead>
                <tr>
                    <th><i class="fa-solid fa-user"></i>Tên thật</th>
                    <th><i class="fa-solid fa-star"></i>Nghệ danh</th>
                    <th><i class="fa-solid fa-venus-mars"></i>Giới tính</th>
                    <th><i class="fa-solid fa-flag"></i>Quốc tịch</th>
                    <th><i class="fa-solid fa-align-left"></i>Tiểu sử</th>
                    <th><i class="fa-solid fa-image"></i>Avatar</th>
                    <th style="text-align:right;"><i class="fa-solid fa-ellipsis-vertical"></i>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center admin-text-muted py-4">
                            Không có diễn viên/đạo diễn nào.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.BirthName</strong></td>
                            <td>@(item.NickName ?? "N/A")</td>
                            <td>@(item.Gender == 1 ? "Nam" : item.Gender == 0 ? "Nữ" : "Khác")</td>
                            <td class="admin-text-muted">@(item.Nationality ?? "N/A")</td>
                            <td class="admin-text-muted">
                                @(string.IsNullOrEmpty(item.MiniBio) 
                                    ? "N/A" 
                                    : (item.MiniBio.Length > 50 
                                        ? item.MiniBio.Substring(0, 50) + "..." 
                                        : item.MiniBio))
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Avatar))
                                {
                                    <img src="@item.Avatar" alt="Avatar" style="width:40px; height:40px; border-radius:50%; object-fit:cover;" />
                                }
                                else
                                {
                                    <span class="admin-text-muted">Không có</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.ParticipantsId" 
                                   class="admin-icon-btn" title="Chỉnh sửa">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ParticipantsId" 
                                   class="admin-icon-btn" title="Chi tiết">
                                    <i class="fa-regular fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ParticipantsId" 
                                   class="admin-icon-btn admin-icon-btn-danger" title="Xóa">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
    </div>
</div>
