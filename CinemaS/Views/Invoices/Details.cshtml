@model CinemaS.Models.Invoices

@{
    Layout = "_Layout";
    ViewData["Title"] = "Chi tiết hóa đơn";

    var statusValue = Model.Status ?? 0;
    var isPaid = statusValue == 1;

    string StatusText(int? status) => status switch
    {
        0 => "Chưa thanh toán",
        1 => "Đã thanh toán",
        2 => "Đã huỷ / Lỗi",
        _ => $"Trạng thái khác ({status})"
    };

    bool isSnackOnly = (Model.TotalTicket ?? 0) == 0;
    string invoiceType = isSnackOnly ? "Hoá đơn bắp nước" : "Hoá đơn vé xem phim";

    var invoiceIdText = Model.InvoiceId ?? "N/A";
    var customerIdText = Model.CustomerId ?? "N/A";
    var emailText = string.IsNullOrWhiteSpace(Model.Email) ? "N/A" : Model.Email;
    var phoneText = string.IsNullOrWhiteSpace(Model.PhoneNumber) ? "N/A" : Model.PhoneNumber;
    var totalTicketText = (Model.TotalTicket ?? 0).ToString();
    
    // ✅ Calculate discount info
    bool hasPromotion = !string.IsNullOrWhiteSpace(Model.PromotionId);
    decimal originalTotal = Model.OriginalTotal ?? Model.TotalPrice ?? 0;
    decimal payableAmount = Model.TotalPrice ?? 0;
    decimal discountAmount = hasPromotion ? (originalTotal - payableAmount) : 0;
    
    var originalTotalText = originalTotal.ToString("#,0") + " VNĐ";
    var discountAmountText = discountAmount.ToString("#,0") + " VNĐ";
    var totalPriceText = payableAmount.ToString("#,0") + " VNĐ";
    
    var statusText = StatusText(Model.Status);
    var createdAtText = Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A";
    var updatedAtText = Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A";
    var staffIdText = string.IsNullOrWhiteSpace(Model.StaffId) ? "N/A" : Model.StaffId;
    var promotionIdText = string.IsNullOrWhiteSpace(Model.PromotionId) ? "N/A" : Model.PromotionId;
    var paymentMethodIdText = string.IsNullOrWhiteSpace(Model.PaymentMethodId) ? "N/A" : Model.PaymentMethodId;
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" style="border-radius:14px;margin-bottom:12px;">
        @TempData["Error"]
    </div>
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-file-invoice"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                @if (!isPaid)
                {
                    <form asp-action="Delete" asp-route-id="@Model.InvoiceId" method="post" class="m-0 d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="btn btn-outline-light-rounded btn-sweep px-3"
                                style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap; border-color:rgba(248,113,113,.65)!important;"
                                onclick="return confirm('Xoá hóa đơn này?');">
                            <i class="fa-solid fa-trash-can"></i> Xoá
                        </button>
                    </form>
                }
            </div>
        </div>

        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                Thông tin hóa đơn
                <span class="ms-2 role-chip" style="cursor:default;">
                    <i class="fa-solid fa-layer-group"></i> @invoiceType
                </span>
            </div>

            <div class="admin-user-detail-grid">
                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-hashtag"></i> Mã hóa đơn</div>
                    <div class="admin-user-detail-value">@invoiceIdText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-user"></i> Mã khách hàng</div>
                    <div class="admin-user-detail-value">@customerIdText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-envelope"></i> Email</div>
                    <div class="admin-user-detail-value">@emailText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-phone"></i> Số điện thoại</div>
                    <div class="admin-user-detail-value">@phoneText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-ticket"></i> Tổng vé</div>
                    <div class="admin-user-detail-value">@totalTicketText</div>
                </div>

                @if (hasPromotion && discountAmount > 0)
                {
                    <div class="admin-user-detail-item">
                        <div class="admin-user-detail-label"><i class="fa-solid fa-money-bill"></i> Tổng tiền (gốc)</div>
                        <div class="admin-user-detail-value">@originalTotalText</div>
                    </div>

                    <div class="admin-user-detail-item">
                        <div class="admin-user-detail-label"><i class="fa-solid fa-tag"></i> Giảm giá</div>
                        <div class="admin-user-detail-value" style="color:#22c55e;">-@discountAmountText</div>
                    </div>

                    <div class="admin-user-detail-item">
                        <div class="admin-user-detail-label"><i class="fa-solid fa-money-check-alt"></i> Tổng cộng (phải trả)</div>
                        <div class="admin-user-detail-value" style="color:#fbbf24;font-weight:900;">@totalPriceText</div>
                    </div>
                }
                else
                {
                    <div class="admin-user-detail-item">
                        <div class="admin-user-detail-label"><i class="fa-solid fa-money-bill"></i> Tổng tiền</div>
                        <div class="admin-user-detail-value">@totalPriceText</div>
                    </div>
                }

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-toggle-on"></i> Trạng thái</div>
                    <div class="admin-user-detail-value">@statusText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-calendar-plus"></i> Ngày tạo</div>
                    <div class="admin-user-detail-value">@createdAtText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-calendar-check"></i> Ngày cập nhật</div>
                    <div class="admin-user-detail-value">@updatedAtText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-user-tie"></i> Nhân viên</div>
                    <div class="admin-user-detail-value">@staffIdText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-gift"></i> Khuyến mãi</div>
                    <div class="admin-user-detail-value">@promotionIdText</div>
                </div>

                <div class="admin-user-detail-item wide">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-credit-card"></i> Phương thức thanh toán</div>
                    <div class="admin-user-detail-value">@paymentMethodIdText</div>
                </div>
            </div>

        </div>
    </div>
</div>

