@model IEnumerable<CinemaS.Models.ViewModels.InvoiceIndexVM>

@{
    ViewData["Title"] = "Quản lý Hóa Đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 8);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var totalItems = (int)(ViewBag.TotalItems ?? 0);

    var stt = (page - 1) * pageSize;
}


<style>
    .page-invoice-index {
        padding: 26px 0 60px;
    }

    .invoice-index-header h1 {
        font-weight: 900;
        font-size: 24px;
        margin-bottom: 4px;
        color: var(--text);
    }

    .invoice-index-header small {
        color: var(--muted);
        font-size: 13px;
    }

    .invoice-index-card {
        background: radial-gradient(circle at 0 0, rgba(59,130,246,.32), transparent 60%), radial-gradient(circle at 100% 0, rgba(124,58,237,.28), transparent 60%), #020617;
        border-radius: 24px;
        border: 1px solid rgba(148,163,255,.55);
        box-shadow: 0 22px 60px rgba(15,23,42,.95);
        overflow: hidden;
    }

    .invoice-index-topbar {
        padding: 14px 18px 10px;
        border-bottom: 1px solid rgba(148,163,255,.35);
        background: radial-gradient(circle at 0 0, rgba(15,23,42,.96), rgba(2,6,23,1));
    }

    .filter-label {
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: .08em;
        color: #c7d2fe;
        margin-bottom: 4px;
    }

    .filter-input {
        background: rgba(15,23,42,.96);
        border-radius: 999px;
        border: 1px solid var(--line);
        color: var(--text);
        font-size: 13px;
        padding-inline: 14px;
    }

        .filter-input::placeholder {
            color: var(--muted);
            font-size: 12px;
        }

        .filter-input:focus {
            border-color: var(--indigo);
            box-shadow: 0 0 0 .12rem rgba(59,92,204,.55);
            background: rgba(15,23,42,1);
            color: var(--text);
        }

    .filter-btn-main {
        border-radius: 999px;
        padding-inline: 20px;
        font-weight: 700;
    }

    .filter-btn-reset {
        border-radius: 999px;
        border-color: var(--line);
        color: var(--muted);
        background: rgba(15,23,42,.98);
        width: 40px;
    }

        .filter-btn-reset:hover {
            background: rgba(30,64,175,.9);
            border-color: rgba(129,140,248,1);
            color: #fff;
        }

    .invoice-index-table-wrap {
        padding: 0;
    }

    .admin-table {
        width: 100%;
        margin: 0;
        border-collapse: collapse;
        color: var(--text);
        font-size: 13px;
        table-layout: fixed;
    }

        .admin-table th.col-status,
        .admin-table td.col-status {
            overflow: visible !important;
            text-overflow: clip !important;
            white-space: nowrap !important;
        }


        .admin-table th.col-stt,
        .admin-table td.col-stt {
            text-overflow: clip; /* bỏ ... */
            overflow: visible;
        }


        .admin-table thead {
            background: linear-gradient(135deg, #4f46e5, #7c3aed);
        }

        .admin-table th,
        .admin-table td {
            padding: 12px 14px;
            border-bottom: 1px solid rgba(15,23,42,.9);
            vertical-align: middle;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .admin-table th {
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: .12em;
            color: #e0e7ff;
        }

        .admin-table tbody tr:nth-child(even) td {
            background: rgba(15,23,42,.97);
        }

        .admin-table tbody tr:nth-child(odd) td {
            background: rgba(15,23,42,.93);
        }

        .admin-table tbody tr:hover td {
            background: rgba(37,99,235,.40);
        }

    .badge-paid,
    .badge-unpaid {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 11px;
        font-weight: 700;
        white-space: nowrap;
    }

    .badge-paid {
        background: rgba(16,185,129,.14);
        border: 1px solid rgba(16,185,129,.7);
        color: #22c55e;
    }

    .badge-unpaid {
        background: rgba(245,158,11,.14);
        border: 1px solid rgba(245,158,11,.7);
        color: #fbbf24;
    }

    .admin-actions {
        display: inline-flex;
        gap: 6px;
        justify-content: flex-end;
    }

    .admin-icon-btn {
        width: 32px;
        height: 32px;
        border-radius: 999px;
        border: 1px solid rgba(148,163,255,.50);
        background: rgba(15,23,42,.98);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: var(--text);
        text-decoration: none;
        font-size: 13px;
        padding: 0;
    }

        .admin-icon-btn:hover {
            background: rgba(59,130,246,.95);
            border-color: rgba(129,140,248,1);
            color: #fff;
        }

        .admin-icon-btn.danger {
            border-color: rgba(248,113,113,.7);
            color: #fecaca;
        }

            .admin-icon-btn.danger:hover {
                background: #ef4444;
                color: #fff;
            }

    @@media (max-width: 991.98px) {
        .invoice-index-card {
            border-radius: 18px;
        }

        .invoice-index-table-wrap {
            overflow-x: auto;
        }

        .admin-table {
            min-width: 980px;
        }
    }
    /* =========================
       PAGINATION (ADD)
       ========================= */
    .invoice-pager {
        padding: 14px 18px 18px;
        display: flex;
        justify-content: flex-end;
        gap: 8px;
        flex-wrap: wrap;
        border-top: 1px solid rgba(148,163,255,.20);
        background: radial-gradient(circle at 0 0, rgba(15,23,42,.92), rgba(2,6,23,1));
    }

    .invoice-page-btn {
        min-width: 40px;
        height: 38px;
        padding: 0 14px;
        border-radius: 999px;
        border: 1px solid rgba(148,163,255,.45);
        background: rgba(15,23,42,.88);
        color: var(--text);
        font-weight: 800;
        font-size: 13px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        box-shadow: 0 10px 24px rgba(15,23,42,.75);
    }

        .invoice-page-btn:hover {
            filter: brightness(1.08);
            color: #fff;
        }

        .invoice-page-btn.is-active {
            background: linear-gradient(120deg, var(--indigo), var(--purple));
            border-color: transparent;
            color: #fff;
        }

        .invoice-page-btn.is-disabled {
            opacity: .45;
            pointer-events: none;
        }
    /* loại hóa đơn (icon) */
    .badge-type {
        width: 34px;
        height: 34px;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(148,163,255,.45);
        background: rgba(15,23,42,.92);
        color: #e5e7eb;
    }

        .badge-type.double i + i {
            margin-left: 6px;
        }

    /* trạng thái: chỉ "Thanh toán" + icon */
    .badge-pay-ok,
    .badge-pay-warn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 11px;
        font-weight: 800;
        white-space: nowrap;
    }

    .badge-pay-ok {
        background: rgba(16,185,129,.12);
        border: 1px solid rgba(16,185,129,.75);
        color: #22c55e;
    }

    .badge-pay-warn {
        background: rgba(245,158,11,.12);
        border: 1px solid rgba(245,158,11,.75);
        color: #fbbf24;
    }

</style>

<div class="container page-invoice-index">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="invoice-index-header">
            <h1><i class="fa-solid fa-file-invoice-dollar me-2"></i>Quản lý hóa đơn</h1>
            <small>Tổng: @(ViewBag.TotalItems ?? 0) hóa đơn</small>
        </div>

        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-light-rounded btn-sweep px-3" style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:700; white-space:nowrap;">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="invoice-index-card">
        <!-- TOPBAR: TÌM KIẾM + LỌC NGÀY -->
        <div class="admin-toolbar">
            <form method="get" class="admin-search-shell d-flex gap-2 align-items-center" asp-action="Index">
                <div class="input-group admin-search-compact">
                    <input type="text"
                           name="search"
                           value="@(ViewBag.Search ?? string.Empty)"
                           class="form-control admin-search-input"
                           placeholder="Tên khách, email hoặc số điện thoại..." />
                    <button class="admin-search-btn" type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>

                <input type="date"
                       name="fromDate"
                       value="@(ViewBag.FromDate ?? string.Empty)"
                       class="form-control admin-role-filter" />

                <input type="date"
                       name="toDate"
                       value="@(ViewBag.ToDate ?? string.Empty)"
                       class="form-control admin-role-filter" />

                <select name="type" class="form-select admin-role-filter">
                    @{
                        var type = (string)(ViewBag.Type ?? "");
                    }
                    <option value="" selected="@(string.IsNullOrEmpty(type))">Tất cả</option>
                    <option value="ticket" selected="@(type == "ticket")">Hóa đơn vé</option>
                    <option value="snack" selected="@(type == "snack")">Hóa đơn đồ ăn</option>
                </select>

                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-filter me-1"></i> Lọc
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-xmark"></i>
                </a>
            </form>
        </div>

        <!-- BẢNG -->
        <div class="invoice-index-table-wrap">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th class="col-stt" style="width:60px;">STT</th>
                        <th>Tên khách</th>
                        <th>Email</th>
                        <th style="width:150px;">Số điện thoại</th>
                        <th style="width:170px;">Ngày tạo</th>
                        <th style="width:140px;">Tổng tiền</th>
                        <th style="width:70px; text-align:center;">Loại</th>
                        <th class="col-status" style="width:120px;">Trạng thái</th>
                        <th style="width:150px;" class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="9" class="text-center py-4" style="color:var(--muted);">
                                Không có hóa đơn nào.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            stt++;
                            <tr>
                                <td class="col-stt">@stt</td>
                                <td>@(item.CustomerName ?? "N/A")</td>
                                <td>@(item.Email ?? "N/A")</td>
                                <td>@(item.PhoneNumber ?? "N/A")</td>
                                <td>@(item.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                <td>@item.TotalPrice.ToString("#,0") đ</td>
                                <td style="text-align:center;">
                                   
                                    @if (item.HasTickets && item.HasSnacks)
                                    {
                                        <span class="badge-type double" title="Vé + Đồ ăn">
                                            <i class="fa-solid fa-ticket"></i>
                                            <i class="fa-solid fa-utensils"></i>
                                        </span>
                                    }
                                    else if (item.HasTickets)
                                    {
                                        <span class="badge-type" title="Hóa đơn vé">
                                            <i class="fa-solid fa-ticket"></i>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge-type" title="Hóa đơn đồ ăn">
                                            <i class="fa-solid fa-utensils"></i>
                                        </span>
                                    }
                                </td>

                                <td class="col-status">
                                    @if (item.Status == 1)
                                    {
                                        <span class="badge-pay-ok">
                                            <i class="fa-solid fa-check"></i>
                                            Thanh toán
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge-pay-warn">
                                            <i class="fa-solid fa-xmark"></i>
                                            Thanh toán
                                        </span>
                                    }
                                </td>


                                <td class="text-end">
                                    <div class="admin-actions">
                                        <a asp-action="Details"
                                           asp-route-id="@item.InvoiceId"
                                           class="admin-icon-btn"
                                           title="Xem chi tiết">
                                            <i class="fa-regular fa-eye"></i>
                                        </a>

                                        <form asp-action="Delete"
                                              asp-route-id="@item.InvoiceId"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Xóa hóa đơn này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="admin-icon-btn danger"
                                                    title="Xóa">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        @if (totalPages > 1)
        {
            <div class="invoice-pager">
                @{
                    var s = (string)(ViewBag.Search ?? "");
                    var fd = (string)(ViewBag.FromDate ?? "");
                    var td = (string)(ViewBag.ToDate ?? "");
                    var t = (string)(ViewBag.Type ?? "");
                }


                <!-- Prev -->
                <a class="invoice-page-btn @(page <= 1 ? "is-disabled" : "")"
                   asp-action="Index"
                   asp-route-page="@(page - 1)"
                   asp-route-search="@s"
                   asp-route-fromDate="@fd"
                   asp-route-toDate="@td"
                   asp-route-type="@t">
                    <i class="fa-solid fa-chevron-left"></i>
                </a>

                <!-- Numbers -->
                @for (int p = 1; p <= totalPages; p++)
                {
                    <a class="invoice-page-btn @(p == page ? "is-active" : "")"
                       asp-action="Index"
                       asp-route-page="@p"
                       asp-route-search="@s"
                       asp-route-fromDate="@fd"
                       asp-route-toDate="@td"
                       asp-route-type="@t">
                        @p
                    </a>
                }

                <!-- Next -->
                <a class="invoice-page-btn @(page >= totalPages ? "is-disabled" : "")"
                   asp-action="Index"
                   asp-route-page="@(page + 1)"
                   asp-route-search="@s"
                   asp-route-fromDate="@fd"
                   asp-route-toDate="@td"
                   asp-route-type="@t">
                    <i class="fa-solid fa-chevron-right"></i>
                </a>
            </div>
        }

    </div>
</div>
