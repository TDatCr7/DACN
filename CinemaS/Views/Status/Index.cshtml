@model IEnumerable<CinemaS.Models.Status>

@{
    ViewData["Title"] = "Quản lý Trạng Thái";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="fa-solid fa-circle-info"></i> Quản lý Trạng Thái</h1>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus-circle"></i> Tạo mới
            </a>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="admin-table-wrap">
        <table class="table admin-table align-middle">
            <thead>
                <tr>
                    <th><i class="fa-solid fa-tag"></i>Tên trạng thái</th>
                    <th><i class="fa-solid fa-align-left"></i>Mô tả</th>
                    <th style="text-align:right;"><i class="fa-solid fa-ellipsis-vertical"></i>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center admin-text-muted py-4">
                            Không có trạng thái nào.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Name</strong></td>
                            <td class="admin-text-muted">@(item.Description ?? "N/A")</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.StatusId" 
                                   class="admin-icon-btn" title="Chỉnh sửa">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.StatusId" 
                                   class="admin-icon-btn admin-icon-btn-danger" title="Xóa">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>
