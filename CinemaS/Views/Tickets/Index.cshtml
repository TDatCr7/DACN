@model IEnumerable<CinemaS.Models.Tickets>

@{
    ViewData["Title"] = "Quản lý Vé";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var page = (int)(ViewBag.Page ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var totalItems = (int)(ViewBag.TotalItems ?? 0);
}


<link rel="stylesheet" href="~/css/management.css" />
<style>
    .ticket-pager {
        display: flex;
        justify-content: flex-end;
        gap: 8px;
        flex-wrap: wrap;
        margin-top: 18px;
    }

    .ticket-page-btn {
        min-width: 40px;
        height: 38px;
        padding: 0 14px;
        border-radius: 999px;
        border: 1px solid rgba(148,163,255,.45);
        background: rgba(15,23,42,.88);
        color: #e9ecf6;
        font-weight: 800;
        font-size: 13px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
    }

        .ticket-page-btn:hover {
            filter: brightness(1.08);
            color: #fff;
        }

        .ticket-page-btn.is-active {
            background: linear-gradient(120deg, var(--indigo), var(--purple));
            border-color: transparent;
            color: #fff;
        }

        .ticket-page-btn.is-disabled {
            opacity: .45;
            pointer-events: none;
        }
</style>

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="fas fa-ticket-alt"></i> Quản lý Vé</h1>
        <div class="d-flex gap-2">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search & Filter Box -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" id="filterForm">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label text-white"><i class="fas fa-search"></i> Tìm kiếm</label>
                        <div class="input-group search-box">
                            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Mã vé, mã hóa đơn, mã ghế, loại vé..." />
                            <button type="submit" class="btn btn-outline-secondary"><i class="fas fa-search"></i></button>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label text-white"><i class="fas fa-calendar-alt"></i> Từ ngày</label>
                        <input type="date" name="fromDate" value="@ViewData["FromDate"]" class="form-control" onchange="this.form.submit()" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label text-white"><i class="fas fa-calendar-check"></i> Đến ngày</label>
                        <input type="date" name="toDate" value="@ViewData["ToDate"]" class="form-control" onchange="this.form.submit()" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label text-white"><i class="fas fa-filter"></i> Trạng thái</label>
                        @{
                            var currentStatus = ViewData["StatusFilter"]?.ToString();
                        }
                        <select name="statusFilter" class="form-control" onchange="this.form.submit()">
                            <option value="">Tất cả</option>
                            @if (currentStatus == "0") {
                                <option value="0" selected>Đang chờ</option>
                            } else {
                                <option value="0">Đang chờ</option>
                            }
                            @if (currentStatus == "1") {
                                <option value="1" selected>Đã thanh toán</option>
                            } else {
                                <option value="1">Đã thanh toán</option>
                            }
                            @if (currentStatus == "2") {
                                <option value="2" selected>Đã hủy</option>
                            } else {
                                <option value="2">Đã hủy</option>
                            }
                            @if (currentStatus == "3") {
                                <option value="3" selected>Hết hạn</option>
                            } else {
                                <option value="3">Hết hạn</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()) || !string.IsNullOrEmpty(ViewData["FromDate"]?.ToString()) || !string.IsNullOrEmpty(ViewData["ToDate"]?.ToString()) || !string.IsNullOrEmpty(ViewData["StatusFilter"]?.ToString()))
                        {
                            <a href="@Url.Action("Index")" class="btn btn-outline-danger"><i class="fas fa-times"></i> Xóa bộ lọc</a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Table - sử dụng admin-table-wrap và admin-table -->
    <div class="admin-table-wrap">
        <table class="table admin-table align-middle">
            <thead>
                <tr>
                    <th><i class="fa-solid fa-tag"></i>Mã vé</th>
                    <th><i class="fa-solid fa-file-invoice"></i>Hóa đơn</th>
                    <th><i class="fa-solid fa-film"></i>Suất chiếu</th>
                    <th><i class="fa-solid fa-couch"></i>Ghế</th>
                    <th><i class="fa-solid fa-ticket"></i>Loại vé</th>
                    <th><i class="fa-solid fa-money-bill"></i>Giá vé</th>
                    <th><i class="fa-solid fa-calendar"></i>Ngày tạo</th>
                    <th style="text-align:right;"><i class="fa-solid fa-ellipsis-vertical"></i>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var ticket in Model)
                    {
                        <tr>
                            <td><strong>@ticket.TicketId</strong></td>
                            <td>@ticket.InvoiceId</td>
                            <td>@ticket.ShowTimeId</td>
                            <td>@ticket.SeatId</td>
                            <td>@ticket.TicketTypeId</td>
                            <td class="text-end" style="color: #fbbf24; font-weight: 700;">@(ticket.Price?.ToString("N0") ?? "0") đ</td>
                            <td>@ticket.CreatedBooking?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-end">
                                <!-- XEM CHI TIẾT -->
                                <a asp-controller="Tickets"
                                   asp-action="Details"
                                   asp-route-id="@ticket.TicketId"
                                   class="admin-icon-btn"
                                   title="Xem chi tiết">
                                    <i class="fa-regular fa-eye"></i>
                                </a>

                                <!-- XÓA -->
                                <a asp-controller="Tickets"
                                   asp-action="Delete"
                                   asp-route-id="@ticket.TicketId"
                                   class="admin-icon-btn admin-icon-btn-danger"
                                   title="Xóa">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center admin-text-muted py-4">
                            <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                            <strong>Không tìm thấy vé nào</strong>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (totalPages > 1)
    {
        <div class="ticket-pager">
            <!-- Prev -->
            <a class="ticket-page-btn @(page <= 1 ? "is-disabled" : "")"
               asp-action="Index"
               asp-route-page="@(page - 1)"
               asp-route-searchString="@ViewData["CurrentFilter"]"
               asp-route-fromDate="@ViewData["FromDate"]"
               asp-route-toDate="@ViewData["ToDate"]"
               asp-route-statusFilter="@ViewData["StatusFilter"]">
                <i class="fa-solid fa-chevron-left"></i>
            </a>

            @for (int p = 1; p <= totalPages; p++)
            {
                <a class="ticket-page-btn @(p == page ? "is-active" : "")"
                   asp-action="Index"
                   asp-route-page="@p"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-fromDate="@ViewData["FromDate"]"
                   asp-route-toDate="@ViewData["ToDate"]"
                   asp-route-statusFilter="@ViewData["StatusFilter"]">
                    @p
                </a>
            }

            <!-- Next -->
            <a class="ticket-page-btn @(page >= totalPages ? "is-disabled" : "")"
               asp-action="Index"
               asp-route-page="@(page + 1)"
               asp-route-searchString="@ViewData["CurrentFilter"]"
               asp-route-fromDate="@ViewData["FromDate"]"
               asp-route-toDate="@ViewData["ToDate"]"
               asp-route-statusFilter="@ViewData["StatusFilter"]">
                <i class="fa-solid fa-chevron-right"></i>
            </a>
        </div>
    }

    <div class="d-flex justify-content-between mt-4">
        @if (Model != null && Model.Any())
        {
            <div class="text-white">
                <i class="fas fa-info-circle"></i>
                <strong>Tổng số vé: @totalItems</strong>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(() => document.querySelectorAll('.alert').forEach(a => a.style.display = 'none'), 5000);
    </script>
}
