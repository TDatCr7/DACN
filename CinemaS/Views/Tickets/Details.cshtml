@model CinemaS.Models.Tickets
@using Microsoft.EntityFrameworkCore
@using CinemaS.Models
@inject CinemaS.Models.CinemaContext Db

@{
    Layout = "_Layout";
    ViewData["Title"] = "Chi tiết vé";

    var t = Model;

    var inv = await Db.Invoices.AsNoTracking().FirstOrDefaultAsync(x => x.InvoiceId == t.InvoiceId);
    var st = await Db.ShowTimes.AsNoTracking().FirstOrDefaultAsync(x => x.ShowTimeId == t.ShowTimeId);
    var mv = st != null ? await Db.Movies.AsNoTracking().FirstOrDefaultAsync(x => x.MoviesId == st.MoviesId) : null;
    var room = st != null ? await Db.CinemaTheaters.AsNoTracking().FirstOrDefaultAsync(x => x.CinemaTheaterId == st.CinemaTheaterId) : null;

    MovieTheaters theater = null;
    if (room != null && !string.IsNullOrWhiteSpace(room.MovieTheaterId))
    {
        theater = await Db.MovieTheaters.AsNoTracking()
            .FirstOrDefaultAsync(x => x.MovieTheaterId == room.MovieTheaterId);
    }

    var seat = await Db.Seats.AsNoTracking().FirstOrDefaultAsync(x => x.SeatId == t.SeatId);
    var ticketType = await Db.TicketTypes.AsNoTracking().FirstOrDefaultAsync(x => x.TicketTypeId == t.TicketTypeId);
    var seatType = seat != null
        ? await Db.SeatTypes.AsNoTracking().FirstOrDefaultAsync(x => x.SeatTypeId == seat.SeatTypeId)
        : null;

    var user = inv != null
        ? await Db.Users.AsNoTracking().FirstOrDefaultAsync(x => x.UserId == inv.CustomerId)
        : null;

    string StatusText(byte? status) => status switch
    {
        1 => "Chưa thanh toán",
        2 => "Đã thanh toán",
        3 => "Đã hủy",
        4 => "Hết hạn",
        _ => "Không xác định"
    };

    var ticketIdText = t.TicketId ?? "N/A";
    var invoiceIdText = t.InvoiceId ?? "N/A";
    var priceText = t.Price.HasValue ? $"{t.Price.Value:N0} VNĐ" : "N/A";
    var statusText = StatusText(t.Status);
    var seatLabel = seat != null ? $"{seat.RowIndex}{seat.ColumnIndex}" : (t.SeatId ?? "N/A");
    var seatTypeName = seatType?.Name ?? "N/A";
    var ticketTypeName = ticketType?.Name ?? "N/A";
    var createdAtText = t.CreatedBooking?.ToString("dd/MM/yyyy HH:mm") ?? "N/A";
    var expireText = t.Expire?.ToString("dd/MM/yyyy HH:mm") ?? "N/A";
    var movieTitle = mv?.Title ?? "N/A";
    var roomName = room?.Name ?? "N/A";
    var theaterName = theater?.Name ?? "N/A";
    var showDateText = st?.ShowDate?.ToString("dd/MM/yyyy") ?? "N/A";
    var startTimeText = st?.StartTime?.ToString("HH:mm") ?? "N/A";
    var userName = user?.FullName ?? "Khách lẻ";
    var email = inv?.Email ?? user?.Email ?? "N/A";
    var phone = inv?.PhoneNumber ?? user?.PhoneNumber ?? "N/A";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" style="border-radius:14px;margin-bottom:12px;">
        @TempData["Error"]
    </div>
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-ticket"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <a asp-action="Edit" asp-route-id="@Model.TicketId"
                   class="btn btn-primary btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-pen"></i> Sửa
                </a>

                <form asp-action="Delete" asp-route-id="@Model.TicketId" method="post" class="m-0 d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-outline-light-rounded btn-sweep px-3"
                            style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap; border-color:rgba(248,113,113,.65)!important;"
                            onclick="return confirm('Xoá vé này?');">
                        <i class="fa-solid fa-trash-can"></i> Xoá
                    </button>
                </form>
            </div>
        </div>

        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                Thông tin vé
            </div>

            <div class="admin-user-detail-grid">
                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-hashtag"></i> Mã vé</div>
                    <div class="admin-user-detail-value">@ticketIdText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-file-invoice"></i> Hóa đơn</div>
                    <div class="admin-user-detail-value">@invoiceIdText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-money-bill"></i> Giá vé</div>
                    <div class="admin-user-detail-value">@priceText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-toggle-on"></i> Trạng thái</div>
                    <div class="admin-user-detail-value">@statusText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-chair"></i> Ghế</div>
                    <div class="admin-user-detail-value">@seatLabel</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-couch"></i> Loại ghế</div>
                    <div class="admin-user-detail-value">@seatTypeName</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-ticket"></i> Loại vé</div>
                    <div class="admin-user-detail-value">@ticketTypeName</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-calendar-plus"></i> Ngày tạo</div>
                    <div class="admin-user-detail-value">@createdAtText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-calendar-xmark"></i> Hết hạn</div>
                    <div class="admin-user-detail-value">@expireText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-film"></i> Phim</div>
                    <div class="admin-user-detail-value">@movieTitle</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-door-open"></i> Phòng</div>
                    <div class="admin-user-detail-value">@roomName</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-building"></i> Rạp</div>
                    <div class="admin-user-detail-value">@theaterName</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-calendar"></i> Ngày chiếu</div>
                    <div class="admin-user-detail-value">@showDateText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-clock"></i> Giờ bắt đầu</div>
                    <div class="admin-user-detail-value">@startTimeText</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-user"></i> Khách hàng</div>
                    <div class="admin-user-detail-value">@userName</div>
                </div>

                <div class="admin-user-detail-item">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-envelope"></i> Email</div>
                    <div class="admin-user-detail-value">@email</div>
                </div>

                <div class="admin-user-detail-item wide">
                    <div class="admin-user-detail-label"><i class="fa-solid fa-phone"></i> Điện thoại</div>
                    <div class="admin-user-detail-value">@phone</div>
                </div>
            </div>

        </div>
    </div>
</div>
