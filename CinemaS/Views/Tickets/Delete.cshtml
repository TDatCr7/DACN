@model CinemaS.Models.Tickets

@{
    ViewData["Title"] = "Xóa Vé";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/delete.css" />

<div class="container mt-4">
	<div class="delete-container">
		<h1 class="mb-4 text-danger">
			<i class="fas fa-exclamation-triangle"></i> Xác Nhận Xóa Vé
		</h1>

		<div class="warning-box">
			<h5><i class="fas fa-exclamation-triangle"></i> Cảnh báo!</h5>
			<p class="mb-0">
				Bạn có chắc chắn muốn xóa vé này? Hành động này không thể hoàn tác!
			</p>
		</div>

		<h4 class="mb-3">Thông tin vé:</h4>

		<div class="info-grid">
			<div class="info-label">Mã Vé:</div>
			<div class="info-value"><strong>@Model.TicketId</strong></div>

			<div class="info-label">Trạng thái:</div>
			<div class="info-value">@Model.Status</div>

			<div class="info-label">Giá:</div>
			<div class="info-value">@Model.Price VNĐ</div>

			<div class="info-label">Ngày đặt:</div>
			<div class="info-value">@Model.CreatedBooking?.ToString("dd/MM/yyyy HH:mm")</div>

			<div class="info-label">Hết hạn:</div>
			<div class="info-value">@Model.Expire?.ToString("dd/MM/yyyy HH:mm")</div>
		</div>

		<div class="d-flex justify-content-between mt-4">
			<button type="button" class="btn btn-secondary" onclick="history.back()">
				<i class="fas fa-arrow-left"></i> Quay lại
			</button>

			<form asp-action="Delete" method="post" style="display: inline;" onsubmit="return confirmDelete();">
				<input type="hidden" asp-for="TicketId" />
				<button type="submit" class="btn btn-danger">
					<i class="fas fa-trash"></i> Xóa
				</button>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		function confirmDelete() {
			return confirm('Bạn có CHẮC CHẮN muốn xóa vé này không?');
		}
	</script>
}
