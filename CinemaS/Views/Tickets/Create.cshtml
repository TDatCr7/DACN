@model CinemaS.Models.Tickets
@{
    ViewData["Title"] = "Thêm vé";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        @* ONE PANEL: header + content inside, title left, remove subnote *@
        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-ticket"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="ticketCreateForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-circle-plus me-1"></i> Tạo
                </button>
            </div>
        </div>

        @* divider like "island" but not separated *@
        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">

            <form asp-action="Create" method="post" id="ticketCreateForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                    Thông tin vé
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="TicketId" class="form-label">Mã vé</label>
                        <input asp-for="TicketId" class="form-control" />
                        <span asp-validation-for="TicketId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="InvoiceId" class="form-label">Mã hóa đơn</label>
                        <select asp-for="InvoiceId" class="form-control" asp-items="ViewBag.InvoiceId"></select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TicketTypeId" class="form-label">Loại vé</label>
                        <select asp-for="TicketTypeId" class="form-control" asp-items="ViewBag.TicketTypeId"></select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ShowTimeId" class="form-label">Suất chiếu</label>
                        <select asp-for="ShowTimeId" class="form-control" asp-items="ViewBag.ShowTimeId"></select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SeatId" class="form-label">Ghế</label>
                        <select asp-for="SeatId" class="form-control" asp-items="ViewBag.SeatId"></select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label">Trạng thái</label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label">Giá</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CreatedBooking" class="form-label">Thời gian đặt</label>
                        <input asp-for="CreatedBooking" class="form-control" />
                        <span asp-validation-for="CreatedBooking" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Expire" class="form-label">Hết hạn</label>
                        <input asp-for="Expire" class="form-control" />
                        <span asp-validation-for="Expire" class="text-danger"></span>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
