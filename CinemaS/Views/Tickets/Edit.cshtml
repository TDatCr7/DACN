@model CinemaS.Models.Tickets

@{
    ViewData["Title"] = "Chỉnh sửa vé";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-shell admin-form-wrap">
    <div class="admin-panel">

        <div class="admin-toolbar" style="margin-bottom:10px;">
            <div style="display:flex;align-items:center;gap:10px;">
                <h1 style="margin:0;font-weight:900;">
                    <i class="fa-solid fa-ticket"></i>
                    @ViewData["Title"]
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-light-rounded btn-sweep px-3"
                   style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:800; white-space:nowrap;">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <button type="submit"
                        form="ticketEditForm"
                        class="btn btn-primary btn-sweep px-3"
                        style="border-radius:999px; padding:9px 20px; font-size:14px; font-weight:900; white-space:nowrap;">
                    <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                </button>
            </div>
        </div>

        <div style="height:1px;background:rgba(148,163,255,.18);margin:8px 0 14px;"></div>

        <div class="admin-form-card" style="background:transparent;border:none;box-shadow:none;padding:0;">
            <div class="mb-2" style="font-weight:900;color:#c7d2fe;letter-spacing:.3px;">
                Thông tin vé
            </div>

            <form asp-action="Edit" method="post" id="ticketEditForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TicketId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="InvoiceId" class="form-label">Hóa đơn</label>
                        <select asp-for="InvoiceId" class="form-select" asp-items="ViewBag.InvoiceId"></select>
                        <span asp-validation-for="InvoiceId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TicketTypeId" class="form-label">Loại vé</label>
                        <select asp-for="TicketTypeId" class="form-select" asp-items="ViewBag.TicketTypeId"></select>
                        <span asp-validation-for="TicketTypeId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ShowTimeId" class="form-label">Suất chiếu</label>
                        <select asp-for="ShowTimeId" class="form-select" asp-items="ViewBag.ShowTimeId"></select>
                        <span asp-validation-for="ShowTimeId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SeatId" class="form-label">Ghế</label>
                        <select asp-for="SeatId" class="form-select" asp-items="ViewBag.SeatId"></select>
                        <span asp-validation-for="SeatId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label">Trạng thái</label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label">Giá</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CreatedBooking" class="form-label">Thời gian đặt</label>
                        <input asp-for="CreatedBooking" class="form-control" />
                        <span asp-validation-for="CreatedBooking" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Expire" class="form-label">Hết hạn</label>
                        <input asp-for="Expire" class="form-control" />
                        <span asp-validation-for="Expire" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
